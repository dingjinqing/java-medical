/* 回到顶部 */

.back_top {
  width: 110rpx;
  height: 110rpx;
  position: fixed;
  right: 8rpx;
  color: #999;
  border-radius: 1000rpx;
  border: 1px solid #ddd;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999;
}

.back_top image {
  width: 35rpx;
  height: 15rpx;
}
.back_top1{
    top: 850rpx;
}
.back_top2{
    top: 980rpx;
}

