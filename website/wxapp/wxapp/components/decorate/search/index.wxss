@import "/css/iconfont.wxss";
.all_info{
  background: #fff;
  padding: 20rpx 0;
  position: relative;
}
.search{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-radius:14rpx;
  margin: 0rpx 20rpx;
  border:1px solid #eeeeee;
  background:#fff;
}
.search_sort{
  position: absolute;
  right: 26rpx;
  top: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search_sort image{
  width: 48rpx;
  height: 36rpx;
}
.search_sort text{
  font-size: 24rpx;
  color: #666;
  position: absolute;
  bottom: -20rpx;
}
.search-img{
  margin: auto 0 auto 20rpx;
}
.placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.search input{
  height: 100%;
  width: 600rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-left: 12rpx;
}