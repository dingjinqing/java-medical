/* 商品标签 */

.label-style1, .label-style3, .label-style4, .label-style43 {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 68rpx;
  height: 69rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  word-break: break-all;
  z-index: 3;
}

.label-style13 {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 72rpx;
  height: 74rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  word-break: break-all;
  z-index: 3;
}

.label-style2, .label-style23 {
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  width: 84rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  z-index: 3;
  border-radius: 90rpx;
  background: #f66;
  border: 6rpx solid rgba(255,255,255,0.2);
}

.label-style1 >text, .label-style13>text {
  color: white;
  font-size: 22rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  white-space: normal;
  line-height: 27rpx;
  padding-bottom: 4rpx;
}

.label-style23>text {
  color: white;
  font-size: 22rpx;
  padding-left: 0rpx !important;
  padding-right: 0rpx !important;
  line-height: 27rpx;
  white-space: normal;
  padding-bottom: 4rpx;
}

.label-style13>text {
  padding-left: 2rpx !important;
  padding-right: 2rpx !important;
  white-space: normal;
}

.label-style2>text {
  padding-bottom: 0rpx !important;
  padding-left: 14rpx;
  padding-right: 14rpx;
  color: white;
  font-size: 22rpx;
  line-height: 27rpx;
  white-space: normal;
  text-align: center;
}

.label-style3, .label-style33 {
  position: absolute;
  width: 40rpx !important;
  height: auto !important;
  border: 1px solid #f66;
  background: transparent;
  border-radius: 6rpx;
  top: 4rpx !important;
  left: 4rpx !important;
  white-space: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.label-style3>text, .label-style33>text {
  color: #f66;
  font-size: 22rpx;
  text-align: center;
  white-space: normal;
}

.label-style4, .label-style43 {
  height: 50rpx !important;
  width: auto !important;
  background: linear-gradient(left, #f66, #ff8585);
  background: -webkit-linear-gradient(left, #f66, #ff8585);
  background: -moz-linear-gradient(left, #f66, #ff8585);
  top: 0rpx;
  left: 0rpx;
  border-bottom-right-radius: 30rpx;
  line-height: 44rpx;
  float: left;
  z-index: 3;
}

.label-style4>text, .label-style43>text {
  color: white;
  font-size: 22rpx;
  white-space: normal;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.pin_flag {
  color: #f66;
  border: 1px solid #f66;
  padding: 0rpx 10rpx;
  height: 30rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  float: left;
  overflow: hidden;
  border-radius: 6rpx;
}

.van-ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.van-two-ellipsis{
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  margin-bottom: 10rpx;
  white-space: normal;
}
.hide{
  display: none;
}

.sell_out {
  position: absolute !important;
  width: 130rpx !important;
  height: 130rpx !important;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  float: none;
  z-index: 3;
}

.new_label_img{
  position: absolute !important;
  left: 0px;
  top: 0px;
  z-index: 2;
}
.sm_scale_img,{
  transform: scale(0.8);
  transform-origin: 0 0 ;
}
.three_scale_img{
  transform: scale(0.657);
  transform-origin: 0 0 ;
}
.big_scale_img{
  transform: scale(0.857);
  transform-origin: 0 0 ;
}
.left_scale_img{
   transform: scale(0.685);
  transform-origin: 0 0;
}