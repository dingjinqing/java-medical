.name-container{
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 0;
  padding-left: 25rpx;
  display: flex;
  align-items: center;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.name-container>view{
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  font-size: 30rpx;
}
.name-container>input{
  font-size: 30rpx;
  width: 490rpx;
}
.icon_name{
  margin-right: 15rpx;
  display: flex;
  align-items: center;
}
.icon_name image{
  width: 30rpx;
}
.name_title{
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}