

.lo_contents{
  width: 720rpx;
  height:260rpx;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
}
.lo_bg{
  width: 100%;
  height:260rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.left_word{
  position: absolute;
  left: 70rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  height: 260rpx;
  /* width: 290rpx; */
}
.top_word{
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.bottom_time{
  font-size: 22rpx;
  color: #fff;
}
.all_right{
  height: 220rpx;
  width: 120rpx;
  position: absolute;
  right: 34rpx;
  /* top: 60rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.all_right image{
  width: 70rpx;
  height: 45rpx;
}
.all_right view{
  color: #ee9035;
  font-size: 20rpx;
}
.bottom_tip{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 5rpx 0;
}