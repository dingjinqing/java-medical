/* pages1/presentchoose/presentchoose.wxss */
@import "../../css/iconfont.wxss";
@import '../../pages/packagesalelist/packagesalelist.wxss';
page{
  overflow-x: hidden;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.clearfix::after{
  contain: "";
  display: block;
  clear: both;
}
.main_container{
  height: auto;
  min-height: 940rpx;
  background: #fff;
  padding-bottom: 100rpx;
}
.search_area{
  height:70rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  border-radius:14rpx;
  margin:0 auto;
  margin-bottom:20rpx;
  background:#f5f5f5;
  width:700rpx;
}
.search_img{
  margin: auto 20rpx;
}
.search_area input{
  height:100%;
  width:600rpx;
  font-size:26rpx;
}
.fl_bottom{
  font-size: 26rpx;
}
.fl_top{
  font-size: 26rpx;
}
.fl_top text{
  font-size: 26rpx;
  font-weight: normal;
}
.goods_space{
  padding-top: 70rpx;
}
.radio_button {
  width: 70rpx;
  height: 180rpx;
  float: left;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.exclusive{
  position: absolute;
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color:#56381b;
  background: linear-gradient(left,#eed9ad ,#e7c38a);
  background: -webkit-linear-gradient(left,#eed9ad,#e7c38a);
  background: -moz-linear-gradient(left,#eed9ad,#e7c38a);
  bottom: 0rpx;
  font-size: 24rpx;
  z-index: 3;
}