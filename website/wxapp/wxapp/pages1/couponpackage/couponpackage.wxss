/* pages1/couponpackage/couponpackage.wxss */
page{
  width: 100%;
  background: -webkit-linear-gradient(left, #ff5666,#e6558e);
  background: -o-linear-gradient(left, #ff5666,#e6558e);
  background: -moz-linear-gradient(left, #ff5666,#e6558e);
  background: linear-gradient(left, #ff5666,#e6558e);
}
.common-footer .footer-text{
  background: inherit
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
button{
  border: none;
  border-radius: 0;
  padding: 0;
  margin: 0
}
button::after{
  border: none;
  border-radius: 0;
}
.main_container{
  width: 750rpx;
  margin: 0 auto;
  padding-bottom: 20rpx;
}
.cp_bg{
  position: absolute;
  width: 100%;
  height: 630rpx;
}
.cp_bg image{
  width: 100%;
  height: 100%
}
.cp_content{
  width: 750rpx;
  margin: 0 auto;
}
.cp_content .cp_title{
  font-size: 90rpx;
  color: #fff;
  text-align: center;
  padding-top: 110rpx;
  font-weight: bold;
  font-style: italic;
}
.cp_cou_list{
  background: rgba(255,255,255,0.5);
  width: 690rpx;
  margin: 0 auto;
  padding-bottom: 10px;
  margin-top: 550rpx;
  margin-bottom: 20rpx
}
.cl_title{
   height: 90rpx;
   width: 690rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}
.cl_hr{
  display:flex;
  align-items:center;
  height:40rpx;
}
.cl_hr image{
  height: 10rpx;
  width: 110rpx;
}
.cl_word{
  color: #fff;
  font-size: 28rpx;
  margin: 0 15rpx;
}
.cou_list{
  width: 640rpx;
  margin: 0 auto;
}
.each_cou{
  width: 640rpx;
  height: 220rpx;
  margin-bottom: 20rpx;
}
.ec_left{
  float: left;
  background: #fff;
  width: 210rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.cou_money{
  color: #f66;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}
.cou_money text{
  font-size: 48rpx;
}
.cou_price_limit{
  color: #999;
  font-size: 24rpx;
}
.ec_middle{
 width: 40rpx;
 height: 100%;
 float: left;
}
.ec_middle image{
  width: 100%;
  height: 100%;
}
.ec_right{
  width: 390rpx;
  height: 100%;
  background: #fff;
  float: left;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.cou_name{
  font-weight: bold;
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.cou_goods_limit{
  font-size: 24rpx;
  margin: 15rpx 0 10rpx;
}
.cou_goods_limit image{
  width: 15rpx;
  margin-left: 15rpx; 
  position: relative;
  top: 3rpx;
}
.cou_time{
  font-size: 24rpx;
  color: #999;
}
.send_rule{
  font-size: 24rpx;
  margin-bottom: 10rpx;
  width: 380rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.cou_num{
  position: absolute;
  right: -35rpx;
  top: 15rpx;
  background: #fead2d;
  width: 140rpx;
  font-size: 24rpx;
  color: #fff;
  transform: rotate(40deg);
  text-align: center;
  -ms-transform: rotate(40deg);
  -moz-transform: rotate(40deg);
  -webkit-transform: rotate(40deg);
  -o-transform: rotate(40deg);
}
.btn_some{
  width: 560rpx;
  height: 70rpx;
  line-height: 75rpx;
  text-align: center;
  color: #c93f0e;
  background: -webkit-linear-gradient(top, #ffd47b, #fcc02a);
  background: -o-linear-gradient(top, #ffd47b, #fcc02a);
  background: -moz-linear-gradient(top, #ffd47b, #fcc02a);
  background: linear-gradient(top, #ffd47b, #fcc02a);
  border-radius: 60rpx;
  font-weight: bold;
  font-size: 26rpx;
  margin: 30rpx auto 20rpx;
  border: none;
}
.btn_some::after{
  border: none;
  border-radius: 0
}
.cp_cou_rule{
  background: rgba(255,255,255,0.5);
  width: 640rpx;
  margin: 0 auto;
  padding: 40rpx 25rpx;
  color: #fff;
}
.rule_title{
  font-weight: bold;
}
.send_icons{
  position:absolute;
  right:45rpx;
  top:54rpx;
  border:2rpx solid #f66;
  color:#f66;
  font-size:24rpx;
  padding:5rpx 10rpx;
  border-radius:20rpx;
}
.buy_again{
  color: #fff;
  text-align: center;
  text-decoration: underline;
}




















