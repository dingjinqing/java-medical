/* pages/shopcheckout/shopcheckout.wxss */
page{
  background: #f5f5f5;
}
view,text,input{
  box-sizing: border-box; 
  font-size: 30rpx;
}
.header{
  padding: 20rpx 25rpx;
}
.header>view{
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 30rpx 15rpx;
  background: white;
  font-size: 30rpx;
}
.header>view input{
  float: right;
  text-align: right;
  font-size: 30rpx;
  width: 350rpx;
}
.header>view text{
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 30rpx;
}
.pay{
  background: white;
  padding-left: 25rpx;
  margin-bottom: 20rpx;
}
.pay_li{
  padding-right: 25rpx;
}
.fr{
  float: right;
}
.pay_li{
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eee
}
.pay_li:first-child{
  border: none;
}
.pay_check{
  width: 28rpx;
  margin-right: 18rpx;
  position: relative;
  top: 6rpx;
}
.coupon{
  padding-right: 28rpx;
  background-size: 15rpx 25rpx;
}
.score_fl{
  float: left;
  font-size: 30rpx;
}
.fl{
  float: left;
}
.score{
  float:left;
  height:40rpx;
  position: relative;
  top: 30rpx;
  margin-left: 20rpx;
}
.score input{
  height:40rpx;
  min-height: 40rpx;
  width:430rpx;
  position: absolute;
}
.pay_li::-webkit-scrollbar{
  width: 0;
  height: 0;
}
.account_color{
  color: #f66;
}
.text_area{
  position: relative;
  top: 25rpx;
}
.text_area input{
  width: 380rpx;
  text-align: right;
}
.footer{
  padding: 0;
  margin: 0 auto;
  width: 700rpx;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
}
.footer::after{
  border-radius: 0;
  border: none;
}
.footer>view{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  background: #f66;
}

.action_title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
}
.pro_close{
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}
.card_list{
  box-sizing: border-box;
  padding: 0 30rpx 24rpx;

}
.card_choose{
  float: left;
  width: 50rpx;
  height: 200rpx;
  line-height: 200rpx;
}
.card_choose image{
  width: 40rpx;
}
.card_info{
  padding-left: 60rpx;
  width: 100%;
}
.card_info>view{
  height: 200rpx;
  padding-left: 20rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10px;
  background: #E6CB96;
}
.card_info>view image{
  width: 90rpx;
  border-radius: 100%;
  margin-right: 20rpx;
  border: 1px solid #fff;
  height: 90rpx;
}
.card_new_de{
  display: flex;
  align-items: center
}
.card_infos{
  width: 440rpx;
}
.card_infos view{
  width: 440rpx;
  margin-bottom: 10rpx;
}
.card_offset{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.card_infos view:last-of-type{
  margin-bottom: 0;
  
}
.card_sure{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #f66;
  position: fixed;
  bottom: 0;
  font-size: 26rpx;
}
.look_detail{
  float: left;
  margin-left: 20rpx;
  color: #7381a9;
  font-size: 24rpx;
}
.to_look{
  margin-left: 10rpx;
  width: 26rpx;
}
.discount_detail{
  padding: 0rpx 25rpx 20rpx;
}
.discount_detail>view{
  background: #fff;
  border-radius: 5px;
  padding: 25rpx;
  font-size: 24rpx;
}
.discount_detail>view .clearfix{
  margin-top: 20rpx;
}
.discount_detail>view .clearfix:first-child{
  margin: 0;
}