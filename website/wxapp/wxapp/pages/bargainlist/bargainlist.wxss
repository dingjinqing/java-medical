/* pages/bargainlist/bargainlist.wxss */
page{
  background: #f5f5f5;
  overflow-x: hidden;
  font-family: Arial, Helvetica, sans-serif;
}
.clearfix{
  display: block;
  clear: both;
  content: "";
}
.all{
  padding-top: 100rpx;
}
.load_style{
    font-size: 24rpx;
  color: #666;
  width: 100%;
  padding: 15rpx 0;
  text-align: center
}
.nav_list{
  width: 750rpx;
  position: fixed;
  z-index: 999;
  top: 120rpx; 
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  padding-bottom: 0;
  background: #fff;
  margin-bottom: 20rpx;
}
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
   .nav_list{
     top: 180rpx;
   }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
   .nav_list{
     top: 155rpx;
   }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
    .nav_list{
     top: 155rpx;
   }
}
.nav_list view{
  font-size: 26rpx;
  color: #353535;
  flex: 1;
  padding-bottom: 20rpx;
  text-align: center
}
.nav_list .chooseed{
  color: #f66;
  border-bottom: 2rpx solid #f66;
}
.bar_order_list{
    background: #fff;
    font-size: 26rpx;
    color: #353535;
}
.each_orders{
  padding: 15rpx 20rpx;
  border-bottom: 2rpx solid #eee;
  height: 175rpx;
  overflow: hidden
}
.each_orders:last-of-type{
  border-bottom: 0
}
.each_orders .eo_left{
    width: 170rpx;
    height: 170rpx;
     border: 2rpx solid #eee; 
    float: left;
    margin-right: 20rpx;
}
.each_orders .eo_right{
  float: left;
  width: 515rpx;
  height: 170rpx;
   position: relative;
}
.each_orders .eo_right .r_goods_name{
  width: 515rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  position: absolute;
  top: 0;
}
.shengxiade{
  position: absolute;
  top: 50rpx;
  width: 100%;
}
.shengxiade .sheng_time{
  float: left;
  color: #f66;
  background: #fff1f0;
  padding: 10rpx;
}
.shengxiade .sheng_unit{
  color: #999;
  float: right;
  padding: 10rpx;
}
.brn_price{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
}
.brn_price view{
  float: left;
}
.zero{
  color: #f66;
  margin-right: 20rpx;
  font-size: 32rpx;
   height: 55rpx;
  line-height: 55rpx;
}
.zero text{
  font-size: 40rpx;
}
.shop_prices{
  color: #999;
   height: 55rpx;
  line-height: 55rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
}
.brn_price .btn_goon{
  float: right;
  height: 55rpx;
  background: linear-gradient(left,#f66,#ff8585);
  background: -webkit-linear-gradient(left,#f66,#ff8585);
  background: -moz-linear-gradient(left,#f66,#ff8585);
  color: #fff;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius:40rpx; 
}

.no_state{
  margin: 0 24rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}
.no_state image{
  width: 200rpx;
  margin: 360rpx 0 20rpx 0;
}


























