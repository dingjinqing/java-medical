/* pages/manualbarcode/manualbarcode.wxss */
page{
    background-color: #fff;
}
.barcode{
    width: 418rpx;
    height: 230rpx;
    display: block;
    margin: 60rpx auto 0;
}
.tips{
    display: block;
    text-align: center;
    font-size: 26rpx;
    color: #666;
}
.barcode_operate{
    width: 100%;
    margin-top: 60rpx;
}
.barcode_operate input,
.barcode_operate button{
    display: block;
    width: 520rpx;
    height: 80rpx;
    margin: 0 auto;
    border-radius: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
}
.barcode_operate input{
    background-color: #f5f5f5;
    text-align: center;
    color: #333
}
.barcode_operate input::placeholder{
    color: #999;
}
.barcode_operate button{
    background: linear-gradient(left,#ff9292,#ff6666);
    background: -webkit-linear-gradient(left,#ff9292,#ff6666);
    background: -moz-linear-gradient(left,#ff9292,#ff6666);
    background-color: #fff;
    margin-top: 20rpx;
    color: #fff;
}
.barcode_operate button::after{
    outline: 0;
    border: 0;
}
