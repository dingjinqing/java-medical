/* pages/packagesalelist/packagesalelist.wxss */
@import "../../css/iconfont.wxss";

page {
  overflow-x: hidden;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}

.fixed_area {
  width: 750rpx;
  background: #fff;
  position: fixed;
  top: 130rpx;
  z-index: 9;
}

@media (device-width:414px) and (-webkit-min-device-pixel-ratio:3.0) {
  /* 兼容iphone6 plus */

  .fixed_area {
    top: 120rpx;
  }
}

@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
  .fixed_area {
    top: 180rpx;
  }
}

@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  .fixed_area {
    top: 160rpx;
  }
}

@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
  .fixed_area {
    top: 160rpx;
  }
}

.clearfix::after {
  contain: "";
  display: block;
  clear: both;
}

.search_input {
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 14rpx;
  margin: 0 auto;
  background: #f5f5f5;
  width: 702rpx;
}

.search-img {
  margin: auto 20rpx;
}

.placeholder {
  font-size: 26rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search_input input {
  height: 100%;
  width: 600rpx;
  font-size: 26rpx;
}

.pro_tips {
  width: 710rpx;
  height: 70rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #f60;
  background: #fcf9dd;
}

.goods_group_tab {
  width: 750rpx;
  height: 100rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
}

.each_tab {
  flex: 1;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 15rpx;
}

.each_tab .normal {
  font-size: 26rpx;
  color: #666;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid #fff;
}

.each_tab .actives {
  font-size: 26rpx;
  color: #333;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid #f66;
  box-sizing: border-box;
}

.num_price {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  border-bottom: 2rpx solid #eee;
}

.num_price>view {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
}

.num_price .nomala .icon {
  display: none;
  width: 22rpx;
}

.num_price .pink_one {
  color: #f66;
}

.num_price .pink_one .icon {
  width: 22rpx;
}

.goods_space {
  width: 750rpx;
}

.each_goods_li {
  margin-left: 20rpx;
  width: 730rpx;
  border-bottom: 2rpx solid #eee;
  box-sizing: border-box;
  padding: 20rpx 0;
  padding-right: 20rpx;
}

.each_goods_li:last-of-type {
  border: none;
}

.each_goods_li .goods_left {
  float: left;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  position: relative;
}

.each_goods_li .goods_left image {
  height: 200rpx;
  width: 200rpx;
}

.each_goods_li .goods_right {
  width: 490rpx;
  height: 200rpx;
  float: right;
  position: relative;
}

.each_goods_li .goods_name {
  width: 100%;
  font-size: 26rpx;
  color: #333;
  position: absolute;
  top: 0;
}

.each_goods_li .goods_info {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
}

.each_goods_li  .goods_price {
  flex: 1.2;
  font-size: 24rpx;
}

.each_goods_li  .goods_price .now_pri {
  color: #f66;
}

.each_goods_li  .goods_price text {
  font-size: 36rpx;
}

.each_goods_li  .goods_price .ori_pri {
  color: #999;
  text-decoration: line-through;
}

.each_goods_li .goods_num {
  flex: 0.8;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #666;
}

.each_goods_li .geted_num {
  height: 45rpx;
  line-height: 45rpx;
}

.each_goods_li .goods_num image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 16rpx;
}

.fix_bottom {
  position: fixed;
  bottom: 0;
  z-index: 9;
  width: 750rpx;
  height: 100rpx;
  border-top: 2rpx solid #eee;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
}

.fix_bottom .price_area {
  float: left;
  background: #fff;
  width: 310rpx;
  height: 100rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.fix_bottom .price_area text {
  color: #f66;
}

.fix_bottom .btn_two {
  width: 210rpx;
  height: 100rpx;
  overflow: hidden;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  float: left;
  background: #f66;
}

.fix_bottom .btn_geted {
  background: #fee6e6;
  color: #f66;
}

.fix_bottom .btn_cant {
  background: #ccc;
}

.fix_bottom  .btn_buy {
  background: #f66;
}

.fix_bottom button {
  color: #fff;
  border: none;
  border-radius: 0;
  margin: 0;
  padding: 0;
}

.fix_bottom button::after {
  border: none;
  border-radius: 0;
}

.promotion {
  color: #666;
  font-size: 24rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 111;
}

.pro_close {
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  color: #333;
  top: 20rpx;
}

.pro_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 26rpx;
  color: #353535;
}

.pro_title text {
  position: absolute;
  right: 120rpx;
}

.pro_content {
  height: 700rpx;
  overflow-y: scroll;
}

/* 已选商品的弹框 */

.pro_content .each_change {
  width: 750rpx;
  border-bottom: 2rpx solid #eee;
}

.pro_content .each_change .each_tabs {
  font-size: 26rpx;
  color: #333;
  background: #f5f5f5;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.pro_content .each_change .every_goods {
  margin: 20rpx 25rpx;
  width: 700rpx;
  height: 180rpx;
}

.every_goods  .er_del_icon {
  float: left;
  width: 60rpx;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.every_goods .er_del_icon image {
  width: 40rpx;
  height: 40rpx;
}

.every_goods .eg_lefts {
  width: 180rpx;
  height: 180rpx;
  float: left;
  overflow: hidden;
  border: 2rpx solid #eee;
  box-sizing: border-box;
}

.every_goods .eg_lefts image {
  width: 180rpx;
  height: 180rpx;
}

.eg_right {
  float: right;
  width: 490rpx;
  height: 180rpx;
  position: relative;
}

.eg_right .goods_name {
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  position: absolute;
  top: 10rpx;
  margin-bottom: 16rpx;
}

.eg_right .goods_desc {
  color: #999;
  position: absolute;
  top: 80rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.eg_right .goods_bottom {
  position: absolute;
  bottom: 5rpx;
  font-size: 24rpx;
  width: 100%;
}

.eg_right .price_info {
  float: left;
  display: flex;
  align-items: flex-end;
}

.num_choose {
  float: right;
  display: flex;
  align-items: flex-end;
}

.num_choose>text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background: #fff;
  color: #666;
  font-size: 36rpx;
  border: 1rpx solid #f5f5f5;
}

.num_choose>input {
  height: 50rpx;
  width: 60rpx;
  border: 2rpx solid #f5f5f5;
  border-left: 0;
  border-right: 0;
  text-align: center;
  display: block;
  min-height: 50rpx;
}

.eg_right .price_info .sale_price {
  color: #f66;
  margin-right: 10rpx;
}

.eg_right .price_info .sale_price text {
  font-size: 36rpx;
  font-weight: bold;
}

.eg_right .price_info .original_price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  position: relative;
  top: -4rpx;
}

.change_gooter {
  height: 98rpx;
  border-top: 2rpx solid #eee;
  font-size: 28rpx;
  overflow: hidden;
}

.cf_left {
  width: 540rpx;
  float: left;
  color: #666;
  font-size: 28rpx;
  border-top: 2rpx solid #eee;
  line-height: 98rpx;
  overflow: hidden;
  text-align: center;
}

.cf_left text {
  color: #f66;
}

.cf_right {
  border-top: 2rpx solid #f66;
  width: 210rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  background: #f66;
  float: left;
  overflow: hidden;
}

.pro_content_no {
  height: 700rpx;
  overflow-y: scroll;
  width: 750rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.pro_content_no image {
  width: 180rpx;
}

.pro_content_no view {
  font-size: 26rpx;
  color: #999;
  margin-top: 30rpx;
}

.modal_back {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  overflow: hidden;
}

.modal_spec_nouse {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
}

.modal_spec, .drawer_box {
  width: 100%;
  height: 70%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 111;
}

.modal_spec_top {
  padding: 0 0rpx 20rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}

.modal_top_img {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  float: left;
  z-index: 12;
  margin-left: 30rpx;
}

.modal_top_img::-webkit-scrollbar {
  display: none;
}

.modal_top_img image {
  width: 100%;
  position: relative;
  z-index: 22;
}

.modal_top_center {
  float: left;
  padding-top: 100rpx;
  color: #353535;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.modal_top_center text {
  color: #f66;
  font-size: 36rpx;
  display: inline-block;
  margin-bottom: 19rpx;
}

.moadl_close {
  float: right;
  width: 40rpx;
  margin-top: 100rpx;
  margin-right: 30rpx;
}

.modal_spec_list, .modal_spec_sum {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
  color: #353535;
}

.modal_spec_other text {
  display: inline-block;
  padding: 0 10rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 25rpx 30rpx 0 0;
  border: 1px solid #ccc;
  border-radius: 3px;
}

.modal_spec_other .spec_active {
  border: 1px solid #f66;
  color: #f66;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.comment_list_top .fr image {
  width: 200rpx;
  border-radius: 0;
}

.modal_spec_sum .fl {
  line-height: 60rpx;
}

.modal_footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  z-index: 99;
}

.modal_footer button {
  border: none;
  border-radius: 0;
  width: 100%;
  height: 100rpx;
  background: #f66;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}

.modal_footer button::after {
  border: none;
  border-radius: 0;
}

.goods_fr {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  box-sizing: border-box;
}

.goods_fr text {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  font-size: 36rpx;
  border: 1rpx solid #f5f5f5;
}

.goods_fr .btn_minus {
  left: 0;
}

.goods_fr .btn_plus {
  right: 0;
}

.goods_fr input {
  box-sizing: border-box;
  height: 60rpx;
  width: 90rpx;
  border: 2rpx solid #f5f5f5;
  text-align: center;
  display: block;
  min-height: 60rpx;
  margin-left: 55rpx;
}

.member_icon {
  padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(to left, #e0c787, #d9ae69);
  border-radius: 5rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
  width: 80rpx;
  display: inline-block;
  position: relative;
  bottom: 6rpx;
}

.reduce {
  padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(left, #fe4848, #fe7248);
  background: -webkit-linear-gradient(left, #fe4848, #fe7248);
  background: -moz-linear-gradient(left, #fe4848, #fe7248);
  border-bottom-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
  width: 80rpx;
  display: inline-block;
  position: relative;
  bottom: 6rpx;
}
.sell_out {
  position: absolute !important;
  width: 130rpx !important;
  height: 130rpx !important;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  float: none;
  z-index: 3;
}


