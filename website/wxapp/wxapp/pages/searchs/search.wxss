/* pages/searchs/search.wxss */
 @import "../bottom/bottom.wxss"; 
 /* @import "../recocommon/recocommon.wxss"; */
 @import "../goodscommon/goodslabel.wxss";
 @import "/css/iconfont.wxss";
page{
  overflow-x: hidden;
  /* background: #fff; */
}
.search_bar{
  width: 92%;  
  background: #fff;
  padding: 10px 4%;
  border-bottom: 1rpx solid #eee;
}
 .search_inpout{
   width: 85%;
   margin: 0 auto;
   height: 70rpx;
   line-height: 70rpx;
   border-radius: 14rpx;
} 
.load_style{
  width: 100%;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 15rpx 0;
}
.search-box {
  width: 100%;
  background-color: #f5f5f5;  

  display: flex;
  flex-direction: row;

  border:1px solid #eeeeee;
  border-radius: 14rpx;
}
.search-img{ 
  margin: auto 0 auto 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.normal_text{
  color: #000;
}
.selected{
  color: #ff6666;
}
.selected .icon{
  width:22rpx;
}
.nullBox{
  background:#fff;
  padding: 30rpx 0 90rpx;
}
.nullImage{
  width: 262rpx;
  height: 276rpx;
  display: block;
  margin: 0 auto;
  margin-bottom:20rpx;
}
.nullContent{
  margin:0 auto;
  text-align: center;
  color: #666;
}
.nullContent text{
  margin-bottom: 100rpx;
}
.normal .icon{
  display: none;
  width:22rpx;
  background: #ccc;
}


.search_bar .back {
  width: 50rpx;
  height: 50rpx;
}


.search_bar  text {
  width: 100rpx;
  display: inline-block;
}

.top_bar {
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 10rpx;
}

.top_bar text {
  width: 33%;
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
}
.content .group_all:after{
  content: "";
  display: block;
  clear: both;
}
.content .group {
  width: 370rpx;
  height: 535rpx;
  background: #fff;
  margin-bottom: 10rpx;
  position: relative;
}
.content .jf_pos{
  bottom: 200rpx;
}
.content .jf_group{
  height: 570rpx;
}
.content .group:nth-of-type(odd){
  float: left;
}
.content .group:nth-of-type(even){
  float: right;
}
.content .group image {
  width: 368rpx;
  height: 368rpx;
}

.content .group .info {
  padding: 8rpx 0;
  margin-left:4%;
  height:125rpx;
  width:92%;
  position: relative;
}

.content .group .title {
  display: block;
  width: 92%;
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.title {
  font-size: 26rpx;
}

.price {
  color: #f66;
  font-size: 30rpx;
  font-weight: bold;
}

.big_img {
  position: relative;
}
.pricese{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
  float: right;
  margin-top: 4rpx;
}
.line-through-none{
  text-decoration: none !important;
}

.market_price{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.tuangou{
  width: 280rpx;
  background: linear-gradient(left,#f66,#ff8585);
  background: -webkit-linear-gradient(left,#f66,#ff8585);
  background: -moz-linear-gradient(left,#f66,#ff8585);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 80rpx 80rpx 0;
  position: absolute;
  left: 0;
  top: 315rpx;
  z-index: 4;
  height: 55rpx;
  line-height: 55rpx;
}
.kanjia{
  width: 200rpx;
  background: linear-gradient(left,#fe6f44,#ff9248);
  background: -webkit-linear-gradient(left,#fe6f44,#ff9248);
  background: -moz-linear-gradient(left,#fe6f44,#ff9248);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 80rpx 80rpx 0;
  position: absolute;
  left: 0;
  top: 315rpx;
  z-index: 4;
  height: 55rpx;
  line-height: 55rpx;
}
.spe_img {
  position: absolute;
  right: 0;
  bottom: 0;
  width:30% !important;
  height:31% !important;
}
.top_bar::after{
  content: "";
  display: block;
  clear: both;
}
.top_bar>view{
  float: left;
  width: 50%;
  text-align: center;
}
.top_bar>view image{
  width:20rpx;
  height:15rpx;
  position:relative;
  top:-2rpx;
}
/* 回到顶部 */
.back_top{
   width: 120rpx;
   height: 120rpx;
   position: fixed;
   top: 860rpx;
   right: 15rpx;
   color: #999;
   border-radius: 1000rpx;
   border: 1px solid #eee;
   background: white;
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
   box-shadow: 0rpx 4rpx 6rpx 1rpx #ddd;
   z-index: 9999;
}
.back_top image{
  width: 35rpx;
  height: 15rpx;
}


.top_bar .filter .filterImage{
  width: 18rpx;
  height: 19rpx;
  vertical-align: middle;
}
.top_bar .filter{
  float: right;
  width: 33%;
}

/* 筛选 start */
.filter-bullet{
  position: fixed;
  left: 502px; 
  width: 100%; 
  height: 100%; 
  z-index: 10241;
}
.filter-container{
  padding: 26rpx 20rpx 80rpx 20rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  height: 100%;
  overflow-y: scroll;
}
.price-range{
  padding-bottom: 25rpx;
}
.interval, .list_item_name{
  font-size: 14px;
  font-weight: bold;
  color: #333;
}
.interval text{
  float: right;
  font-weight: normal;
  color: #ff6666;
}
.lowest{
  width: 240rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 12px;
  color: #333;
  background:#f7f7f7;
  border-radius: 30rpx;
}
.price-filter{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 26rpx;
}
.hengxian{
  width: 46rpx;
  height: 5rpx;
  background: #ccc;
}
.categories .price-filter text,.list_box .list .list_item_box text, .list_item_name_box text{
  background-color: #f7f7f7;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 12px;
  border-radius: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  overflow: hidden;
}
.categories .price-filter .more{
  background: #fff;
  border: 1px solid #eee;
}
.list_box .list .list_item_box .more{
  background: #fff;
  border: 1px solid #eee;
}
/* 点击按钮时的样式 */
.price-filter .normal{
  border: none;
  color: #333;
  background: #f7f7f7;
}
.price-filter  .is_checked{
  border: 1px solid #ff6666;
  background: #ffefef;
  color: #ff6666;
}
.list_item_name_box .is_checked{
  border: 1px solid #ff6666;
  background: #ffefef;
  color: #ff6666;
}
.bullet-left{
  width: 20%;
  height: 100%;
  float: left;
  overflow: hidden;
}
.bullet-right{
  width: 80%;
  height: 100%;
  background-color: #fff;
  float: right;
  z-index: 999;
  overflow-y: scroll;
}
.bullet-right .page{
  border-top:1px solid #eee;
}
/* 筛选 end */

/* 遮罩 */
.xianshi{
  display: block;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.hidden{
  display: none;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
/* 更多分类的弹框 */
.categories-bullet{
  position: fixed;
  left: 502px;
  width: 100%;
  height: 100%;
  z-index: 99999;
  overflow-x: hidden;
}
.more-categories{
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  text-align: center;
  position: relative;
  display: flex;
}
.more-categories image{
  width: 14rpx;
  height: 28rpx;
  position:absolute;
  left: 24rpx;
  top: 40rpx;
}
.more-categories text{
  line-height: 100rpx;
  color: #333;
  font-size: 14px;
  margin-left:24%;
}
page{
  height: 100%;
}
.bullet-bottom{
  position: absolute;
  bottom: 0;
  padding: 0 20rpx;
  width: 100%;
  border-top:1px solid #eee;
  height: 90rpx;
  line-height: 90rpx;
}
.bullet-bottom button{
  width: 40%;
  display: inline-block;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #666;
  background-color: #fff;
  border-radius: 0;
  border: none;
  padding: 0;
  font-size: 26rpx;
}
.bullet-bottom button::after{
  border-radius: 0;
  border: none;
  padding: 0
}
.bullet-bottom .confirm{
  background: linear-gradient(to right, #ff8585 , #ff6666);
  color: #fff;
}
.li {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.bg-gray{
  /* width: 86%; */
  padding-left: 6%;
  border-bottom: 1rpx solid  #eeeeee;
}
.li .icon-xiala ,.icon-shangjiantou {
  color: #999;
  font-size: 28rpx;
}
.gray {
  color: #8e8e8e;
}
.red {
  color: #fe2e2e;
}
/* 展开折叠 */
.list_name_box{ 
  background: #fff; 
  display: flex; 
  height: 90rpx; 
  align-items: center; 
  font-size: 32rpx;
  position: relative;
}
.list_name_box image{
  position: absolute;
  top: 83rpx;
  right: 30rpx;
}
.icon_down{ 
  width: 26rpx;
  height: 16rpx;
  transition: transform 0.3s;
} 
.list_item_name_box{ 
  background: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
} 
.other{ 
  display: flex; 
