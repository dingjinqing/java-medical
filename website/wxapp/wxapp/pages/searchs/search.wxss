  padding: 0 25rpx 0 50rpx; 
  align-items: center; 
  font-size: 30rpx; 
  color: #666; 
} 
.icon_down_rotate{ 
  transform: rotate(180deg); 
}
.list_item_box{
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.list_item{
  padding-bottom: 20rpx;
  margin-right: 10rpx;
}


.show_more{
  display: block;
  width: 150rpx;
  height: 60rpx;
  margin: 0 auto;
  text-align: center;
