<!--pages/login/login.wxml-->
<include src="../common/header.wxml" />
<template name="login">
  <view class="login_back">
    <view>
      <view class="login_title">
        绑定手机号
        <image src='{{imageUrl}}image/wxapp/close_icon.png' mode='widthFix' bindtap='loginClose'></image>
      </view>
      <view class='login_li clearfix'>
        <view class='login_li_left'>手机号</view>
        <view class='login_li_right'>
          <input type='text' placeholder='输入手机号'></input>
        </view>
      </view>
      <view class='login_li clearfix'>
        <view class='login_li_left'>验证码</view>
        <view class='login_li_right login_li_code'>
          <input type='text' placeholder='输入6位验证码'></input>
          <text>获取验证码</text>
        </view>
      </view>
      <view class="login_confirm">确认</view>
    </view>
  </view>
</template>