@import "../usercardinfo/usercardinfo.wxss";
@import "../goodsCheckout/goodsCheckout.wxss";
.buy_card_price{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  color: #fff;
  font-size: 36rpx;
}
.cou_package{
  width: 750rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.cou_title{
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.cou_content{
  padding: 20rpx 30rpx;
  width: 690rpx;
}
.each_coupon .right{
  border: 2rpx solid #eee;
  border-left: none;
  box-sizing: border-box;
} 
.each_coupon{
  width: 700rpx;
  margin: 0 auto;
  height: 210rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.each_coupon:last-of-type{
  margin-bottom: 0;
}
.left{
  float: left;
  width: 250rpx;
  height: 210rpx;
  position: relative;
  border-radius: 10rpx 0 0 10rpx;
}
.left view{
  color: #fff;
  font-size: 14px;
  margin-top: 10rpx;
  width: 250rpx;
  text-align: center;
}
.left .price{
  margin-top: 50rpx;
}
.left .price text{
  font-size: 20px;

}
.right{
  float: right;
  width: 450rpx;
  background: #fff;
  height: 210rpx;
  color: #333;
  border-radius: 0 10rpx 10rpx 0;
  position: relative;
}
.right .case{
  position: absolute;
  top: 25rpx;
  font-size: 13px;
  font-weight: 700;
  padding-left: 20rpx;
  color: #333;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.right .time_canuse{
  position: absolute;
  top: 160rpx;
  font-size: 11px;
  padding-left: 20rpx;
}
.right .click_to_detail{
  position: absolute;
  top: 72rpx;
  font-size: 12px;
  width: 407rpx;
  color: #333;
  padding-left: 20rpx;
}
.btn_to_index{
  width: 700rpx;
  height: 70rpx;
  border-radius: 8rpx;
  background: #09ba07;
  color: #fff;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto
}
.left .coupon_xian{
  height: 210rpx;
  width: 4rpx;
  display: inline-block;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9;
}
.left .coupon_xian image{
  height: 210rpx;
  width: 4rpx;
}
.cou_num{
  position: absolute;
  right: -35rpx;
  top: 15rpx;
  background: #fead2d;
  width: 140rpx;
  font-size: 24rpx;
  color: #fff;
  transform: rotate(40deg);
  text-align: center;
  -ms-transform: rotate(40deg);
  -moz-transform: rotate(40deg);
  -webkit-transform: rotate(40deg);
  -o-transform: rotate(40deg);
}
.send_rule{
  font-size: 24rpx;
  margin-bottom: 10rpx;
  width: 380rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  top: 125rpx;
  padding-left: 20rpx;
}
.pay_two{
  /* float: none */
  top: 27rpx
}
.yue_pay > view:nth-child(1){
  float: left;
}
.yue_pay view:last-of-type{
  width: auto;
}
.score_pay view:last-of-type{
  width: auto;
}
.yue_pay image{
  top: -4rpx;
}
.score_pay image{
  top: -4rpx;
}