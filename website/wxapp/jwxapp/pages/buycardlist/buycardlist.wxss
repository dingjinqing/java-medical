/* @import "../usercardlist/usercardlist.wxss";  */
  page {
    background: #f5f5f5;
  }

  .container {
    position: relative;
    overflow-x: hidden;
  }

  .card-list {
    width: 94%;
    background: #e6cb96;
    background-size: cover;
    margin: 3% 3%;
    border-radius: 8rpx;
    position: relative;
    height: 270rpx;
  }

  .card-list-cover {
    width: 100%;
    height: 42rpx;
    background: rgba(0, 0, 0, 0.1);
    position: absolute;
    bottom: 0;
    z-index: 99;
    line-height: 42rpx;
    border-bottom-right-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
    text-align: center;
  }

  .card-list-cover text {
    font-size: 24rpx;
    color: #fff;
  }

  .moren {
    padding: 5rpx 20rpx;
    font-size: 26rpx;
    border-radius: 40rpx;
    color: #fff;
    border: 1px solid #fff;
  }

  .card-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }

  .card-left {
    padding: 40rpx 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .right_renew {
    position: absolute;
    bottom: -10rpx;
    left: 150rpx;
    width: 130rpx;
    height: 44rpx;
    background: rgba(0, 0, 0, 0.1);
    line-height: 44rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    border-radius: 10rpx;
  }

  .card_detail {
    flex: 5.5;
    padding-left: 25rpx;
    color: #fff;
  }

  .shop_logos {
    flex: 1;
  }

  .card-name {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
    margin-left: -8rpx;
  }

  .card_discount {
    margin-bottom: 5rpx;
    font-size: 26rpx;
  }

  .card_offset {
    width: 500rpx;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .order-goodsno-box {
    padding-top: 400rpx;
  }

  .order-no {
    padding: 10rpx 0px;
    font-weight: normal;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .order-no-img {
    width: 200rpx;
    margin: 0 auto;
    margin-bottom: 30rpx;
  }

  .no-zi {
    color: #b8b8b8;
    text-align: center;
    font-size: 26rpx;
  }

  .card_type {
    position: absolute;
    top: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.1);
    width: 150rpx;
    text-align: center;
    height: 55rpx;
    line-height: 55rpx;
    border-bottom-left-radius: 8rpx;
    color: #fff;
  }

  .out_time {
    position: absolute;
    bottom: 0;
    right: 0;
  }

  .out_time image {
    width: 130rpx;
  }

  .del_btn {
    width: 120rpx;
    height: 270rpx;
    color: #fff;
    background: #f66;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    border-radius: 10rpx;
    right: -146rpx;
  }
