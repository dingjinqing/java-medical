@import "../../css/iconfont.wxss";
page{
  background: #f5f5f5;
}
.fs_top{
  background: #fff;
  padding: 60rpx 0;
  width: 750rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  border-top: 2rpx solid #eee;
}
.fs_top image{
  width: 70px;
  height: 70px;
  border-radius: 100rpx;
  margin-bottom: 24rpx;
}
.fs_top .top_word{
  font-size: 30rpx;
  color: #333;
  text-align: center;
}
.fs_title{
  height: 90rpx;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fs_title .heng{
  width: 270rpx;
  height: 2rpx;
  background: #ddd;
}
.fs_title .zi{
  width: 160rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center
}
.fs_content{
  background: #FFF;
  padding: 0 25rpx;
  margin-bottom: 20rpx;
}
.fs_content>view{
  height: 90rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 26rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.fs_content>view:last-of-type{
  border-bottom: 0
}
.fs_content>view view{
  flex: 1
}
.fs_content>view view:first-of-type{
  color: #333;
}
.fs_content>view view:last-of-type{
  color: #f66;
  text-align: right
}
.fs_content>view view image{
  width: 15rpx;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.coupon_list{
  margin-bottom: 20rpx;
}
.each_coupon .right{
  border-bottom:1px dashed #eee;
} 
.each_coupon{
  width: 700rpx;
  margin: 0 auto;
  height: 210rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.each_coupon:last-of-type{
  margin-bottom: 0;
}
.left{
  float: left;
  width: 250rpx;
  height: 210rpx;
  position: relative
}
.left view{
  color: #fff;
  font-size: 14px;
  margin-top: 10rpx;
  width: 250rpx;
  text-align: center;
}
.left .price{
  margin-top: 50rpx;
}
.left .price text{
  font-size: 20px;

}
.right{
  float: right;
  width: 450rpx;
  background: #fff;
  height: 210rpx;
  color: #333;
  border-radius: 0 10rpx 0 0;
  position: relative;
}
.right .case{
  position: absolute;
  top: 25rpx;
  font-size: 13px;
  font-weight: 700;
  padding-left: 20rpx;
  color: #333;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.right .time_canuse{
  position: absolute;
  top: 140rpx;
  font-size: 11px;
  padding-left: 20rpx;
}
.right .click_to_detail{
  position: absolute;
  top: 72rpx;
  font-size: 12px;
  width: 407rpx;
  color: #333;
  padding-left: 20rpx;
}
.btn_to_index{
  width: 700rpx;
  height: 70rpx;
  border-radius: 8rpx;
  background: #09ba07;
  color: #fff;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto;
  border: none;
  margin-top: 20rpx;

}
.btn_to_index::after{
  border: none;
  border-radius: 0
}
.left .coupon_xian{
  height: 210rpx;
  width: 4rpx;
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
}
.left .coupon_xian image{
  height: 210rpx;
  width: 4rpx;
}
