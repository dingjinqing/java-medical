.sex-container{
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.sex-container .box1{
   height: 90rpx;
  width: 100%;
  padding:0rpx 25rpx;
  line-height: 90rpx;
}
.sex-container .box1 .picker{
  float: left;
  width: 500rpx;
}
.sex-container .box1 .sex_title{
  width: 200rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}
.sex-container .box1 .clock_more{
  float: right;
}
.sex-container .box1 image{
  width: 15rpx;
  height: 25rpx;
  margin-top: 10rpx;
}
.action_title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  margin-bottom:40rpx;
  border-bottom:1px solid #eee;
}
.pro_close{
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}
.card_sure{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #f66;
  position: fixed;
  bottom: 0;
  font-size: 26rpx;
}
.sex-container .box2{
  width: 750rpx;
}
.sex-container .box2 .sex_title1{
  background: #f5f5f5;
  width: 725rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  font-size: 30rpx;
}
.sex-container .box2  .sex_list{
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 25rpx;
  width: 725rpx;
  display: block
}
.sex-container .box2  .sex_list1{
  border-top: 2rpx solid #eee;
}
radio{ transform:scale(.8)  }