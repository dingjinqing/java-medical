.video-container {
  width: 710rpx;
  margin: 0 auto;
  height: 400rpx;
  margin-bottom: 20rpx;
  position: relative;
  background: #444;
}

.video-container .video_img {
  width: 710rpx;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 6;
}

.video-container .btn_play {
  width: 125rpx;
  height: 125rpx;
  position: absolute;
  top: 138rpx;
  left: 295rpx;
  z-index: 99;
}

.btn_play .image {
  width: 100%;
  height: 100%;
}

.s_video_title {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 87%;
  height: 60rpx;
  padding: 10rpx 45rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #fff;
  z-index: 9;
  background: rgba(0,0,0,0.3);
  /* background: -webkit-linear-gradient(top, rgba(0,0,0,0.6), rgba(255,255,255,0));
  background: -moz-linear-gradient(top, rgba(0,0,0,0.6), rgba(255,255,255,0));
  background: linear-gradient(top, rgba(0,0,0,0.6), rgba(255,255,255,0));  */
}
