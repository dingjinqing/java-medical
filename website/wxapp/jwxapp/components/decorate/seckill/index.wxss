/* 双列 */

.seckill-container{
width:720rpx;
margin:0 auto;
overflow-x:hidden;
}


.clearfix::after{
  content: "";
  clear: both;
  display: block;
}
.two_seckill{
  width: 350rpx;
  background: #fff;
  margin-bottom: 20rpx;
  float: left;
   height: 460rpx; 
   overflow: hidden !important; 
}
.each_img{
width:350rpx;
height:335rpx;
margin-bottom:15rpx;
overflow:hidden;
position:relative;
}
.two_seckill:nth-of-type(even){
  float: right
}

.two_seckill .image{
  width: 350rpx;
  height: 335rpx;
}
.price_info{
  padding: 0 20rpx;
  margin-bottom: 15rpx;
}
.prices_info{
  padding: 10rpx 20rpx;
  margin-bottom: 15rpx;
  height: 45rpx;
  overflow-y: hidden;
}

 .seckill_price{
    color: #f66;
    margin-right: 10rpx;
    font-size: 28rpx;
    font-weight: bold;
}
.seckill_price .text{
  font-size: 36rpx;
}
.original_price{
  color: #666;
  text-decoration: line-through;
  font-size: 24rpx;
  margin-left: 2rpx;
}
.goods_names{
  width: 310rpx;
  margin-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  height: 35rpx;
}
/* danlie */
.one_seckill{
  background: #fff;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.one_seckill .seckill_left{
  float: left;
  width: 260rpx;
  height: 260rpx;
  margin-right: 30rpx;
  position: relative;
  overflow: hidden;
}
.one_seckill .seckill_left .daojishi{
  position: absolute;
  bottom: 0;
  color: #fff;
  width: 100%;
  background:rgba(0, 0, 0, 0.5);
  text-align: center;
  font-size: 24rpx;
  padding: 5rpx 0;
}
.one_seckill .seckill_left .image{
  width: 260rpx;
  height: 260rpx;
}
.one_seckill .seckill_right{
  float: left;
  width: 415rpx;
  height: 260rpx;
  position: relative;
}
.one_seckill .start_time{
  font-size: 24rpx;
}
.goods_info{
  position: absolute;
  top: 0;
}
.seckill_icon{
margin-top: 10rpx;
font-size: 24rpx;
display: inline-block;
text-align: center;
color:#f66;
border:1px solid #f66;
padding:0rpx 10rpx;
height:35rpx;
margin-right:10rpx;
line-height:35rpx;
border-radius:6rpx;
}
.seckill_bottom{
  position: absolute;
  bottom: 0;
  height: 90rpx;
  overflow: hidden;
  width: 100%
}
.bottom_top{
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  overflow: hidden;
}
.bottom_bottom{
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  overflow-y: hidden;
}
.seckill_bottom .bottom_top .price_info{
  float: left;
  height: 55rpx;
  line-height: 55rpx;
  padding: 0;
  overflow: hidden;
}
.seckill_bottom .bottom_top .free_ntn{
  float: right;
  width: 130rpx;
  text-align: center;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  background: linear-gradient(left,#f66,#ff8585);
  background: -webkit-linear-gradient(left,#f66,#ff8585);
  background: -moz-linear-gradient(left,#f66,#ff8585);
  border-radius: 50rpx;
}
.seckill_bottom .bottom_top .orig_ntn{
  float: right;
  width: 130rpx;
  text-align: center;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  background: linear-gradient(left,#f66,#ff8585);
  background: -webkit-linear-gradient(left,#f66,#ff8585);
  background: -moz-linear-gradient(left,#f66,#ff8585);
  border-radius: 50rpx;
}

.bottom_bottom .seckill_pay{
    float: right;
    color:#999;
    position: relative;
    font-size:12px;
    margin-right: 8rpx;
}

.bottom_bottom .seckill_progess1{
    text-align: center;
    border-radius: 15rpx;
    border:1px solid #ff6666;
    overflow: hidden;
    float: right;
    width: 130rpx;
    height: 13rpx;
    line-height: 25rpx;
    color: #fff;
    position: relative;
    margin-top: 10rpx;
}

.bottom_bottom .seckill_progess1 .progess1{
    display: block;
    width: 50%;
    height: 15rpx;
    background-color: #ff8383;
    position: relative;
    left: 0px;
}

.bottom_bottom .seckill_progess2{
    text-align: center;
    border-radius: 15rpx;
    border:1px solid #b9b9b9;
    overflow: hidden;
    float: right;
    width: 130rpx;
    height: 13rpx;
    line-height: 25rpx;
    color: #fff;
    position: relative;
    margin-top: 10rpx;
}

.bottom_bottom .seckill_progess2 .progess2{
    display: block;
    width: 50%;
    height: 15rpx;
    background-color: #ccc;
    position: relative;
    left: 0px;
}



.good_names{
  width: 100%;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  margin-top: 10rpx;
}
 .daojishi {
  position: absolute;
  bottom: 0;
  color: #fff;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  font-size: 24rpx;
  padding: 5rpx 0;
}
.sell_out {
  position: absolute !important;
  width: 130rpx !important;
  height: 130rpx !important;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  float: none;
  z-index: 3;
}