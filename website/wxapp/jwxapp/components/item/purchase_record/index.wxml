<wxs src="../../../utils/i18n/i18n.wxs" module="i18n"></wxs>
<view class="purchase_container" style="top:{{top_nav + 28}}px;" wx:if="{{goodsRecords.length}}">
	<view
	 class="purchase_record"
	 animation="{{animation}}"
	 bindtransitionend="backStart"
	 wx:if='{{show_purchase}}'
	>
		<image class="purchase_image" src="{{purchase_img}}" />
		<view class="purchase_name van-ellipsis ">{{purchase_name}}</view>
		<view class="purchase_text">{{i18n.$t(localePack,'components.decorate.justBuy')}}</view>
	</view>
</view>

