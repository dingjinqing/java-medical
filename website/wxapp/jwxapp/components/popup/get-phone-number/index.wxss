/* components/popup/get-phone-number/index.wxss */

.popup-content {
  width: 570rpx;
  background: #fff;
  padding: 15rpx 20rpx;
  border-radius: 8px;
}

.popup-title {
  text-align: center;
  position: relative;
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
  height: 50rpx;
  line-height: 50rpx;
}

.popup-body {
  font-size: 30rpx;
  color: #353535;
  padding: 40rpx 0;
}

.popup-buttons .button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8px;
  background: #09ba07;
  color: #fff;
  margin-top: 35rpx;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
}
