  margin-right: 10rpx;
}
.price_info  .shop_prices text{
  font-size: 36rpx;
  font-weight: bold;
}
.price_info .market_prices{
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  position: relative;
  top: -5rpx;
}
.buy_tips{
  color: #999;
  font-size: 22rpx;
