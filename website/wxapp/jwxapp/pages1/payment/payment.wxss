.pay-info{
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pay-info > image{
  height: 200rpx;
  width: 300rpx;
}
.pay-info > view{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.pay-info > view > text{
  color: #333;
}
.button-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
}
.button-info > view {
  width: 600rpx;
  line-height: 80rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 16rpx;
}