/* pages1/distrigrade/distrigrade.wxss */
page{
  background: #f5f5f5;
}
.main_container{
  background: #f5f5f5;
  height: 88%
}
.grade_top{
  position: relative;
  height: 330rpx;
}
.grade_top .grade_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 330rpx;
}
.grade_top .ranker_img{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 200rpx;
  top: 55rpx;
  left: 325rpx;
}
.grade_top .ranker_name{
  color: #fff;
  position: absolute;
  width: 100%;
  top: 175rpx;
  text-align: center;
}
.grade_top .grade_name{
  background: rgba(255,255,255,0.2);
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  padding: 10rpx 20rpx;
}
.grade_top .grade_n{
  position: absolute;
  text-align: center;
  top: 220rpx;
 width: 100%;
}
.need_more{
  width: 700rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background: #fff;
  padding-bottom: 40rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.nm_title{
  width: 100%;
  height: 85rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 85rpx;
  border-bottom: 2rpx solid #eee;
}
.grade_two{
  width: 640rpx;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 auto;
}
.grade_two>view{
  flex: 1;
  font-size: 24rpx;
}
.grade_next{
  text-align: right;
}
.pro_bg1{
  width: 640rpx;
  height: 28rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffe7e7;
  border-radius: 40rpx;
  padding: 0 5rpx;
}
.precent_show{
  height: 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(left,#f66,#fea96c);
  background: -webkit-linear-gradient(left,#f66,#fea96c);
  background: -moz-linear-gradient(left,#f66,#fea96c);
}
.grade_twos{
  width: 640rpx;
  margin: 20rpx auto 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.grade_twos>view{
  flex: 1;
  font-size: 24rpx;
  color: #666;
}
.more_record{
  color: #666;
  font-size: 24rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.more_record image{
  width: 15rpx;
  margin-left: 15rpx;
}
.now_top{
  margin: 0 auto;
  margin-top: 170rpx;
  text-align: center
}
.now_top image{
  width: 300rpx;
  height: 300rpx;
}
.top_tips{
  margin: 30rpx 0;
  font-size: 30rpx;
  color: #333;
}