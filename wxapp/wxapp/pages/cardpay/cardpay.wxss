/* pages/cardpay/cardpay.wxss */
page{
  background: #f5f5f5;
}
view,text,input{
  box-sizing: border-box;
}
.fixed_money{
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}
.pay{
  font-size: 30rpx;
  color: #000;
  padding-bottom: 20rpx;
}
.fixed_money_list{
  width: 100%;
  color: #000;
  font-weight: bold;
  border: 2px solid #dcdcdc;
  border-radius: 28rpx;
  text-align: center;
  font-size: 33rpx;
  margin-top: 22rpx;
}
.list_hei{
  line-height: 44rpx;
  padding: 33rpx 0;
}
.list_text{
  font-size: 24rpx;
  color: #999;
  background: #efefef;
  width: 250rpx;
  height: 100%;
  border-radius: 25rpx;
  margin-left: 20rpx;
}
.custom{
  border-bottom: 1px solid #eee;
  padding: 30rpx 20rpx;
  position: relative;
}
.custom text{
  font-size: 35rpx;
  color: #000;
  line-height: 1.4rem;
}
.custom input{
  display: inline-block;
  font-size: 30rpx;
  width: 100%;
  position: absolute;
  padding-left: 60rpx;
  left: 0;
}
.toRecharge{
  padding: 10rpx 30rpx 20rpx;
}
.toRecharge button{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  border-radius: 5px;
  background: linear-gradient(to right, #ff839f , #ff6668);
}
.toRecharge>button::after{
  border-radius: 5rpx;
  border: none;
}
.agreement{
  text-align: center;
  font-size: 24rpx;
  color: #888;
}
.agreement text{
  color: #ff6472;
}
.cardpay{
  position: relative;
}
.footer{
  position: absolute;
  width: 100%;
  font-size: 24rpx;
  color: #888;
  bottom: 40rpx;
  text-align: center;
}