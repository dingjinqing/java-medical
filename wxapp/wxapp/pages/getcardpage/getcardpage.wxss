.main_container{
  width: 100%;
  overflow: hidden;
  height: 1000rpx;
}
.top_style{
  width: 100%;
  height: 426rpx;
  position: relative;
}
.top_style_bg{
  width: 140%;
  height: 426rpx;
  position: absolute;
  top: 0;
  left: -20%;
  border-radius: 0 0 50% 50%;
  background-color: #5a8bff;
  z-index: 1;
}
.top_style > image{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}
.shop_logo{
  position: absolute;
  top: 78rpx;
  left: 310rpx;
  width: 130rpx;
  height: 130rpx;
  z-index: 3;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.shop_logo > image{
  width: 130rpx;
}
.get_card{
  width: 690rpx;
  background-color: #fff;
  padding: 80rpx;
  margin: -146rpx auto 0;
  box-shadow: 0 6rx 20rpx 0rpx #eee;
  border-radius: 10rpx;
  box-sizing: border-box;
  z-index: 3;
  position: relative;
}
.input_style{
  border-bottom: 1rpx solid #eee;
  padding-bottom: 17rpx;
  font-size: 0
}
.input_style > image{
  float: left;
  width: 32rpx;
}
.input_style > input[type="text"]{
  height: 32rpx;
  min-height: 32rpx;
  line-height: 32rpx;
  display: inline-block;
  overflow: hidden;
  font-size: 26rpx;
  padding-left: 25rpx;
  color: #333;
  width: 472rpx;
}
input[type="text"]::placeholder{
  color: #999;
}
.input_style:nth-child(2){
  margin-top: 80rpx;
}
.submit{
  width: 530rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #0075c2;
  border-radius: 40rpx;
  margin-top: 80rpx;
}