/* pages/filtergoods/filtergoods.wxss */
.filter-container{
  padding: 26rpx 30rpx 0 30rpx;
  background: #fff;
  border-top: 1px solid #efefef;
}
.price-range{
  padding-bottom: 46rpx;
}
.interval, .list_item_name{
  font-size: 14px;
  font-weight: bold;
  color: #333;
}
.lowest{
  width: 300rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 12px;
  color: #999;
  background:#f7f7f7;
  border-radius: 30rpx;
}
.price{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 26rpx;
}
.price view:nth-of-type(1){
  width: 50rpx;
  height: 7rpx;
  background: #999;
}
.categories .price text, .list_item_name_box text{
  padding: 10rpx 20rpx;
  background: #f7f7f7;
  width: 120rpx;
  border-radius: 30rpx;
  text-align: center;
}
.list_item_name_box text{
  width: 130rpx;
  padding: 10rpx 10rpx;
}
.categories .price .more{
  background: #fff;
  border: 1px solid #cccccc;
}
/* 展开折叠 */
.list_name_box{ 
  background: #fff;
  /* display: flex;  */
  height: 120rpx; 
  align-items: center;
  font-size: 32rpx;
  padding-top:46rpx;
} 
.list_name_box image{ 
  position: absolute;
  right: 30rpx;
} 
.icon_down{ 
  width: 38rpx;
  height: 22rpx;
  transition: transform 0.3s;
} 
.list_item_name_box{ 
  background: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
} 
.other{ 
  display: flex; 
  height: 80rpx; 
  padding: 0 25rpx 0 50rpx; 
  align-items: center; 
  font-size: 30rpx; 
  color: #666; 
} 
.icon_down_rotate{ 
  transform: rotate(180deg); 
}
.list_item_box{
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}
