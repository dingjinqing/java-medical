page{
  background: #f5f5f5;
  padding-bottom: 120rpx;
}
.clearfix::after{
  display: block;
  clear: both;
  content: "";
}
.main_container{
  background: #f5f5f5;
}
.info_top{
  width: 750rpx;
  height: 490rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.ins_top_bg{
  width: 750rpx;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.user_imgs{
  width: 750rpx;
  text-align: center;
  position: absolute;
  top: 60rpx;
}
.um_avater{
  width: 100rpx;
  height: 100rpx;
  border-radius: 200rpx;
}
.um_name{
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.goods_top{
  width: 650rpx;
  padding: 25rpx;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  position: relative;
  margin-top: -230rpx;
  margin-left: 25rpx;
  margin-bottom: 20rpx;
  
}
.goods_top>view{
  margin-bottom: 20rpx;
  overflow: hidden
}
.goods_top>view:last-of-type{
  margin-bottom: 0
}
.goods_img{
  width: 160rpx;
  height: 160rpx;
  float: left;
}
.goods_img image{
  width: 160rpx;
  height: 160rpx;
}
.goods_right{
  float: right;
  width: 465rpx;
  height: 160rpx;
  position: relative;
}
.goods_right .goods_name{
  width: 100%;
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
}
.goods_right .goods_desc{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 0;
  top: 80rpx;
  color: #999;
  font-size: 24rpx;
}
.goods_right .goods_price{
  position: absolute;
  bottom: 0;
  left: 0;
  color: #f66;
}
.cm_top{
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.cm_top view{
  flex: 1;
}

.pay_msg{
  width: 650rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx 25rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.pay_msg .cm_top{
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.pay_progress{
  font-size: 26rpx;
  color: #333;
}
.gress_top{
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
}
.gress_top view{
  flex: 1;
}
.gress_top view text{
  font-weight: bold;
}
.gt_right{
  text-align: right
}
.gress_bottom{
  width: 100%;
  height: 20rpx;
  border-radius: 100rpx;
  background: #ccc;
  position: relative;
}
.have_color{
  width: 80%;
  height: 20rpx;
  background: linear-gradient(left, #f66, #feaa6d);
  background: -webkit-linear-gradient(left, #f66, #feaa6d);
  background: -moz-linear-gradient(left, #f66, #feaa6d);
  position: absolute;
  border-radius: 100rpx;
  top: 0;
  left: 0
}
.footer{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 700rpx;
  padding: 20rpx 25rpx;
}
.footer button{
  border: none;
  padding: 0;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
}
.footer button::after{
  border: none;
  padding: 0;
  border-radius: 0
}
.own_pay{
  float: left;
  width: 260rpx;
  background: #fea66c;
}
.send_to_friend{
  float: right;
  width: 420rpx;
  background: #ff6666;
}
.other_open{
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 30rpx;
}
.payed_friends{
  padding: 0 25rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.pf_top{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  position: relative;
}
.pt1 .heng{
  width: 70rpx;
  height: 2rpx;
  background: #e8e8e8;
}
.pt1 .word1{
  font-size: 26rpx;
  color: #333; 
  margin: 0 10rpx;
}
.pt1 view{
  float: left;
}
.pt1{
  display: flex;
  align-items: center;
  justify-content: center;
}
.view_more image{
  width: 15rpx;
  margin-left: 10rpx;
}
.view_more{
  position: absolute;
  top: 0;
  right: 0;
  color: #999;
  font-size: 26rpx;
}
.each_friends{
  width: 100%;
  height: 80rpx;
  padding: 20rpx 0;
}
.ef_avater{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  float: left;
  margin-right: 20rpx;
}
.ef_avater image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.ef_info{
  float: left;
  height: 80rpx;
  width: 300rpx;
}
.ef_info .ef_name{
  color: #333;
  font-size: 26rpx;
}
.ef_info .ef_msg{
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ef_price{
  float: right;
  height: 80rpx;
  display:flex;
  flex-direction:column;
  width:230rpx;
  text-align:right;
  justify-content:space-around;
}
.ef_price .returned{
  color: #999;
  font-size: 24rpx;
}
.just_other{
  width: 100%;
  background: #f66;
}







