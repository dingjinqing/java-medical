/* STORELIST.WXSS 2018.03.06 */
page {
  background: #f5f5f5;
}

.container {
  position: relative;
  overflow-x: hidden;
}

.store-appointment {
  margin-top: 20rpx;
}

.store-nav-list {
  width: 710rpx;  
  height:152rpx;
  padding:20rpx;
  margin-top: 20rpx;
  background:#fff;
}

.list-left {
  width: 152rpx;
  height: 152rpx;
  float: left;
  overflow:hidden;
  position: relative;
}

.list-left-img {
  width: 152rpx;
  height:152rpx;
  border-radius: 6rpx;
}
.store-name-info {
  float: right;
  width:530rpx;
  height:152rpx;
  position: relative;
}
.list-right-top {
  width:100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
}

.list-right-top text.right-text {
  color:#888;
  font-size: 24rpx;
  flex: none;
}

.list-right-bottom {
  width: 100%;
  position: absolute;
  bottom: 0
}

.list-right-bottom text {
  font-size: 24rpx;
  color: #888;

  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.list-center-name {
  font-size: 26rpx;
  color: #333;
  flex: 1.5
}

.icon-bottom {
  width: 35rpx;
  height:35rpx;
  
  float: left;
}

.list-bottom text {
  font-size: 24rpx;
  color: #888;
}


.off-img{
  position: absolute;
  left: 0rpx;
  background-color: rgba(0,0,0,0.4);
  width:132rpx;
  height:132rpx;
  padding: 10rpx;
}
.order-no{
    padding: 10rpx 0px;
    font-weight: normal;
    text-align:centent;
    margin: 0 auto;
    width:100%;
}
.order-no-img {
  width:200rpx;
  margin: 0 auto;
  display: block
}
.order-goodsno-box {
  padding-top: 300rpx;
}
.no-zi {
    color: #b8b8b8;
    text-align: center;
    font-size: 26rpx;
}
.add-order {
    display:block;
    width:30%;
    height:61rpx;
    border-radius:100rpx;
    margin:0 auto;
    background:#f66;
    color:#fff;
    text-align:center;
    line-height:57rpx;
    font-size: 14px;
}
/* 扫码购 */
.scancode{
  display: inline-block;
  border: 1rpx solid #f66;
  margin-right: 10rpx;
  padding-left: 7rpx;
  padding-right: 5rpx;
  color: #f66;
}