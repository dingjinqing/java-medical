/* pages/login/login.wxss */

.login_back view,.login_back{
  box-sizing: border-box;
}
.login_back{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display:flex;
  justify-content:center;
  align-items:center;
  padding: 0 60rpx;
  position: relative;
  z-index: 999;
}
.login_back>view{
  width: 100%;
  background: #fff;
  border-radius: 8px;
  padding: 25rpx 30rpx;
}
.login_title{
  text-align: center;
  position: relative;
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
  height: 50rpx;
  line-height: 50rpx;
}
.login_title image{
  width: 40rpx;
  position: absolute;
  right: 0;
}
.login_li{
  border-bottom: 1px solid #eee;
  padding: 12rpx 0;
  color: #000;
  font-size: 24rpx;
}
.login_li_left{
  float: left;
  width: 20%;
  text-align: center;
  margin-top: 20rpx;
}
.login_li_right{
  float: left;
  width: 80%;
  padding-left: 3%;
}
.login_li_right input{
  height: 70rpx;
}
input::-webkit-input-placeholder{
  color: #ccc;
}
.login_li_code input{
  width: 60%;
  float: left;
}
.login_li_code text{
   width: 35%; 
  float: right;
  height: 70rpx;
  border: 1px solid #1dac1c;
  border-radius: 10px;
  color: #09ba07;
  text-align: center;
  line-height: 70rpx;
}
.login_confirm{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8px;
  background: #09ba07;
  color: #fff;
  margin-top: 35rpx;
  font-size: 26rpx;
}