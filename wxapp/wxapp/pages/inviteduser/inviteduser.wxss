/* pages/inviteduser/inviteduser.wxss */
@import "../../css/iconfont.wxss";
page{
  background: #f5f5f5;
}
.main-container{
  min-height: 800rpx
}
.clearfix::after{
  content: "";
  clear: both;
  display: block;
}
.invi_conrainer{  
  width: 750rpx;
  overflow-x: hidden;
  background: #f5f5f5;
  margin-top: 390rpx;
}
.relation_level{
  width: 110rpx;
  height: 34rpx;
  background: #ffe7e3;
  color: #f66;
  font-size: 22rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-left: 15rpx;
}
.load_style{
    font-size: 24rpx;
  color: #666;
  width: 100%;
  padding: 15rpx 0;
  text-align: center
}
.each_user{
  width: 702rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding-bottom: 35rpx;
  position: relative;
}
.each_user:last-of-type{
  margin-bottom: 20rpx;
}
.user_info{
   width: 650rpx;
   margin-left: 25rpx;
   border-bottom: 2rpx solid #eee;
   padding: 20rpx 0;
   margin-bottom: 35rpx;
   padding-right: 25rpx
}
.user_info .user_touxaing{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  float: left;
  border-radius: 100%;
  position: relative;
  border: 2rpx solid #eee;
}
.user_info .user_touxaing .dister_icon{
  position:absolute;
  top:-10rpx;
  background:#f66;
  color:#fff;
  text-align:center;
  border-radius:20rpx;
  font-size:22rpx;
  width:85rpx;
  left:6rpx;
  height:35rpx;
  line-height:35rpx;
}
.user_info .user_touxaing image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.user_info_time{
  /* height: 140rpx; */
  width: 534rpx;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.user_info_time>view{
  margin-bottom: 20rpx;
}
.user_info_time>view:last-of-type{
  margin-bottom: 0
}
.invite_names{
  color: #666
}
.invite_time{
  color: #666;
  font-size: 26rpx;
}
.usr_name{
  font-size: 30rpx;
  color: #333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: flex;
  align-items: center;
  flex: 1.3
}
.uii_top{
  display: flex;
  align-items: center;
}
.look_detail{
  font-size: 26rpx;
  color: #999;
  text-align: right;
  flex: 0.7
}

.look_detail image{
  width: 15rpx;
  height: 20rpx;
}
.rage_info{
  width: 650rpx;
  padding: 0rpx 25rpx;
  display: flex;
  align-items: center;
}
.rage_info>view:nth-of-type(2){
  text-align: right
}
.rage_info>view{
  flex: 1;
  font-size: 26rpx;
  color: #666;
}
.rage_info>view text{
  color: #f66;
}
.loading{
  padding: 0 10rpx; 
  text-align: center; 
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.loading:before{
  display: inline-block; 
  margin-right: 5rpx; 
  vertical-align: middle; 
  content: ''; 
  width: 40rpx; 
  height: 40rpx; 
  
  background-size: contain; 
  animation: rotate 1s linear infinite; 
}
.loading.complete:before{
  display: none; 
}
.no_state{
    width: 750rpx;
    height: 100%;
    text-align: center;
    color: #666;
    font-size: 26rpx;
}
.no_state image{
  width: 200rpx;
  margin-top: 380rpx;
  margin-bottom: 20rpx;
}
.effect_info{
  width: 650rpx;
  padding: 0rpx 25rpx;
  display: flex;
  align-items: center;
  margin-top: 35rpx;
}
.effect_info>view{
  flex: 1;
  font-size: 26rpx;
  color: #666;
}
.effect_info>view text{
  color: #f66;
  font-size: 26rpx;
}
.effect_info>view image{
  width:30rpx;
  height:30rpx;
  position:relative;
  top:5rpx;
  margin-left:15rpx;
}
.effect_info>view:nth-of-type(2){
  text-align: right
}
.fixed_top{
  width: 750rpx;
  background: #fff;
  position: fixed;
  top: 120rpx;
  z-index: 99
}
.title_bar{
  width: 750rpx;
  background: #fff;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.tb_item{
  flex: 1;
  height: 90rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid #fff;
}
.tb_active{
  border-color: #f66;
  color: #f66;
}
.search{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius:8rpx;
  background:#f5f5f5;
  width: 700rpx;
  margin: 20rpx auto 0;
}
.search-img{
  margin: auto 5rpx auto 20rpx;
}
.fliter_items{
  width: 750rpx;
  background: #fff;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.fi_item{
  flex: 1;
  height: 90rpx;
  display:flex;
  align-items: center;
  justify-content: center;
}
.fliter_content{
  width: 750rpx;
  /* height: 390rpx; */
  padding-bottom: 80rpx;
  padding-top: 30rpx;
  position: relative;
  border-top: 2rpx solid #eee;
}
.fc_title{
  margin: 0 50rpx 30rpx;
}
.fc_option{
  margin: 0 50rpx;
}
.fc_option view{
  float: left;
  background: #f7f7f7;
  color: #999;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  border: 2rpx solid #f7f7f7;
  margin-right: 25rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}
.fc_option view:last-of-type{
  margin-right: 0
}
.fc_option .li_active{
  color: #f66;
  background: #ffefef;
  border-color: #f66;
}
.fc_button{
  position: absolute;
  bottom: 0;
  width: 750rpx;
  height: 80rpx;
  box-sizing: border-box;
}
.fc_button button{
  width: 375rpx;
  float: left;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0
}
button::after{
  border: none;
  border-radius: 0
}
.btn_reset{
  background: #fff;
  color: #666;
  border-top: 2rpx solid #eee;
}
.btn_ok{
  background: #f66;
  color: #fff;
  border-top: 2rpx solid #f66;
}
.modal_bg{
  width: 750rpx;
  height: 100%;
  z-index: 9;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
}
.shixiao_icon{
  position: absolute;
  top: 65rpx;
  right: 40rpx;
  width: 145rpx;
  height: 145rpx;
}
.range_img{
  width:30rpx;
  height:30rpx;
  position:relative;
  top:5rpx;
  margin-left:15rpx;
}
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
    .fixed_top {
      top: 180rpx;
    }
    .invi_conrainer {
      margin-top: 440rpx;
    }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
    .fixed_top {
      top: 160rpx;
    }
    .invi_conrainer {
      margin-top: 420rpx;
    }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
    .fixed_top {
      top: 160rpx;
    }
    .invi_conrainer {
      margin-top: 420rpx;
    }
}






