.slide-container{
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.slide-container .box1{
   height: 90rpx;
  width: 100%;
  padding:0rpx 25rpx;
  line-height: 90rpx;
}
.slide-container .box1 .picker{
  float: left;
  width: 500rpx;
}
.slide-container .box1 .slide_title{
  width: 200rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  white-space: nowrap;
}
.slide-container .box1 .clock_more{
  float: right;
}
.slide-container .box1 image{
  width: 15rpx;
  height: 25rpx;
  margin-top: 10rpx;
}
