
.index-container {
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}

.rich_container image {
  width: 100%;
}

.brn_save {
  width: 700rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  line-height: 1.5;
}

.brn_save::after {
  border: none;
}

.zhezhaoceng {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
}

.tankuang {
  position: fixed;
  width: 500rpx;
  top: 400rpx;
  z-index: 9999;
  background: #fff;
  left: 125rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  border-radius: 15rpx;
  padding-top: 20rpx;
}

.tankuang image {
  width: 180rpx;
  height: 160rpx;
  padding-bottom: 20rpx;
}

.tankuang .btn_close {
  width: 100%;
  padding: 20rpx 0;
  color: #f66;
  text-align: center;
  border-top: 2rpx solid #eee;
  margin-top: 20rpx;
}
