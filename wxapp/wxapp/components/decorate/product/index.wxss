  padding: 10rpx 0;
  width: 100%;
  text-align: center;
  z-index: 3;
}

.sell_out {
  position: absolute !important;
  width: 130rpx !important;
  height: 130rpx !important;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  float: none;
  z-index: 4;
}

.slide_click {
  display: inline-block;
  margin-top: 20rpx;
  position: relative;
  height: 416rpx;
  width: 280rpx;
  overflow: hidden;
  vertical-align: top;
  margin-right: 15rpx;
}

.slide_click image {
  width: 140px;
  height: 211px;
}

.item_img{
  width: 100%;
  height: 100%;
}
.see_more{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: rgba(0, 0, 0, 0.5);
  z-index: 3;
}
.see_more>view{
  margin-bottom: 10rpx;
  color: white;
  font-size: 30rpx;
}
