@import "/css/common.wxss";
@import "/css/iconfont.wxss";

.drawer_box {
  width: 100%;
  background: #fff;
  position: relative;
  padding-bottom: 140rpx;
}

.modal_spec_top {
  width: 100%;
  padding: 0 0rpx 20rpx;
  border-bottom: 1px solid #eee;
  position: relative;
  min-height: 150rpx;
}

.modal_top_img image {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -50rpx;
  left: 20rpx;
}

.modal_top_center {
  padding-top: 50rpx;
  color: #353535;
  font-size: 26rpx;
  margin-left: 240rpx;
}

.modal_top_center.presale {
  padding-top: 10rpx;
}

.modal_top_center text {
  color: #f66;
  font-size: 36rpx;
  display: inline-block;
  margin-bottom: 19rpx;
}

.modal_spec_list, .modal_spec_sum {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
  color: #353535;
}

.modal_spec_other text {
  display: inline-block;
  padding: 0 10rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 25rpx 30rpx 0 0;
  border: 1px solid #ccc;
  border-radius: 3px;
}

.modal_spec_other .spec_active {
  border: 1px solid #f66;
  color: #f66;
}

.comment_list_top .fr image {
  width: 200rpx;
  border-radius: 0;
}

.modal_spec_sum .fl {
  line-height: 60rpx;
}

.goods-spc .modal_spec_sum {
  padding: 0;
  border: 0;
}

.goods-spc .modal_spec_sum .fl {
  color: #888;
  padding-top: 5rpx;
}

.goods-services {
  border-bottom: 1px solid #eee;
}

.goods_fr {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  box-sizing: border-box;
}

.goods_fr text {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  font-size: 36rpx;
  border: 1rpx solid #f5f5f5;
}

.goods_fr .btn_minus {
  left: 0;
}

.goods_fr .btn_plus {
  right: 0;
}

.goods_fr input {
  box-sizing: border-box;
  height: 60rpx;
  width: 90rpx;
  border: 2rpx solid #f5f5f5;
  text-align: center;
  display: block;
  min-height: 60rpx;
  margin-left: 55rpx;
}

.goods-act, .goods-comment, .goods-shop {
  background: #fff;
  padding: 0 30rpx;
  margin-top: 10px;
}

.goods-spc {
  padding: 20rpx 0rpx;
  font-size: 26rpx;
  color: #888;
  line-height: 60rpx;
  background-color: #fff;
  background-size: 15rpx 25rpx;
  box-sizing: border-box;
}

.goods_act_title {
  width: 80rpx;
  float: left;
}

.goods_cuxiao_info {
  width: 80%;
  float: left;
  margin-left: 20rpx;
  color: #353535;
  font-size: 24rpx;
}

.goods_cuxiao_info .pledge {
  display: inline-block;
  margin-right: 20rpx;
  position: relative;
}

.goods_cuxiao_info .pledge image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
  top: 5rpx;
  position: relative;
}

/* 超出一行隐藏 */

.van-ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.goods-spc .goods_cuxiao_info {
  line-height: 60rpx;
}

.exchang_card_info {
  border-bottom: 1rpx solid #eee;
  padding: 30rpx;
}

.choose_card_title > view:first-of-type {
  float: left;
}

.choose_card_title > view:last-of-type {
  float: right;
}

.exchang_arrow {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-right: 1rpx solid #000;
  border-bottom: 1rpx solid #000;
}

.exchang_arrow.down {
  transform: rotate(45deg);
  margin: 0 4rpx 4rpx 15rpx;
}

.exchang_arrow.right {
  transform: rotate(-45deg);
  margin: 0 6rpx 2rpx 0;
}

.exchang_card_list .btn_check {
  float: left;
  width: 30rpx;
  height: 30rpx;
}

.exchang_card_list .btn_check image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 4rpx;
  margin-left: 3rpx;
}

.exchang_card_list .exchang_card_name {
  padding-left: 10rpx;
  overflow: hidden;
  vertical-align: middle;
  display: flex;
  align-items: center;
}
.exchang_card_name view:nth-child(1){
  flex: 1;
}
.exchang_card_list {
  margin-top: 20rpx;
}

.modal_top_center  .presake_prices {
  color: #f66;
  font-size: 26rpx;
}

.modal_top_center  .presake_prices .kedi_money {
  margin-left: 60rpx;
  font-size: 24rpx;
}

.modal_footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  z-index: 99;
}

.modal_footer form {
  flex: 1;
  border: none;
  border-radius: 0;
}

.modal_footer .modal_footer_add {
  text-align: center;
  background: #ffd8d8;
  color: #f66;
  border-radius: 0;
  line-height: 100rpx;
  font-size: 30rpx;
  border: none;
  outline: none;
}

modal_footer .modal_footer_add::after {
  border-radius: 0;
  border: none;
}

.modal_footer button::after {
  border-radius: 0;
  border: none;
}

.modal_footer .modal_footer_now::after {
  border-radius: 0;
  border: none;
}

.modal_footer .modal_footer_now {
  text-align: center;
  background: #f66;
  color: #fff;
  line-height: 100rpx;
  font-size: 30rpx;
}

.modal_footer .modal_footer_exclusive::after {
  border-radius: 0;
  border: none;
}

.modal_footer .modal_footer_exclusive {
  text-align: center;
  background: #f66;
  color: #fff;
  line-height: 100rpx;
  font-size: 30rpx;
}
