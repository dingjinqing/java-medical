.right_item{
  float:right;
  width:540rpx;
  overflow-y:auto;
}
.right_item.no_width{
  margin-left: 180rpx;
  float: right;
}
.brand_title{
  line-height: 64rpx;
  background-color: #ededed;
  font-size: 26rpx;
  color: #666;
  padding-left: 24rpx;
}
.brand_info{
  margin-left: 24rpx;
  padding: 20rpx 0;
  font-size: 0;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  align-items:center;
}
.brand_img{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.brand_name{
  overflow: hidden;
  font-size: 26rpx;
  margin-left: 10rpx;
  color: #333;
  word-break: break-all;
  /* text-overflow: hidden; */
  padding-right: 40rpx;
}
.brand_list > .brand_info:last-of-type{
  border-bottom: none;
}
.no_width{
  width: auto;
}
.brand_box{
  position: relative;
}
.zimu{
  position: absolute;
  top: 40rpx;
  right: 12rpx;
  border-radius: 4rpx;
  display: flex;
  flex-wrap:wrap;
  flex-direction:column;
  text-align: center;
  height: 90%;
  overflow:hidden;
}
.zimu text{
  font-size: 24rpx;
  color: #666;
  padding: 0 8rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction:column;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.sor_item{
  width: 540rpx;
}
.each_sort{
  font-size: 26rpx;
  float: left; 
  margin-right: 30rpx; 
  width: 150rpx;
  margin-top: 50rpx;
  height: 214rpx;
  text-align: center;
}
.sort_img{
  width: 150rpx;
  height: 140rpx;
}
.two_row{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: center;
}
