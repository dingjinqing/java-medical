@import "../act-coupon/index.wxss";
.collect_coupon_detail{
  width: 550rpx;
  background: skyblue;
  overflow: visible;
  padding: 30rpx 0;
  border-radius: 16rpx;
}

.collect_tip{
  color: #fff;
  text-align: center;
  font-size: 36rpx;
}
.collect_score_tip{
  text-align: center;
  color: #fff;
  margin-top: 30rpx;
}
.collect_score_info{
  text-align: center;
  width: 424rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
}
.collect_coupon_button{
  color: #fff;
  width: 200rpx;
  line-height: 60rpx;
  border: 2rpx solid #fff;
  border-radius: 30rpx;
  text-align: center;
  margin:30rpx auto 0;
}
.collect_coupon .price_cou2{
  height: auto;
  max-height: 334rpx;
  overflow-y: auto;
  margin-top: 30rpx
}
.collect_coupon .each_tow{
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
  height: 150rpx;
  overflow-x: hidden;
}
.collect_coupon .each_tow+.each_tow{
  margin-top: 30rpx;
}
.collect_coupon .each_tow::before,.collect_coupon .each_tow::after{
  content: '';
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #fc726a ;
  position: absolute;
  z-index: 300;
}
.collect_coupon .each_tow::before{
  left: -15rpx;
}
.collect_coupon .each_tow::after{
  right: -15rpx;
}

.collect_coupon_box{
  overflow-y: auto;
}
.no_gift{
  width: 546rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
}
.no_gift > image{
  width: 180rpx;
  margin-top: 70rpx;
}
.no_gift > view:nth-child(2){
  font-size: 36rpx;
  color: #333;
  margin-top: 38rpx;
  font-weight: 600
}
.no_gift > view:nth-child(3){
  font-size: 26rpx;
  color: #333;
  margin-top: 30rpx
}
.no_gift_button{
  color: #ff6666;
  width: 200rpx;
  line-height: 60rpx;
  border: 2rpx solid #ff6666;
  border-radius: 30rpx;
  text-align: center;
  margin:30rpx auto 0;
}