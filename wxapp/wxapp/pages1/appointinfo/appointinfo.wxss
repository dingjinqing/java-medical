/* APPOINTINFO.WXSS 2018.03.12 */

page {
  background: #f5f5f5;
  padding-bottom: 100rpx;
}
.main-container{
  min-height: 950rpx;
}
.container {
  overflow: hidden;
  position: relative;
}
button::after{
  border: none;
  border-radius: none;
}
.confirm-complete button{
  font-size: 26rpx;
  background: #fff;
  border: none;
  border-radius: none;
}
.confirm-complete .wancheng_btn{
  border: 2rpx solid #f66;
  border-radius: 0;
  padding: 0;
  margin-right: 25rpx;
}
.confirm-complete .del_btns{
    border: 2rpx solid #ccc;
    border-radius: 0;
  padding: 0;
  margin-right: 25rpx;
}

.status {
  background: #fafafa;
  padding: 30rpx 30rpx;
  color: #f66;
  font-size: 28rpx;
}

.arrive-time {
  background: #fff;
  font-size: 26rpx;
  color: #353535;
  padding: 20rpx 30rpx;
}
.arrive-time>view{
  width: 100%;
}
.arrive-time>view:first-of-type{
  margin-bottom: 15rpx;
}
.arrive-time>view:last-of-type::after{
  content: "";
  display: block;
  clear: both;
}
.arrive-time>view:last-of-type view{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
}
.arrive-time>view:last-of-type .look-map{
  height: 50rpx;
  line-height: 50rpx;
  float: right;
   text-align: center;
  border: 2rpx solid #ccc;
  padding: 0 15rpx;
}

.appointlist-box {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}



.appoint-top {
  background: #fff; 
  padding: 20rpx 30rpx;
}
.appoint-top::after{
  content: "";
  display: block;
  clear: both;
}
.appoint-top>view{
  float: left;
}
.appoint-top>view:nth-of-type(2){
  margin-left: 15rpx;
  margin-top: 5rpx;
}
.appoint-top .top-right{
  float: right;
  margin-top: 7rpx;
}
.top-center {
  font-size: 28rpx;
  color: #353535;
}

.appoint-content {
  background: #FAFAFA;
  padding: 20rpx 30rpx;
}
.appoint-content::after{
  content: "";
  display: block;
  clear: both;
}
.appoint-content .ac_left{
  float: left;
  width: 170rpx;
}
.appoint-content .ac_left image{
  border: 1px solid #eee;
}
.appoint-content .ac_right{
  float: right;
  width: 520rpx;
  height: 152rpx;
  position: relative;
}
.appoint-content .ac_right .ar_names{
  width: 100%;
  position: absolute;
  top: 0;
  font-size:13px;
}
.appoint-content .ac_right .ar_names::after{
  content: "";
  display: block;
  clear: both;
}
.appoint-content .ac_right .ar_names>text:first-of-type{
  float: left;
  width: 95%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.appoint-content .ac_right .appoint-count{
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: right;
  color: #888;
}
.appoine_bottom{
  position: absolute;
  bottom: 0;
  width: 500rpx;
}
.appoine_bottom::-webkit-scrollbar{
	display:none;
}
.appoint-price {
  width:76rpx;
  height:35rpx;
  line-height: 35rpx;
  font-size:24rpx;
  color:#E99130;
  float:left;                                     
  border:2rpx solid #F4C99F;
  border-radius:7rpx;  
  margin: 0rpx 5px 0 0;
  display: flex;
  justify-content: center;
}
.appoint-money {
  font-size: 30rpx;
  float: left;
  color:#f66;
  margin-right: 30rpx;
  
}
.all-price{
  float: left;
  color: #999;
  font-size: 24rpx;
  position: relative;
  top: 4rpx;
}


.appoint-bottom {
  background: #fff;
  padding: 10rpx 30rpx;
}
.appoint-btm2 {
  padding-bottom: 20rpx;
  border-bottom:2rpx solid  #eee;  
}
.appoint-bottom::after{
  content: "";
  display: block;
  clear: both;
}
.appoint-bottom .text1{
  float: left;
}
.appoint-bottom .text2{
  float: right;
}
.appoint-bottom .text1, .appoint-bottom .text2 {
  font-size: 24rpx;
  color: #888;
}
.appoint-btn {
  padding: 20rpx 30rpx;
  background: #fff; 
  text-align: right;
  color: #353535;
}

.verification {
  width: 100%;
  height: 400rpx;
  background: #fff;
}

.veri-text {
  height: 100rpx;

  border-bottom: 2rpx solid #eee;
  font-size: 26rpx;
  color: #353535;

  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.two-code-view {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.two-code  {
  width: 260rpx;
  height: 260rpx;
}

.order-info{
  width: 100%;
  background: #fff;
  color: #888;
  font-size: 24rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.order-info view:last-child{
  padding-top: 20rpx;
}



.confirm-complete {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding-top: 20rpx;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: flex-end;
  align-items: top;
  font-size: 26rpx;
  border-top: 1px solid #eee;
}

.del-appoint, .confirm {
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 3%;
}

.confirm {
  color: #f66;
  border: 2rpx solid #f66;
}

.del-appoint {
  border: 2rpx solid #ccc;
}