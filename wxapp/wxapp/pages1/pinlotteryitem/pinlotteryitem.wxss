@import "/pages/login/login.wxss";
@import "/pages/goodscommon/goodscommon.wxss";
@import "/css/iconfont.wxss";
.lottery_price{
  height: 100rpx;
  width: 690rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.lottery_price>view{
  display: flex;
}
.lp_price{
  align-items: flex-end;
  color: #fff;
  flex: 1.1;
}
.lp_icon{
  border: 1px solid #fff;
  border-radius: 5rpx;
  padding: 0 5rpx;
  font-size: 24rpx;
  height:35rpx;
  line-height:35rpx;
  margin-right: 10rpx;
}
.lp_pin_p  text{
  font-size: 35rpx;
}
.lp_shop_p{
  text-decoration: line-through;
  margin-top: 6rpx;
  font-size: 24rpx;
  margin-left: 10rpx
}
.lp_time{
  text-align: right;
  flex-direction: column;
  color: #fff;
  flex: 0.9;
}
.each_times text{
  background: #fff;
  color: #f66;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin:  0 5rpx;
  padding: 0 5rpx;
}
.pinlo_rule{
  background: #fff;
  width: 690rpx;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.pinlo_rule .pr_top{
  height: 85rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 690rpx;
  border-bottom: 2rpx solid #eee;
}
.pt_left{
  flex: 1;
  font-size: 26rpx;
  color: #333;
}
.pt_right{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #666;
}
.pt_right image{
  width: 15rpx;
  margin-left: 20rpx;
}
.pr_content{
  margin: 40rpx 0;
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.has_icon{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column
}
.has_icon .icon_img{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden
}
.has_icon .icon_img image{
  width: 50rpx;
  height: 50rpx;
}
.icon_text{
  font-size: 24rpx;
  margin-top: 15rpx;
}
.one_heng{
  height: 2rpx;
  background: #eee;
  width: 55rpx;
  margin-top: -25rpx;
}
.pr_bottom{
  padding-bottom: 20rpx;
  color: #666;
  font-size: 24rpx;
}
.pr_bottom view:first-child{
  margin-bottom: 20rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  z-index: 999;
  display: flex;
  align-items: top;
}
.footer>view{
  height: 100rpx;
}
.footer>view view:first-child{
  margin-bottom: 5rpx;
}
.normal_buy{
  flex: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #f3b53f;
  color: #fff;
  font-size: 24rpx;
}
.pin_buy{
  flex: 1.5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 0rpx;
  background: linear-gradient(left,#fe4848,#fe7248);
  background: -webkit-linear-gradient(left,#fe4848,#fe7248);
  background: -moz-linear-gradient(left,#fe4848,#fe7248);
  color: #fff;
  height: 100rpx;
  line-height: 1.555;
  border-radius: 0rpx;
}
