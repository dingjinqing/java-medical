/* pages1/foothistory/foothistory.wxss */
 @import "../../pages/bottom/bottom.wxss"; 
 @import "../../pages/goodscommon/goodslabel.wxss";
 @import "../../css/iconfont.wxss";
 page{
  overflow-x: hidden;
  /* background: #fff; */
}
.clearfix::after{
  content: "";
  display: block;
  clear: both
}
.search_bar{
  width: 92%;  
  background: #fff;
  padding: 10px 4%;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  z-index: 9;
}
 .search_inpout{
   width: 85%;
   margin: 0 auto;
   height: 70rpx;
   line-height: 70rpx;
   border-radius: 14rpx;
} 
.search-box {
  width: 100%;
  background-color: #f5f5f5;  
  display: flex;
  flex-direction: row;
  border:1px solid #eeeeee;
  border-radius: 14rpx;
}
.search-img{ 
  margin: auto 0 auto 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.foot_content{
  padding-top: 130rpx;
  width: 750rpx;
}
.goods_content{
  width: 100%;
}
.each_goods{
  background: #fff;
  width: 370rpx;
  float: left;
  height: 535rpx;
  margin-bottom: 20rpx;
  margin-right: 10rpx;
}
.each_goods:nth-of-type(odd){
  margin-right: 0;
}
.good_imgs{
  width: 370rpx;
  height: 370rpx;
  position: relative
}
.good_imgs .goods_main_img{
  width: 100%;
  height: 100%;
}
.good_names{
  width: 350rpx;
}
.two_line{
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}
.one_line{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 15rpx;
}
.reduce,.exclusive,.grade,.tuangou,.kanjia{
  bottom: 0;
}
.namelab{
  width: 350rpx;
  padding: 0 10rpx;
  height: 90rpx;
}
.good_money{
  padding:0 10rpx;
  width: 350rpx;
}
.goods_price{
  color: #f66;
  font-size: 30rpx;
  font-weight: bold;
}
.exclusive{
  position: absolute;
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color:#56381b;
  background: linear-gradient(left,#eed9ad ,#e7c38a);
  background: -webkit-linear-gradient(left,#eed9ad,#e7c38a);
  background: -moz-linear-gradient(left,#eed9ad,#e7c38a);
  bottom: 150rpx;
  font-size: 24rpx;
}
.pricese{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
  float:right;
}
.line-through-none{
  text-decoration: none !important;
}
.tuangou{
  width: 280rpx;
  background: linear-gradient(left,#f66,#ff8585);
  background: -webkit-linear-gradient(left,#f66,#ff8585);
  background: -moz-linear-gradient(left,#f66,#ff8585);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 80rpx 80rpx 0;
  position: absolute;
  left: 0;
  bottom:0;
  z-index: 4;
  height: 55rpx;
  line-height: 55rpx;
}
.kanjia{
  width: 200rpx;
  background: linear-gradient(left,#fe6f44,#ff9248);
  background: -webkit-linear-gradient(left,#fe6f44,#ff9248);
  background: -moz-linear-gradient(left,#fe6f44,#ff9248);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 80rpx 80rpx 0;
  position: absolute;
  left: 0;
  bottom:0;
  z-index: 4;
  height: 55rpx;
  line-height: 55rpx;
}
.goods_box_two {
  line-height: 50rpx;
  padding: 0 2% 0 6%;
}
.btn_convert {
  float: right;
  padding: 0rpx 25rpx;
  background: linear-gradient(left, #f66, #ff8585);
  background: -webkit-linear-gradient(left, #f66, #ff8585);
  background: -moz-linear-gradient(left, #f66, #ff8585);
  border-radius: 50rpx;
  color: #fff;
}
.market_price{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.each_day_line{
  width: 730rpx;
  color: #666;
  font-size: 24rpx;
  padding-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}
/* 购买按钮 */
.cart_btn{
  float: right;
}
.right_buy_btn{
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    color: white;
    font-size: 24rpx;
    border-radius: 30rpx;
}
.cart_buy_btn{
    width: 90rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    color: rebeccapurple;
    font-size: 24rpx;
    border-radius: 30rpx;
    background: white;
}

.price {
  color: #f66;
  font-size: 30rpx;
  font-weight: bold;
}
.gd_infos{
  margin-top: 15rpx;
}
.isNull{
  background:#fff;
  padding: 30rpx 0 90rpx;
}
.nullImage{
  width: 262rpx;
  height: 276rpx;
  display: block;
  margin: 0 auto;
  margin-bottom:20rpx;
}
.nullContent{
  margin:0 auto;
  text-align: center;
  color: #666;
}
.load_style{
  width: 100%;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 15rpx 0;
}


































