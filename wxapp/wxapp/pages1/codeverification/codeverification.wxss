@import "../scancode/scancode";
page{
    background: #f5f5f5;
    height: 100%;
}
.main-container{
  overflow-x: hidden;
  overflow-y: scroll;
}
.scancode_input{
  font-size: 26rpx;
}
.scancode_top{
    background-color: #fff;
    /* padding: 90rpx 0; */
    position: relative;
}
.scancode_button{
    margin-top: 0;
}
.scancode_bottom{
  padding: 0 20rpx;
}
.bottom_title{
  line-height: 90rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}
.each_order_info{
  width: 710rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.order_title{
  line-height: 79rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 20rpx;
  color: #333;
}
.order_type{
  font-size: 22rpx;
  color:#ff6666;
  border: 1rpx solid #ff6666;
  border-radius: 8rpx;
  padding: 0 12rpx;
  display: inline-block;
  line-height: 34rpx;
  margin-right: 12rpx;
}
.order_info{
  padding: 12.5rpx 20rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.order_info > view{
  line-height: 60rpx;
}
.order_info > view > text:first-of-type{
  width: 20%;
}
.order_info > view > text + text{
  margin-right: 40rpx;
}
.scancode_box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}