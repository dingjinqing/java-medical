/* pages2/allDepartment/allDepartment.wxss */
page{
  background: #fff;
}
.clearfix{
  overflow: hidden;
  }
  .filter {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    border-bottom: 1rpx solid #eee;
    padding: 20rpx 0 10rpx;
  }
  
  .input_box {
    line-height: 70rpx;
    border: 2rpx solid #eee;
    width: 700rpx;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    border-radius: 35rpx;
  }
  
  .input_box icon {
    padding: 0 20rpx 0 30rpx;
    line-height: 1;
    vertical-align: middle;
  }
  
  .input_box>input {
    flex: 1;
  }
  
  .depar_content{
   padding-left: 20rpx;
  }
  .depar_content view{
    height: 90rpx;
    line-height: 90rpx;
    color: #333;
    font-size: 28rpx;
    border-bottom: 2rpx solid #eee;
  }
  .is-null{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
  .is-null image{
    width: 750rpx;
    height: 448rpx;
  }
  .is-null text{
    margin-top: -60rpx;
    color: #999;
  }