/* pages2/prescribeinfo/prescribeinfo.wxss */
@import "../../css/iconfont.wxss";
.prescription-content{
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
}
.prescription-item{
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(13, 19, 24, 0.24),0 0 0rpx rgba(10,16,20,.12);
  position: relative;
  margin-bottom: 15rpx;
}
.prescription-item + .prescription-item{
  margin-top: 30rpx;
}
.prescription-item > .top_info{
  color: #fff;
  background-color: skyblue;
  height: 350rpx;
  background:#26c4bc url(http://medicaldevimg.weipubao.cn/image/wxapp/prescription_bg.png) no-repeat left top/100% 160rpx; 
  border-radius: 16rpx 16rpx 0 0;
}
.prescription-item > .top_info .item-title{
  padding: 46rpx 0;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}
.prescription-item > .item-list-content{
  padding-left: 30rpx;
  background-color: #fff;
  position: relative;
  border-radius: 16rpx 16rpx 0 0;
  margin-top: -190rpx;
}
.each_line{
  padding: 35rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding-right: 30rpx;
}
.has_three{
  justify-content: space-between;
}
.each_line .bold{
  font-weight: bold;
}
.special_one{
  padding: 30rpx 30rpx 50rpx 0;
  border-bottom: 1rpx solid #eee;
}
.special_one textarea{
  padding: 25rpx;
  height: 320rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin-top: 40rpx;
  width: 610rpx;
  font-weight: bold;
}
.doctor-info{
  padding: 0 30rpx 20rpx;
  align-items: flex-end;
  justify-content: space-between;
  background: #fff;
  display: flex;
  position: relative;
}
.doctor-info::after{
  content: '';
  position: absolute;
  height: 16rpx;
  width: 100%;
  bottom: -16rpx;
  left: 0;
  background-image: radial-gradient(10rpx circle at 24rpx 16rpx, transparent 14rpx, #fff 14rpx);
  background-size: 40rpx 20rpx;
}
.each_name{
  margin-top: 30rpx;
}
.ipt_line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
}
.ipt_line input{
  font-weight: bold;
}
.each_line .iconfont{
  font-size: 36rpx;
  color: #333;
  opacity: 0.6;
}
.place{
  color: #999;
  font-weight: normal !important;
}
.btn_check{
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color:#fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: #26C4BC;
  margin: 0 auto;
  z-index: 9999;
}
.picker{
  font-weight: bold;
}
.line_tit text{
  color: red;
  margin-left: 5rpx;
}
.right-into{
  width: 16rpx;
  height: 32rpx;
}