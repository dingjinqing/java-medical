<include src="/pages/common/header.wxml" />
<view class="mian-container">
	<view class="filter">
		<view class="input_box">
			<view>
				<icon size="14" type="search" role="img"></icon>
			</view>
			<input placeholder='搜索医生、科室、疾病' bindconfirm="inputSearch" bindinput="changeInput" value="{{keyWords}}"></input>
		</view>
	</view>
	<block wx:if='{{1 == 1}}'>
		<view class="top_nav">
			<view class="top_nav_item {{tabIndex == 'doctor' ? 'top_choose' : ''}}" data-id="doctor" bindtap="">医师列表</view>
			<view class="top_nav_item {{tabIndex == 'myChat' ? 'top_choose' : ''}}" data-id="address" bindtap="">我的咨询</view>
		</view>
		<block wx:if='{{1 == 1}}'>
			<view class="department">
				<view class="dep_item">耳鼻喉科</view>
				<view class="dep_item">风湿病科</view>
				<view class="dep_item">儿科</view>
				<view class="dep_item">预防保健科</view>
				<view class="dep_item">神经内科</view>
				<view class="dep_item">呼吸内科</view>
				<view class="dep_item">皮肤科</view>
				<view class="dep_item">全部科室</view>
			</view>
			<doctor-list />
		</block>
		<block wx:else>
			<view class='chat_content'>
				<view class="chat_item">
					<view class="chat_left">
						<image src="https://bkimg.cdn.bcebos.com/pic/37d3d539b6003af3a09e2944372ac65c1038b6ea?x-bce-process=image/resize,m_lfit,w_268,limit_1/format,f_jpg"></image>
					</view>
					<view class="chat_right">
						<view class="c_r_top clearfix">
							<text>吴晓红</text>
							<text>2020-07-14</text>
						</view>
						<view class="c_r_bot">
							<text>皮肤科</text>
						</view>
					</view>
				</view>
			</view>
		</block>
	</block>
	<block wx:else>
		<view class="search_content">
			<view>
				<view class="s_depar" data-type='depar' bindtap="choose_type">
					<text style='color:{{choose_type == "depar" ? "#26C4BC" : "#333"}}'>科室1231231</text>
					<text class="iconfont iconjiantou2 {{choose_type == 'depar' ? 'rotate' : ''}}"></text>
				</view>
			</view>
			<view>
				<view class="s_doctor" data-type='doctor' bindtap="choose_type">
					<text  style='color:{{choose_type == "doctor" ? "#26C4BC" : "#333"}}'>医师</text>
					<text class="iconfont iconjiantou2 {{choose_type == 'doctor' ? 'rotate' : ''}}"></text>
				</view>
			</view>
			<scroll-view class="search_result" scroll-y="true" style="height:{{can_show ? (search_data.length >= 6 ? 540:search_data.length * 92):0}}rpx;">
				<block wx:for='{{search_data}}' wx:key='{{key}}'>
					<view class="result_item">{{item}}</view>
				</block>
			</scroll-view>
		</view>

		<doctor-list />
	</block>

  <view class="cover_all" wx:if='{{can_show}}' catchtap="hide_cover"></view>

</view>