.filter {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.input_box {
  line-height: 70rpx;
  border: 2rpx solid #eee;
  width: 700rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  border-radius: 35rpx;
}
.input_box icon {
  padding: 0 20rpx 0 30rpx;
  line-height: 1;
  vertical-align: middle;
}
.input_box > input {
  flex: 1;
}
.top_nav {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  justify-content:space-around;
  align-items: center;
  margin-top: 20rpx;
  background: #fff;
}
.top_nav_item {
  width: 25%;
  text-align: center;
  border-bottom: 1px solid rgba(0,0,0,0);
}