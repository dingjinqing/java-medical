/* pages2/doctorIndex/doctorIndex.wxss */
.top_doc_info{
  background:  #67C4B4;
  width: 750rpx;
  padding-top:25rpx;
  margin-bottom: 25rpx;
}
.doc_square{
  width: 700rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  padding: 36rpx 24rpx;
  box-sizing: border-box;
  border-radius: 16rpx 16rpx 0 0;
  /* background: #fff; */
  background: #fff url(http://medicaldevimg.weipubao.cn/image/wxapp/doctor_index_bg.png) no-repeat right top/ 60% 100% ;
}
.doc_img{
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  border-radius: 100%;
}
.doc_name{
  margin-bottom: 24rpx;
}
.doc_name{
  margin-right: 24rpx;
}
.doc_name text{
  font-size: 32rpx;
  font-weight: bold;
}
.doc_hos{
  margin-bottom: 24rpx;
}
.doc_depart{
  color: #999;
}
.list{
  width: 700rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 16rpx;
  padding: 45rpx 0 5rpx;
  display: flex;
  flex-wrap: wrap;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  width: 232rpx;
  margin-bottom: 50rpx;
}
.item image{
  width: 80rpx;
  height: 80rpx;
}
.item_has_num{
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin-bottom: 32rpx;
}
.item_num{
  position: absolute;
  right: -10rpx;
  top: 0rpx;
  border: 2rpx solid #FF9F15;
  color: #FF9F15;
  font-size: 18rpx;
  padding: 5rpx;
  border-radius: 20rpx;
  z-index: 9;
}
.item_dot{
  position: absolute;
  right: 10rpx;
  top: 0rpx;
  width: 14rpx;
  height: 14rpx;
  background: #FF9F15;
  border-radius: 100%;
}
.modal_bg{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}
.modal{
  position: absolute;
  top: 400rpx;
  width: 630rpx;
  left: 60rpx;
  z-index: 11;
}
.modal_content{
  background: #fff;
  width: 630rpx;
  border-radius: 16rpx;
  padding-bottom: 40rpx;
}
.for_bg{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background:-webkit-linear-gradient(top,#d0edeb,#fff); 
  margin-bottom: 26rpx;
  position: relative;
  border-radius: 16rpx 16rpx 0 0;
}
.for_bg image{
  width: 100%;
  height: 100rpx;
  position: absolute;
}
.em_title{
  text-align: center;
  background: url(http://medicaldevimg.weipubao.cn/image/wxapp/medical_history_bg2.png) no-repeat center 68%/120rpx 14rpx;
  font-weight: bold;
  font-size: 28rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
}
.modal_info{
  padding: 0 30rpx;
} 
.each_line{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}
.left_text{
  width: 180rpx;
  font-size: 28rpx;
}
.left_text text{
  margin-left: 10rpx;
  color: #f00;
}
.modal_fotter{
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  background: #26C4BC;
  font-size: 28rpx;
  color: #fff;
  margin-top: 40rpx;
  border-radius: 40rpx;
}
.btn_close{
  text-align: center;
}
.btn_close image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 40rpx;
}






