/* pages2/doctorIndex/doctorIndex.wxss */
.top_doc_info{
  background:  #67C4B4;
  width: 750rpx;
  padding-top:25rpx;
  margin-bottom: 25rpx;
}
.doc_square{
  width: 700rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  padding: 36rpx 24rpx;
  box-sizing: border-box;
  border-radius: 16rpx 16rpx 0 0;
  background: #fff;
}
.doc_img{
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  border-radius: 100%;
}
.doc_name{
  margin-bottom: 24rpx;
}
.doc_name{
  margin-right: 24rpx;
}
.doc_name text{
  font-size: 32rpx;
  font-weight: bold;
}
.doc_hos{
  margin-bottom: 24rpx;
}
.doc_depart{
  color: #999;
}
.list{
  width: 700rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 16rpx;
  padding: 45rpx 0 5rpx;
  display: flex;
  flex-wrap: wrap;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  width: 232rpx;
  margin-bottom: 40rpx;
}
.item image{
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  margin-bottom: 32rpx;
}









