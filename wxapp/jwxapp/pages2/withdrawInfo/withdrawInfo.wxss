page{
  height: 100%;
  background-color: #f5f5f5;
}

.top-bg-style{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 540rpx;
  background:linear-gradient(0deg,rgba(245,245,245,1),rgba(38,196,188,1),rgba(38,196,188,1));
  z-index: 1;
}
.tab-content {
  display: flex;
  height: 90rpx;
  align-items: center;
  position: relative;
  z-index: 2;
  padding:0 24rpx;
}
.tab-content>view {
  flex: 1;
  display: flex;
  justify-content: center;
}

.tab-content>view>text {
  font-size: 32rpx;
  color: #fff;
  position: relative;
}

.tab-content>view>text.active {
  font-weight: 600;
}

.tab-content>view>text.active::after {
  content: '';
  width: 80%;
  height: 5rpx;
  border-radius: 3rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -8rpx;
}
.type-contennt{
  display: flex;
  width: 702rpx;
  border-radius:16rpx 16rpx 0 0;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  overflow: hidden;
  background:linear-gradient(to bottom, #f5f5f5 0%,#fff 100%);
  border-bottom: 2rpx solid #eee;
}
.type-contennt>.type-item{
  line-height: 90rpx;
  flex: 1;
  text-align: center;
  color: #333;
  background-color: #f5f5f5;
}
.card-item{
  padding: 24rpx;
  background-color: #fff;
  width: 702rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 2;
  box-sizing: border-box;
  border-radius: 0 0 16rpx 16rpx;
}
.card-item + .card-item{
  margin-top: 24rpx;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
}
.card-item-title{
  margin-bottom: 28rpx;
  border-left: 4rpx solid #26C4BC;
  padding-left: 16rpx;
  display: flex;
}
.status-title{
  color: #333;
}
.status-title > text{
  font-weight: 600;
}
.username-title{
  color: #333;
  display: flex;
  margin-right: auto;
}
.username-title > view{
  background:rgba(255,242,224,1);
  color: #FF9F15;
  margin-left: 16rpx;
  padding: 3rpx 4rpx;
}
.prescription-content{
  background-color: #f5f5f5;
  padding: 30rpx 24rpx; 
  border-radius: 16rpx;
  color: #333;
}
.prescription-content + .prescription-content{
  margin-top: 24rpx;
}
.prescription-item + .prescription-item{
  margin-top: 20rpx;
}
.money-content{
  padding: 40rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
}
.money-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}

.money-item > .money{
  font-size: 28rpx;
  font-weight: 600;
}
.date{
  color: #333;
}