@import "/css/iconfont.wxss";
.container {
  padding:20rpx;
}

.doctor_item {
  background: #fff;
  padding: 20rpx;
  display: flex;
  border-radius:16rpx;
  margin-bottom: 20rpx;
}

.doctor_item .d_left image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.doctor_item .d_right{
  margin-left: 20rpx;
  color: #333;
  width: 80%;
  position: relative;
}
.doctor_item .d_right .d_r_top text:first-of-type{
 font-size: 32rpx;
 font-weight: bold;
 margin-right: 20rpx;
}
.doctor_item .d_right .d_r_m_t{
  font-weight:400;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.doctor_item .d_right .d_r_m_b view{
color: #999;
font-weight: 400;
}
.doctor_item .d_right .d_r_bot view{
  font-size: 30rpx;
  font-weight: bold;
  color: #FF9F15;
}
.doctor_item .d_right .d_r_bot text{
  font-weight: 400;
  font-size: 26rpx;
}
.d_r_m_t,.d_r_m_b{
  margin: 10rpx 0;
}

.focus{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #26C4BC;
  border: 2rpx solid #26C4BC;
  border-radius: 25rpx;
  position: absolute;
  right: 0;
  top: -2rpx;
}
.have_focus{
  color: #999;
  border: 2rpx solid #ccc;
}



.bot_footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bot_footer view{
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #26C4BC;
  border-radius: 40rpx;
}
.star{
font-size: 40rpx;
color: #FF9F15;
margin-right: 10rpx;
}
.no_choose{
  color: #E5E5E5;
}
.mid_con{
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: 600rpx;
}
.tit>view{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 30rpx;
}
.service_comment{
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ededed;
}
.service_text>view{
  margin: 20rpx 0;
}
textarea{
  width: 670rpx;
}