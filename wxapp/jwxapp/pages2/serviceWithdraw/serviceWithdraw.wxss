.top-bg-style{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 540rpx;
  background:linear-gradient(0deg,rgba(255,255,255,1),rgba(38,196,188,1),rgba(38,196,188,1));
  z-index: 1;
}
page{
  height: 100%;
  background-color: #fff;
}
.tips{
  line-height: 90rpx;
  color: #fff;
  padding: 0 24rpx;
  position: relative;
  z-index: 2;
}
.card-content{
  width: 702rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  box-shadow:0rpx 8rpx 15rpx 1rpx rgba(238,238,238,0.5);
  border-radius:16rpx;
  position: relative;
  z-index: 2;
  margin: 0 auto;
}
.money-content{
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  position: relative;
}
.record{
  width:141rpx;
  line-height:50rpx;
  color: #26C4BC;
  background:rgba(38,196,188,0.12);
  border-radius:25rpx 0rpx 0rpx 25rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 28rpx;
}
.money-tips{
  font-size: 28rpx;
  color: #333;
}
.money-now{
  font-size: 72rpx;
  color: #333;
  font-weight: 600;
}
.info-content{
  padding: 30rpx 0;
  display: flex;
}
.info-content  > .info-item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  flex: 1;
}
.info-content  > view + view{
  border-left: 2rpx solid #eee;
}
.info-item > image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.info-text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info-tips{
  font-size: 26rpx;
  color: #333;
}
.info-money{
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
.button{
  width:702rpx;
  line-height:80rpx;
  text-align: center;
  background:rgba(38,196,188,1);
  border-radius:40rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 0 auto;
  margin-top: 48rpx;
}
.more{
  text-align: center;
  color: #26C4BC;
  font-size: 28rpx;
  margin-top: 28rpx;
}