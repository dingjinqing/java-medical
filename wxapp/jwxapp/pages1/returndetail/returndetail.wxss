/* pages1/returedetail/returndetail.wxss */
@import "/css/iconfont.wxss";

.main-container {
  color: #000;
  font-size: 26rpx;
}
.order-info {
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
  overflow: hidden;
}
.order-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-icon {
  display: inline-block;
  width: 14rpx;
  margin-top: 4rpx;
  margin-left: 20rpx;
  margin-right: 8rpx;
}
.order-place {
  opacity: 0;
  color: #fff;
  margin-right: 5px;
}
.activity-type-mark {
  margin-right: 10rpx;
  padding: 0 10rpx;
  border: 1px solid #eb8e40;
  color: #f66;
}

/* 售后申请详情 */
.order-header-red {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: -webkit-linear-gradient(left,rgba(156,7,7,0.8),rgba(156,7,7,1));
  padding: 40rpx 30rpx;
  color: #fff;
}
.order-header-h {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.order-header-p {
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.order-header-detail {
  background: #fff;
  padding: 30rpx;
  margin: 0 auto;
  color: #333;
}
.order-header-time {
  color: #f66;
}
.order-header-btns {
  padding: 15rpx 0;
  border-top: 2rpx solid #eee;
  background: #fff;
  margin-bottom: 20rpx;
  padding-right: 30rpx;
  overflow: hidden;
}
.order-header-btn {
  float: right;
  margin-left: 20rpx;
  border: 2rpx solid #ccc;
  padding: 0rpx 20rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
}
.order-block {
  width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.order-block-title {
  padding: 0 30rpx;
  color: #333;
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #eee;
}
.order-block-goods {
  display: flex;
  padding: 20rpx 30rpx;
  background: #f5f5f5;
}
.order-block-goods-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 8rpx;
}
.order-block-goods-info {
  flex: 1;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.order-block-goods-price {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.order-block-goods-detail {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 0;
  overflow: hidden;
}
.order-block-detail-item {
  margin-bottom: 30rpx;
  overflow: hidden;
}
.details-item-title {
  float: left;
  width: 140rpx;
  color: #999;
}
.details-item-content {
  float: right;
  width: 550rpx;
  color: #333;
}
.details-item-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border: 2rpx solid #eee;
}
.order-block-content {
  background: #fff;
  padding: 30rpx 30rpx 0;
  overflow: hidden;
}
.fl {
  float:left;
}
.customer-wrap {
  margin: 30rpx auto;
}
.customer-btn {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  background: -webkit-linear-gradient(left,#f66,#ff8c8c);
  background: -moz-linear-gradient(left,#f66,#ff8c8c);
  background: linear-gradient(left,#f66,#ff8c8c);
  font-size: 30rpx;
  color: #fff;
  text-align: center;
}