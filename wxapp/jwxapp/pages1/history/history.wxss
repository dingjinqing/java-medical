.main-container{
  height: 1500rpx;
}
.filter {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  width: 100%;
}
.input_box {
  line-height: 60rpx;
  border: 2rpx solid #eee;
  width: 700rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}
.input_box icon {
  padding: 0 20rpx;
  line-height: 1;
  vertical-align: middle;
}
.input_box > input {
  flex: 1;
}
.content {
  padding: 0 20rpx;
}
.date {
  line-height: 60rpx;
  color: #666;
}
.goods_content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: -20rpx;
}
