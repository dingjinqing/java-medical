.page-top{
  height: 380rpx;
}
.help-status{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 60rpx;
}
.help-status > image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 200rpx;
}
.help-status > view{
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.goods-content{
  width: 650rpx;
  margin: 0 auto;
  margin-top: -120rpx;
  background-color: #fff;
  padding: 25rpx;
  border-radius: 10rpx;
}
.goods-item{
  display: flex;
}
.goods-item+.goods-item{
  margin-top: 20rpx;
}
.goods-item > image{
  width: 160rpx;
  height: 160rpx;
}
.goods-item > .goods-right{
  flex: 1;
  height: 160rpx;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-right > .goods-name{
  display: -webkit-box;
  overflow:hidden;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2;
}
.goods-right > .goods-desc{
  color: #999;
  font-size: 24rpx;  
}
.page-item-content{
  width: 650rpx;
  margin: 20rpx auto 0;
  padding: 0 25rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.item-title{
  border-bottom: 2rpx solid #eee;
  line-height: 94rpx;
}
.message-input{
  line-height: 90rpx;
  width: 100%;
  height: 90rpx;
}
.progress-info{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.progress-info > .top{
  display: flex;
  justify-content: space-between;
}
.progress-info > .top text{
  font-weight: bold;
}
.progress-bg,.progress-color{
  height: 20rpx;
  background-color: #ccc;
  border-radius: 20rpx;
}
.progress-bg{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}