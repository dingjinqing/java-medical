/* pages1/getprescription/getprescription.wxss */
@import "../../css/iconfont.wxss";
page{
  background: #fff;
}
.mian-container{
  padding-top: 20rpx;
}
.top_img{
  width: 100%;
  height: 360rpx;
}
.center_info{
  width: 100%;
  margin-top: -30rpx;
  border-radius: 35rpx 35rpx 0 0;
  background: #fff;
}
.each_line{
  display: flex;
  align-items: center;
  width: 710rpx;
  margin-left: 40rpx;
  padding: 36rpx 0;
  border-bottom: 2rpx solid #eee;
}
.el_left{
  width: 200rpx;
  font-size: 28rpx;
}
.el_left text{
  color: #ff0000;
}
.btn_add{
  width: 670rpx;
  height: 80rpx;
  border-radius: 50rpx;
  color: #fff;
  background: #26C4BC;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  margin: 10rpx auto 0;
}
.modal_bg{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  background-color:rgba(0,0,0,0.5);
}
.modal_content{
  position: absolute;
  top: 200px;
  left: 100rpx;
  width: 550rpx;
  background: #fff;
  z-index: 9;
  border-radius: 20rpx;
}
.modal_info{
  padding: 20rpx;
}
.modal_info .modal_text{
  max-height: 600rpx;
  overflow-y: scroll;
  padding: 30rpx 0;
}
.modal_btn_group{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid #eee;
}
.modal_btn_group > view{
  width: 50%;
  height: 80rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  text-align: center;
}
.btn_agreee{
  border-left: 2rpx solid #eee;
  color: #f66;
}
.modal_title{
  font-size: 36rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
}
.btn_get{
  margin-top:36rpx;
  text-align: center;
  color: #26C4BC;
  font-size: 28rpx;
}
.button.mobile{
  border-radius: 8rpx;
  background-color: #26C4BC;
  color: #fff;
  line-height: 70rpx;
  text-align: center;
  width: 200rpx;
}
.button.mobile.gray{
  color: #fff;
  background-color: #999;
}
.mobile-input{
  width: 270rpx;
}
.add_tips{
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}
.add_tips image{
  width: 30rpx;
  height: 30rpx;
}