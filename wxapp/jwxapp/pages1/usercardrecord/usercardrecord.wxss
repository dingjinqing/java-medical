/* pages/usercardrecord/usercardrecord.wxss */
page{
  background: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.card_record_top{
  background: linear-gradient(right,#f66,#ff8585);
  background: -webkit-linear-gradient(right,#f66,#ff8585);
  background: -moz-linear-gradient(right,#f66,#ff8585);
  text-align: center;
  padding: 45rpx 0;
  margin: 20rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
}
.top_title{
  color: #fff;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.top_show_number{
  color: #fff;
  font-size: 60rpx;
  margin-top: 5rpx;
}
.show_type_choose{
  color: #000;
  display: flex;
  justify-content: center;
}
.show_type_choose view{
  flex: 1;
  font-size: 30rpx;
  text-align: center;
  padding: 5rpx 0 25rpx 0;
}
.show_type_choose .chooseed{
  color: #f66;
  border-bottom: 2rpx solid #f66;
}
.record_item{
  background: #fff;
  padding: 5rpx;
}
.record_item{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  color: #000;
}
.record_item:last-child{
  border: none;
}
.fl{
  float: left;
  font-size: 30rpx;
}
.fr{
  float: right;
  font-size: 30rpx;
  color: #ff6666;
}
.record_item text{
  color: #666;
  font-size: 24rpx;
  margin-top: 15rpx;
}
.no_detail{
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.no_detail image{
  width: 250rpx;
}
.no_detail text{
  display: block;
  color: #bbb;
  margin-top: 10rpx;
}
.card_record_top > view{
  flex: 1;
}