/* pages1/returnlogistics/returnlogistics.wxss */
@import "/css/iconfont.wxss";

.main-container {
  color: #000;
  font-size: 26rpx;
}
.order-header {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
}
.order-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10; 
  width: 100%;
  height: 90rpx;
}
.footer-btn {
  border-radius: 0;
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #f66;
  font-size: 30rpx;
  border-radius: 0;
  padding: 0;
}
.order-info {
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
  overflow: hidden;
}
.activity-type-mark {
  margin-right: 10rpx;
  padding: 0 10rpx;
  border: 1px solid #eb8e40;
  color: #f66;
}
.order-required {
  color: #f66;
  margin-right: 5px;
}
.order-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-icon {
  display: inline-block;
  width: 14rpx;
  margin-top: 4rpx;
  margin-left: 20rpx;
  margin-right: 8rpx;
}
/* 售后申请详情 */
.order-header-red {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: -webkit-linear-gradient(left,rgba(156,7,7,0.8),rgba(156,7,7,1));
  padding: 40rpx 30rpx;
  color: #fff;
}
.order-header-h {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.order-block-detail-item {
  margin-bottom: 30rpx;
  overflow: hidden;
}
.order-left {
  float: left;
}
.order-upload {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.order-upload-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 26rpx;
  height: 26rpx;
}
.order-upload-addicon {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.order-upload-img {
  width: 150rpx;
  height: 150rpx;
  float: left;
}
/* 物流信息 */
.order-flex-1 {
  flex: 1;
}
.order-place2 {
  opacity: 0;
  visibility: hidden;
}