/* pages1/distributionCode/distributionCode.wxss */
.mainContainer {
  padding: 20rpx;
}
.imgContainer {
  padding: 40rpx 20rpx;
  background: #fff;
  margin-bottom: 29rpx;
}
.titleContent {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}
.titleContent .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.titleContent .tip {
  line-height: 40rpx;
}
.imgCode{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  background: #f5f5f5;
}
.imgCode image {
  width: 100%;
  height: 100%;
}
.imgCode .imgClose {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 26rpx;
  height: 26rpx;
}
.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius:8rpx;
  color: #fff;
  font-size: 26rpx;
  border: none;
}