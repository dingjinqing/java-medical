/* pages1/returnrecord/returnrecord.wxss */
page{
  background: #f5f5f5;
  width: 750rpx;
}
.ps_type{
  padding: 0 10rpx;
  border: 1px solid #eb8e40;
  color: #eb8e40;
  margin-right: 10rpx;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both;
}
.main-container{
  padding-top: 20rpx;
}
.order_goods{
  width: 690rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
  padding: 30rpx 0 20rpx;
}
.order_num{
  margin-left: 20rpx;
}
.returnr_num{
  margin-left: 20rpx;
  padding-bottom: 30rpx;
}
.goods_info{
  padding: 20rpx;
  background: #f5f5f5;
  width: 610rpx;
  margin: 0 auto;
}
.goods_img{
  float: left;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.goods_img image{
  width: 150rpx;
  height: 150rpx;
}
.goods_detail{
  float: right;
  position: relative; 
  width: 435rpx;
  height: 150rpx;
}
.goods_name{
  width: 100%;
  display: -webkit-box;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: #333;
  position: absolute;
  top: 0;
  left: 0;
}
.goods_desc{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
  position: absolute;
  top: 75rpx;
  left: 0;
}
.price_info{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.goods_price{
  flex: 1.2;
  color: #f66;
  /* font-size: 30rpx;   */
}
.goods_price text{
  font-size: 30rpx;
}
.goods_num{
  color: #999;
  font-size: 24rpx;
  flex: 0.8;
  text-align: right
}



.buyer_info{
  width: 690rpx;
  background: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.buyer_title{
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.bt_left{
  flex: 0.8;
  color: #333;
  font-weight: bold;
  font-size: 26rpx;
  text-align: left;
}
.return_state{
  flex: 1.2;
  color: #f66;
  font-size: 26rpx;
  text-align: right;
}
.main_center {
  font-size: 26rpx;
  color: #333;
  padding: 0rpx 20rpx;
  padding-bottom: 30rpx;
}
.main_cen_left{
  margin-bottom: 30rpx;
}
.main_cen_left:last-of-type{
  margin-bottom: 0;
}

.return_shuom image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border: 2rpx solid #eee;
}
.return_shuom image:last-of-type{
  margin-right: 0
}
.huanhuo_goods_area{
  background: #f5f5f5;
  padding: 20rpx;
  width: 610rpx;
  margin-bottom: 30rpx;
}
.h_gd_img{
  float: left;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
}
.h_gd_img image{
  width: 100%;
  height: 100%;
}
.h_gd_info{
  float: right;
  width: 435rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.h_gd_name{
  width: 100%;
}
.hname{
  width: 100%;
  display: -webkit-box;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #333;
  margin-bottom: 10rpx;
}
.hdesc{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#999;
  font-size: 24rpx;
}
.h_gd_price{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-end;
  color: #999;
}
.hmoney{
  color: #f66;
}
