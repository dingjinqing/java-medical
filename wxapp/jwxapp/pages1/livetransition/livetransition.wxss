.main-container{
  display: flex;
  justify-content: center;
  align-items: center;
}
.live-info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.live-image-content{
  width:241rpx;
  height:241rpx;
  border:2rpx solid rgba(246,156,61,0.3);
  border-radius:50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 57rpx;
}
.live-image-content > view{
  width:198rpx;
  height:198rpx;
  border:2rpx solid rgba(246,156,61,0.8);
  border-radius:50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.live-image-content > view > image{
  width: 155rpx;
  height: 155rpx;
  border: 4rpx solid rgba(246,156,61,1);
  border-radius: 50%;
}
.live-title{
  color: #333;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.live-name{
  color: #333;
  font-size: 30rpx;
}