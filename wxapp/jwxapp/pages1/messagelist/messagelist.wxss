/* pages1/messagelist/messagelist.wxss */
@import "../../css/iconfont.wxss";
.mian-container{
  padding-top: 20rpx;
}
.top_nav{
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
}
.top_nav .each_nav{
  text-align: center;
  line-height: 90rpx;
  border-bottom: 4rpx solid transparent;
  box-sizing: border-box;
  position: relative;
}
.each_nav text{
  position: absolute;
  top: 20rpx;
  right: -10rpx;
  padding: 0 10rpx;
  background: #fff;
  border: 1px solid #f66;
  color: #f66;
  border-radius: 200rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 22rpx;
}
.top_nav .active{
  border-bottom: 4rpx solid #26C4BC;
  font-weight: bold;
}
.list_content{
  padding-top: 80rpx;
}
.each_line{
  width: 650rpx;
  padding: 40rpx 25rpx;
  margin: 25rpx auto 0;
  background: #fff;
  border-radius: 10rpx;
}
.line_top{
  display: flex;
  justify-content: space-between;
  color: #999;
  margin-bottom:24rpx;
}
.lt_bold{
  color: #333;
  font-weight: bold;
}
.line_bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.lt_text{
  width: 610rpx;
  color: #999;
  white-space: nowrap;
  overflow:hidden;
  text-overflow: ellipsis;
}
.line_bottom image{
  width: 14rpx;
}
.no_content {
  text-align: center;
  padding-top: 350rpx;
}
.no_content image{
  height: 450rpx;
  width: 750rpx;
  margin: 0 auto 40rpx;
}
.no_content .no_word{
  text-align: center;
  margin-bottom: 20rpx;
  color: #999;
}
.iconshanchu2{
  margin-left: 20rpx;
}









