<!--pages1/patientinfo/patientinfo.wxml-->
<include src="/pages/common/header.wxml"/>
<view class="mian-container">
  <view class="patirnt_info">
    <view class="each_p_line">
      <view class="el_left">姓名</view>
      <view class="el_right">
        <input type="text" value="{{patient_info.name}}" placeholder="请输入真实姓名" placeholder-class="placeholder" bindblur="nameInput"></input>
      </view>
    </view>
    <view class="each_p_line">
      <view class="el_left">年龄</view>
      <view class="el_right">
        <input type="text" value="{{patient_info.age}}" placeholder="请输入年龄" placeholder-class="placeholder" bindblur="ageInput"></input>
      </view>
    </view>
    <view class="each_p_line">
      <view class="el_left">性别</view>
      <view class="el_right" style='background:url({{imageUrl}}image/wxapp/right_into.png) no-repeat right;background-size:16rpx;'>
        <picker mode="selector" value="{{sex_index}}" range="{{gender}}" bindchange="bindSexChange">
          <view class="picker" wx:if='{{sex_index != -1}}'>
            {{gender[sex_index]}}
          </view>
          <view wx:else class='placeholder'>请选择</view>
				</picker>
      </view>
    </view>
    <view class="each_p_line">
      <view class="el_left">身份证号码</view>
      <view class="el_right">
        <input type="text" value="{{patient_info.cardId}}" placeholder="请输入身份证号码" placeholder-class="placeholder" bindblur="idInput"></input>
      </view>
    </view>
    <view class="each_p_line">
      <view class="el_left">手机号码</view>
      <view class="el_right">
        <input type="text" value="{{patient_info.mobile}}" placeholder="请输入手机号码" placeholder-class="placeholder" bindblur="mobileInput"></input>
      </view>
    </view>
    <view class="each_p_line">
      <view class="el_left">疾病史</view>
      <view class="el_right" style='background:url({{imageUrl}}image/wxapp/right_into.png) no-repeat right;background-size:16rpx;' bindtap="open_modal">
        疾病历史
      </view>
    </view>
    <view class="spcial_line">
      <view class="ape_title">备注</view>
      <textarea placeholder="其他病史或注意事项" bindblur="tipInpuit"></textarea>
    </view>
  </view>
  <view class="btn_submit"  bindtap="bindSubmit" style="padding-bottom:{{isIpx == 1 ? '60rpx':'0'}}">
    <view>提交</view>
  </view>
  <view class="modal_bg" wx:if='{{showModal == 1}}' bindtap="close_modal"></view>
  <view class="history_modal" wx:if='{{showModal == 1}}' style="padding-bottom:{{isIpx == 1 ? '85rpx':'25rpx'}}">
    <view class="modal_title">
      疾病史
      <image src="http://medicaldevimg.weipubao.cn/image/wxapp/close_history.png" bindtap="close_modal"></image>
    </view>
    <view class="modal_content">
      <view class="each_pain_line">
        <view class="epl_tit">过往病史</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 是</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 否</view>
        </view>
      </view>
      <view class="history_area">
        <view class="each_his_item active">高血压</view>
        <view class="each_his_item">心脏病</view>
        <view class="each_his_item">糖尿病</view>
        <view class="each_his_item">高血压</view>
        <view class="each_his_item">心脏病</view>
        <view class="each_his_item">糖尿病</view>
        <view class="each_his_item">高血压</view>
        <view class="each_his_item">心脏病</view>
        <view class="each_his_item">糖尿病</view>
      </view>
      <view class="each_pain_line">
        <view class="epl_tit">过敏史</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 是</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 否</view>
        </view>
      </view>
      <view class="guomin_his">
        <textarea placeholder="请输入过敏原"></textarea>
        <view class="btn_save_guomin">保存</view>
      </view>
      <view class="each_pain_line">
        <view class="epl_tit">家族病史</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 是</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 否</view>
        </view>
      </view>
      <view class="history_area">
        <view class="each_his_item">高血压</view>
        <view class="each_his_item">心脏病</view>
        <view class="each_his_item">糖尿病</view>
      </view>
      <view class="each_pain_line">
        <view class="epl_tit">肝功能</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 正常</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 异常</view>
        </view>
      </view>
      <view class="each_pain_line">
        <view class="epl_tit">肾功能</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 正常</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 异常</view>
        </view>
      </view>
      <view class="each_pain_line">
        <view class="epl_tit">妊娠哺乳</view>
        <view class="epl_choose">
          <view><text class="iconfont icondanxuan"></text> 是</view>
          <view><text class="iconfont icondanxuanbiankuang"></text> 否</view>
        </view>
      </view>
      <view class="history_area">
        <view class="each_his_item {{ item.is_checked == 1 ? 'active':'' }}" wx:for='{{feedStatus}}' wx:key='key'>{{item.text}}</view>
      </view>
    </view>
    <view class="modal_btn">提交</view>
  </view>
</view>
