page{
  background: #fff;
}
.service-content{
  display: flex;
  flex-direction: column;
}
.service-item{
  padding: 20rpx;
  display: flex;
}

.item-pic{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.item-pic image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.item-right{
  display: flex;
  flex-direction: column;
}
.item-title{
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}
.item-content{
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}