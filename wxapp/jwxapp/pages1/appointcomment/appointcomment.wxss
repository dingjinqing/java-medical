/* pages1/appointcomment/appointcomment.wxss */
@import "/css/iconfont.wxss";
page{
  background: #f5f5f5;
  padding-bottom: 120rpx;
}
.appoint-comment-page {
  box-sizing: border-box;
}
.ac-comment {
  background: white;
  padding: 30rpx 0rpx;
  margin-bottom: 20rpx;
}
.ac-chart {
  box-sizing: border-box;
  height: 200rpx;
  padding: 20rpx;
  overflow: hidden;
}
.ac-chart-left {
  float: left;
  width: 30%;
  text-align: center;
  height: 100%;
}
.ac-chart-percent {
  color: #ff6666;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.ac-chart-percent-intro {
  font-size: 26rpx;
}
.ac-chart-right {
  float: right;
  width: 65%;  
}
.ac-percent-wrap {
  padding: 10rpx;
}
.ac-percent-wrap progress{
  display: inline-block;
  width: 55%;
  margin-left: 20rpx; 
}

.ac-content {
  background: white;
  min-height: 400rpx;
}
.com_detail_top{
  display: flex;
  border-bottom: 1px solid #eee;
  height: 106rpx;
  line-height: 106rpx;
}
.com_view{
  flex: 1;
  text-align: center;
}
.group_over{
  width: 100%;
  color: #fff;
  background: #000;
  opacity: 0.6;
  text-align: center;
  padding:10rpx 0prx;
}
.group_act_over{
  height:40px;
  line-height:40px;
}
.all_per_view text{
  width:40%;
}
.com_tag{
  padding-top:20rpx;
}
.tag{
  color: #999a9e;
  background: #f3f4f8;
  margin-right: 4%;
  margin-left: 3%;
  height: 21px;
  line-height: 21px;
  padding: 0 7px;
  margin-bottom:10rpx;
}
.com_info{
  padding: 10px;
  border-bottom: 1px solid #ddd;
}
.com_detail .com_info:last-child{
border: none
}
.com_info image{
width:220rpx;
height: 28rpx;
}

.com_time{
overflow:hidden;
color:#888;
}
.grade-star{
  width: 220rpx;
  height: 14px;

  background-size: auto 100%;
}
.g-star1 {
  background-position-x: 80%;
}
.g-star2 {
  background-position-x: 60%;
}
.g-star3 {
  background-position-x: 40%;
}
.g-star4 {
  background-position-x: 20%;
}
.g-star5 {
  background-position-x: 0%;
}
.com_info view{
  margin:10rpx 0rpx;
}
.com_mobile{
float:right;
margin-left:5px;
}
.fl{
float: left;
}
.fr{
float: right;
}
.fl image{
width: 40rpx;
}
.com_img .fl{
margin-right: 20rpx;
width: 120rpx;
height: 120rpx;
border: 1px solid #eee;
}
.com_img .fl image{
width: 100%;
height: 100%;
}
@media screen and (min-width:370px){
  .grade-star{
      width: 185rpx;
  }
}
@media screen and (min-width: 400px){
  .grade-star{
      width: 170rpx;
  }
}