/* pages/aftersaleorder/aftersaleorder.wxss */
@import "../../css/iconfont.wxss";
page{
  width: 750rpx;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both;
}
image{
	vertical-align: top;
}
.main-container {
padding-top: 104rpx;
  min-height: 940rpx;
}
.pixed{
  width: 750rpx;
  position: fixed;
  z-index: 999;
  top: 130rpx; 
  background: #eee;
}
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
   .pixed{
     top: 180rpx;
   }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
   .pixed{
     top: 155rpx;
   }
}
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
    .pixed{
     top: 155rpx;
   }
}
@media only screen and (min-height:812px){
   .pixed{
     top: 150rpx;
   }
}
.top_search{
  padding: 10rpx 0;
}
.search{
  margin-left: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-radius:14rpx;
  border:1px solid #eeeeee;
  background:#fff;
  width: 600rpx;
  float: left
}
.search-img{
  margin: auto 0 auto 20rpx;
}
.placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.search input{
  height: 100%;
  width: 470rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-left: 12rpx;
}
.search image{
  width: 30rpx;
  margin-top: 22rpx
}
.btn_search{
  width: 110rpx;
  height: 80rpx;
  text-align: center;
  line-height: 82rpx;
  float: left;
}
.each_order{
  width: 750rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.eo_top{
  padding:30rpx 20rpx;
  width: 710rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order_status{
  color: #f66;
  display: flex;
  align-items: center;
}
.order_status .iconfont{
  color: #f66;
  font-size: 35rpx;
  margin-right: 10rpx;
  margin-top: 1rpx;
}
.order_goods{
  width: 710rpx;
  padding: 30rpx 20rpx;
  background: #fafafa;
}
.goods_img{
  width: 150rpx;
  height: 150rpx;
  float: left;
}
.goods_img image{
  width: 100%;
  height: 100%;
}
.goods_info{
  float: right;
  width: 540rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.goods_desc{
  width: 100%;
}
.goods_name{
  width: 100%;
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods_attr{
  color: #999;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
}
.goods_price{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.goods_money{
  color: #f66;
  font-weight: 600;
}
.goods_num{
  color: #999;
}
.return_info{
  width: 710rpx;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn_look_detail{
  border: 2rpx solid #ccc;
  width: 140rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  border-radius: 4rpx;
}
.order-no{
  padding: 10rpx 0px;
  font-weight: normal;
  text-align:centent;
  margin: 0 auto;
  width:100%;
  display: flex;
  padding-top: 50rpx;
}
.order-no-img {
  width:200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block
}
.no_status {
  height: 360rpx;
  margin-top: 400rpx;
}
.no-zi {
  color: #b8b8b8;
  text-align: center;
  font-size: 26rpx;
  margin-top: 20rpx;
}