  border-bottom: 2rpx solid #eee;

  margin-left: 30rpx;

  line-height: 100rpx;
}

.appoint-service-cont {
  color: #353535;
  width: 100%;
  font-size: 24rpx;
  padding: 20rpx;
}
.appoint-service-cont image{
  display: block;
  max-width: 100%;
  margin: 0 auto;
}


.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #eee;
  background: #fff;
  overflow: hidden
}
.footer_1{
  float: left;
  width: 40%;
  color: #888;
  font-size: 24rpx;
  display: flex;
  height: 110rpx;
}
.footer_1 image{
  width: 44rpx;
}
.footer_1>view{
  flex: 1;
  text-align: center;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  position: relative;
  overflow: hidden
}

.footer_1>view:first-child{
  border-right: 1px solid #eee;
}

.footer_3{
  float: left;
  width: 60%;
  color: #fff;
  font-size: 30rpx;
  background: #f66;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
}


.modal-box {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;

  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 9000;
}

.modal-container {
  width:100%;

  overflow:hidden;
  z-index:9999;
  position:fixed;
  bottom:0;
}

.modal-top {
  width:100%;
  height:100rpx;
  background:#fff;

  border-bottom:2rpx solid #eee;

  text-align: center;
  line-height: 100rpx;
}

.modal-top view {
  font-size: 26rpx;
  color: #353535;
}

.modal-top view text {
  margin-left: 13%;
}

.modal-top image {
  width: 50rpx;
  height: 50rpx;

  float: right;
  padding: 3%;
}

.modal-bottom {
  width: 100%;
  height: 450rpx;
  background: #fff;

  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.man-btn {
  width:100%;

  border-bottom: 2rpx solid #eee;
  padding:2% 0;

  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.man-btn-row {
  width:100%;

  display:flex;
  flex-direction:column;
}

.icon_sel {
  width:6%;

  margin:0 3%;
}

.icon_sel image {
  width:40rpx;
  height: 40rpx;
}

.icon_man {
  width: 80rpx;
  height: 80rpx;

  border-radius: 50%;
  border: 2rpx solid #ccc;

  margin:0% 3% 0 0;
}

.title {
  font-size: 26rpx;
  color: #353535;

  margin-bottom:5%;
}

.man-content {
  display:flex;
  flex-direction:column;
  font-size:28rpx;
}

.man-text {
  color: #888;
}

