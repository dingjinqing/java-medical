<!--预约服务：pages1/appointment/appointment.wxml-->
<include src="/pages/common/header.wxml" />
<view class="main-container">
  <view class="container" style="">
    <!-- 轮播图 -->
    <view class="swiper-top">
      <swiper class="swiper">
        <block>
          <swiper-item>
            <image class="slide-image" src="" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 门店名称 -->
    <view class="appoint-name">
      <view class="name-top"></view>
      <view class="appoint-name-btm">
        <block>
          <view class="appoint-price">订金</view>
          <view class="appoint-money">
            <text style="font-size:28rpx;">￥</text><text></text>
          </view>
          <view class="appoint-old-price"></view>
        </block>
        <block>
          <view class="appoint-price">总价</view>    
          <view class="appoint-money">
            <text style="font-size:28rpx;">￥</text><text></text>
          </view>
        </block>
      </view>
    </view>
    <!-- 营业状态 -->
    <view class="appoint-status">
      <view class="status-top status appoint-text">
        <image></image>
        <text style="width:476rpx;"></text>
        <text style="width:170rpx;text-align: right;">km</text>
      </view>
      <view class="status-btm status">
        <image></image>
        <text>每天</text>
        <text>工作日</text>
        <text></text>
      </view>
    </view>
    <!-- 预约时间 -->
    <view class="appoint_ss">
      <view class="appoint-time">
        <view class="app_tips appoint-text">预约时间</view>
        <view class="app_times">
          <text class="app_text" style="color:#666;">请选择</text>
          <text class="app_text" style="color:{{comColor}}"></text>
          <text class="app_text">暂无时段可选择</text>
          <image class="btn_right" src="{{imageUrl}}image/wxapp/right_into.png" mode="widthFix" />
        </view>
      </view>
    </view>
    <!-- 评价 -->
    <block>
      <view class="goods-comment">
        <view class="clearfix goods_comment_title">
          <view class="goods_act_title">评价</view>
          <view class="goods_comment_all">
            <text>查看全部</text>
            <image class="click_more"  src='{{ imageUrl }}/image/wxapp/backward_right.png' mode="widthFix"></image>
          </view>
        </view>
        <view class="comment_list">
          <view class="comment_list_top clearfix">
            <view class="fl"></view>
            <view class="fr"></view>
            <view class="comment_list_text"></view>
            <view class="comment_list_img clearfix">
              <block>
                <view>
                  <image  src='{{ item_img }}'></image>
                </view>
              </block>
            </view>
          </view>
        </view>
      </view>
    </block>
    <!-- 服务详情-->
    <block>
      <view class="appoint-service">
        <view class="appoint-service-name appoint-text">预约服务详情</view>
        <view class="appoint-service-cont" style="overflow-x:hidden">
          <view>
            <rich-text class="" nodes="{{}}">
            </rich-text>
          </view>
        </view>
      </view>
    </block>
    <!-- 底部 -->
    <view class='footer clearfix' style='height:{{isIpx == 1?"160rpx;":"100rpx;"}}'>
      <view class='footer_1'>
        <view bindtap="toIndex">
          <image mode="widthFix"></image>
          <view>门店首页</view>
        </view>
        <view>
          <contact-button open-type="contact" session-from="weapp"></contact-button>
          <image mode="widthFix" style="margin-top:2rpx;"></image>
          <view style="margin-top:6rpx;">客服</view>
        </view>
      </view>
      <view class='footer_3' bindtap="OneClickBuy" style='background:{{comColor}}'>立即预约</view>
    </view>
    <view class='footer clearfix no_check' wx:if="{{service_info.business_state != 1 || service_info.payment_way == 0}}">
      <button open-type="contact"></button>
      <image mode='widthFix'></image>
      <view>客服</view>
    </view>
  </view>
</view>
<include src="/pages/common/footer.wxml" />
