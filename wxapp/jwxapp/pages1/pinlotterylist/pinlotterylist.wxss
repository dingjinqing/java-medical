/* pages1/pinlotterylist/pinlotterylist.wxss */
page{
  height: 100%;
  background: #f5f5f5;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both;
}
.main-container{
  width: 750rpx;
}
.pl_top{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.time_show{
  width: 100%;
  color: #fff;
  text-align: center;
}

.pl_content .each_goods{
  width: 710rpx;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.each_goods .ec_imgs{
  width: 250rpx;
  height: 250rpx;
  float: left;
  overflow: hidden;
}
.each_goods .ec_imgs image{
  width: 250rpx;
  height: 250rpx;
}
.ec_bottom{
  width: 440rpx;
  height: 250rpx;
  float: right;
  position: relative;
}
.ec_names{
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin: 20rpx 0;
  position: absolute;
  top: 0;
}
.left_style{
  position: absolute;
  bottom: 20rpx;
  width: 100%;
}
.ec_price{
  float: left;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
}
.sale_price{
  /* flex: 1.2; */
  font-size: 30rpx;
  color: #f66;
  margin-right: 15rpx;
}
.market_price{
  /* flex: 0.8; */
  color: #666;
  font-size: 24rpx;
  text-decoration: line-through;
  text-align: right
}
.ec_btn{
  float: right;
  width: 160rpx;
  height: 60rpx;
  background: #f56c57;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 40rpx;
}