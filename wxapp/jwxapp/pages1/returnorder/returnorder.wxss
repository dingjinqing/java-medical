/* pages1/returnorder/returnorder.wxss */
@import "/css/iconfont.wxss";

.main-container {
  color: #000;
  font-size: 26rpx;
}
.order-header {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
}
.order-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10; 
  width: 100%;
  height: 90rpx;
}
.footer-btn {
  border-radius: 0;
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #f66;
  font-size: 30rpx;
  border-radius: 0;
  padding: 0;
}
.order-info {
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
  overflow: hidden;
}
.activity-type-mark {
  margin-right: 10rpx;
  padding: 0 10rpx;
  border: 1px solid #eb8e40;
  color: #f66;
}
.copy-button {
  display: inline-block;
  margin-left: 10rpx;
  padding: 0 12rpx;
  vertical-align: middle;
  line-height: 40rpx;
  font-size: 26rpx;
}
.order-info-title {
  width: 100%;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 30rpx;
}
.order-info-type {
  padding-top: 25rpx;
}
.order-type {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  margin-right: 30rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.order-required {
  color: #f66;
  margin-right: 5px;
}
.order-upload {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.order-upload-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 26rpx;
  height: 26rpx;
}
.order-upload-addicon {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.order-goods-info {
  display: flex;
  margin-top: 30rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.order-goods-check-wrap {
  width: 36rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.iconduoxuanbiankuang {
  font-size: 17px;
  color: #ccc;
}
.iconduoxuan {
  font-size: 17px;
  color: #9c0707;
}
.order-goods-info-details {
  flex: 1;
  display: flex;
}
.order-goods-img {
  width: 202rpx;
  height: 160rpx;
}
.goods-img {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
  border: 1px solid #eee;
}
.goods-name {
  height: 70rpx;
  vertical-align: top;
}
.goods-spec {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-price {
  display: flex;
  justify-content: space-between;
  width: 450rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-icon {
  display: inline-block;
  width: 14rpx;
  margin-top: 4rpx;
  margin-left: 20rpx;
  margin-right: 8rpx;
}
.order-place {
  opacity: 0;
  color: #fff;
  margin-right: 5px;
}
.order-textarea {
  width: 94%;
  height: 230rpx;
  background: #f8f8f8;
  padding: 20rpx;
  margin-top: 30rpx;
}
.order-left {
  float: left;
}
.order-remark {
  color: #888;
}
.order-upload-img {
  width: 150rpx;
  height: 150rpx;
  float: left;
}
