/* pages1/returnorder/returnorder.wxss */
@import "/css/iconfont.wxss";

.main-container {
  color: #000;
  font-size: 26rpx;
}
.order-header {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
}
.order-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10; 
  width: 100%;
  height: 90rpx;
}
.footer-btn {
  border-radius: 0;
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #f66;
  font-size: 30rpx;
  border-radius: 0;
  padding: 0;
}
.order-info {
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  vertical-align: middle;
  line-height: 1;
  background: #fff;
  overflow: hidden;
}
.activity-type-mark {
  margin-right: 10rpx;
  padding: 0 10rpx;
  border: 1px solid #eb8e40;
  color: #f66;
}
.copy-button {
  display: inline-block;
  margin-left: 10rpx;
  padding: 0 12rpx;
  vertical-align: middle;
  line-height: 40rpx;
  font-size: 26rpx;
}
.order-info-title {
  width: 100%;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 30rpx;
}
.order-info-type {
  padding-top: 25rpx;
}
.order-type {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  margin-right: 30rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.order-required {
  color: #f66;
  margin-right: 5px;
}
.order-upload {
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.order-upload-addicon {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.order-goods-info {
  display: flex;
  margin-top: 30rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.order-goods-check-wrap {
  width: 30rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.iconduoxuanbiankuang {
  font-size: 17px;
  color: #ccc;
}
.iconduoxuan {
  font-size: 17px;
  color: #9c0707;
}
.order-goods-info-details {
  flex: 1;
  display: flex;
}
.order-goods-img {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #eee;
  margin: 0 20rpx;
}
.goods-img {
  width: 100%;
  height: 100%;
}
.goods-name {
  height: 70rpx;
  vertical-align: top;
}
.goods-spec {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-price {
  display: flex;
  justify-content: space-between;
  width: 450rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-icon {
  display: inline-block;
  width: 14rpx;
  margin-top: 4rpx;
  margin-left: 20rpx;
  margin-right: 8rpx;
}
.order-place {
  opacity: 0;
  color: #fff;
  margin-right: 5px;
}
.order-textarea {
  width: 94%;
  height: 230rpx;
  background: #f8f8f8;
  padding: 20rpx;
  margin-top: 30rpx;
}
.order-left {
  float: left;
}


/* 售后申请详情 */
.order-header-red {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: -webkit-linear-gradient(left,rgba(156,7,7,0.8),rgba(156,7,7,1));
  padding: 40rpx 30rpx;
  color: #fff;
}
.order-header-h {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.order-header-p {
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.order-header-detail {
  background: #fff;
  padding: 30rpx;
  margin: 0 auto;
  color: #333;
}
.order-header-time {
  color: #f66;
}
.order-header-btns {
  padding: 15rpx 0;
  border-top: 2rpx solid #eee;
  background: #fff;
  margin-bottom: 20rpx;
  padding-right: 30rpx;
  overflow: hidden;
}
.order-header-btn {
  float: right;
  margin-left: 20rpx;
  border: 2rpx solid #ccc;
  padding: 0rpx 20rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
}
.order-block {
  width: 100%;
  overflow: hidden;
}
.order-block-title {
  padding: 0 30rpx;
  color: #333;
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #eee;
}
.order-block-content {
  padding: 20rpx 30rpx;
  background: #f5f5f5;
}