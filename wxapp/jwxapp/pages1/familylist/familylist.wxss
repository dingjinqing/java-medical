/* pages1/familylist/familylist.wxss */
@import "../../css/iconfont.wxss";
page{
  background: #f5f5f5;
}
.mian-container{
  padding-top: 20rpx;
}
.family_content{
  width: 700rpx;
  margin: 0 auto;
  padding-bottom: 100rpx;
}
.each_family{
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx 0 20rpx;
  width: 700rpx;
  margin-bottom: 20rpx;
}
.ef_top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  margin-left: 25rpx;
  font-weight: bold;
}
.ef_top > view:first-of-type{
  margin-right: 30rpx;
}
.ef_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx 0 0;
  margin-left: 25rpx;
}
.ef_bott_left{
  display: flex;
  align-items: center;
}
.iconfont_set_default{
  margin-right:16rpx;
}
.iconfont_set_default .iconfont{
  width: 26rpx;
  height: 26rpx;
  color: #ccc;
}
.family_footer{
  background: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn_add_person{
  width: 700rpx;
  height: 80rpx;
  background: #26c4bc;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 50rpx;
}
.no_content {
  text-align: center;
  padding-top: 350rpx;
}
.no_content image{
  height: 450rpx;
  width: 750rpx;
  margin: 0 auto 40rpx;
}
.no_content .no_word{
  text-align: center;
  margin-bottom: 20rpx;
  color: #999;
}
.no_content .btn_get_pre{
  width: 120px;
  height: 60rpx;
  background: #26c4bc;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  margin: 0 auto;
}
.some_opea{
  display: flex;
  align-items: center;
  color: #999;
}
.some_opea .del_patient{
  padding-left: 40rpx;
  margin-left: 40rpx;
  border-left: 1rpx solid #999
}



