page {
  background: #f5f5f5;
  overflow-x: hidden;
  font-size: 26rpx;
}

view, text {
  font-size: 26rpx;
}

.main-container {
  height: auto;
  position: fixed;
  width: 100%;
}

/* common footer css */

.bottom {
  height: 110rpx;
  width: 100%;
  display: flex;
  font-size: 26rpx;
  align-items: center;
  background: #fff;
  color: #666;
  border-top: 1px solid #eee;
  box-sizing: border-box;
  z-index: 99;
}

.bottom .bottom_nav {
  flex: 1;
  display: inline-block;
  text-align: center;
  border: none;
  padding: 0;
  line-height: 1.4;
  overflow: hidden;
}

.bottom .bottom_nav>view {
  overflow: hidden;
}

.bottom_nav button::after {
  border: none;
  border-radius: 0;
}

.bottom_nav  button {
  line-height: 1.4;
  background: #fff;
  font-size: 26rpx;
  color: #666;
}

.bottom image {
  width: 40rpx;
  height: auto;
  display: block;
  margin: 0 auto;
  margin-bottom: 5rpx;
}

.active {
  display: block;
}

.bottom_txt image {
  width: 30rpx;
}

.bottom_txt {
  text-align: center;
  background: #f5f5f5;
  color: #ccc;
  padding: 20rpx;
  font-size: 24rpx;
}

.common-footer .footer-text {
  text-align: center;
  background: transparent;
  color: #ccc;
  padding: 20rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.common-footer .bottom-blank {
  height: 110rpx;
}

.footer-text image {
  width: 30rpx;
  height: 30rpx;
}

/* common header css */

.common-header .footer-text {
  position: fixed;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  padding: 10rpx 15rpx;
  color: #fff;
  z-index: 10240;
  left: 4rpx;
  top: 10rpx;
}

.common-header .footer-text::after {
  content: "";
  display: block;
  clear: both;
}

.common-header .footer-text image {
  float: left;
  width: 30rpx;
  margin: 0;
}

.common-header .footer-text view {
  float: right;
  font-size: 22rpx;
}

.common-bottom {
  background: #fff;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  z-index: 10240;
}
