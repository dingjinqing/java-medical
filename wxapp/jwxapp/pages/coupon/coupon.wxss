/* pages/couponlist/couponlist.wxss */
page{
  background: #f5f5f5;
}
.container{
  width: 100%;
  overflow-x: hidden;
  background: #f5f5f5;
}
.top{
  width: 700rpx;
  padding:0 25rpx;
  height: 80rpx;
  background: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  position: fixed;
  z-index: 99
}
.top::after{
  content: "";
  display: block;
  clear: both;
}
.top > view{
  flex: 1;
  text-align: center;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}
.top .use{
  color: #f66;
  border-bottom: 2px solid #f66;
}
.cou_area {
  margin-top: 110rpx;
}
.cou_list {
  width: 700rpx;
  margin: 25rpx 25rpx;
  /* height: 210rpx; */
  position: relative;
}
.cou_list::after{
  content: "";
  display: block;
  clear: both;
}
.cou_list .left{
  background-size: 100% 100%;
}
.del_btn{
  width: 120rpx;
  height: 210rpx;
  color: #fff;
  background: #f66;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  border-radius: 10rpx;
  right: -146rpx;
}
.left{
  float: left;
  width: 250rpx;
  height: 210rpx;
  position: relative
}
.left view{
  color: #fff;
  font-size: 14px;
  margin-top: 10rpx;
  width: 250rpx;
  text-align: center;
}
.left .price{
  margin-top: 50rpx;
}
.left .price text{
  font-size: 20px;

}
.right{
  float: right;
  width: 450rpx;
  background: #fff;
  height: 210rpx;
  color: #333;
  border-radius: 0 10rpx 0 0;
  position: relative;
}
.right .case{
  position: absolute;
  top: 25rpx;
  font-size: 13px;
  font-weight: 700;
  padding-left: 14rpx;
  color: #333;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.right .time_canuse{
  position: absolute;
  /* top: 140rpx; */
  font-size: 11px;
  padding-left: 20rpx;
  bottom: 15rpx;
}
.right .click_to_detail{
  position: absolute;
  top: 72rpx;
  font-size: 12px;
  width: 407rpx;
  color: #333;
  padding-left: 20rpx;
}
.no_cou{
  text-align: center;
  padding-top: 200rpx;
}
.no_cou .icon_no image{
  width: 200rpx;
}
.no_cou .no_tips{
  margin-top: 30rpx;
  color: #888;
}
/* 样式优化 */
.go_use{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #fff;
  float: left;
  color: rgb(248, 8, 8);
  font-size: 13px;
  border-radius:0 0 10rpx 10rpx;
  border-top: 1px dashed #ccc;
}
.permissions{
  position: absolute;
  top: 75rpx;
  font-size: 12px;
}
@media screen and (min-width:320px) and (max-width:339px){
  .right .click_to_detail{
    top: 105rpx;
  }
  .right .time_canuse{
    /* top: 160rpx; */
    /* top: 110rpx; */
  }
}
.left .coupon_xian{
  height: 210rpx;
  width: 4rpx;
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
}
.left .coupon_xian image{
  height: 210rpx;
  width: 4rpx;
}
.left .vip_exclusive{
  position: absolute;
  left: 9rpx;
  top: 6rpx;
  line-height: 30rpx;
  width:68rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.1);
  font-size: 20rpx;
  border-radius: 30rpx;
  margin-top: 0;
}
.time_canuse text{
  display: inline-block
}
.time_canuse .time_square{
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  background: #f66;
  text-align: center;
  line-height: 36rpx;
  color: #fff;
}
.daojishia{
  display:flex;
  align-items: center;
  color: #f66
}
.time_canuse .time_square:first-of-type{
  margin-left: 0
}