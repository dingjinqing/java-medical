/* pages/userqrcode/userqrcode.wxss */
page{
    background: #f5f5f5;
    overflow-x: hidden;
}
.main-container{
    width: 100%;
    height: 100%;
    background-color:#f5f5f5; 
    font-family: "微软雅黑";
    overflow-x: hidden;
}
.my_QrCode_container{
    width: 90%;
    border-radius: 10rpx;
    margin: 80rpx auto 0;
}
.my_QrCode_container image{
  width: 100%;
  height: 880rpx;
}
.btn_save_img{
  width: 90%;
  text-align: center;
  background-color: #5a8bff;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin: 40rpx auto 0;
  color: #fff;
}
