/* pages/maingoodslist/maingoodslist.wxss */
@import "../../css/iconfont.wxss";
page{
  overflow-x: hidden;
  background: #fff;
}
.clearfix::after{
  contain: "";
  display: block;
  clear: both;
}
.search_input{
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius:14rpx;
  margin: 0 auto;
  margin-bottom:20rpx;
  background:#f5f5f5;
  width: 702rpx;
}
.search-img{
  margin: auto 20rpx;
}
.placeholder{
  font-size: 26rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.search_input input{
  height: 100%;
  width: 600rpx;
  font-size: 26rpx;
}
.main_goods_content .pro_tips{
   padding: 20rpx;
   font-size: 24rpx;
   color: #ff6600;
   background: #fcf9dd;
   font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei";
}
.goods_content{
  /* padding-bottom: 105rpx; */
}
.each_goods{
  padding: 20rpx;
  padding-left: 0;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.each_goods .goods_lefts{
  width: 200rpx;
  height: 200rpx;
  margin-right: 24rpx;
  float: left;
  position: relative;
}
.each_goods .goods_lefts image{
  width: 100%;
  height: 100%;
}
.goods_right{
  width: 480rpx;
  height: 200rpx;
  float: right;
  position: relative;
}
.goods_right .goods_name{
  position: absolute;
  top: 10rpx;
  width: 100%;
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
}
.goods_right .price_info{
  position: absolute;
  bottom: 10rpx;
  font-size: 24rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.goods_right .jiaqian{
  display: flex;
  align-items: flex-end;
  flex: 1.5
}
.goods_right .price_info .sale_price{
  color: #f66;
  margin-right: 10rpx;
}
.goods_right .price_info .sale_price text{
  font-size: 36rpx;
  font-weight: bold;
}
.goods_right .price_info .original_price{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  position:relative;
  top:-4rpx;
}
.goods_right .price_info .btn_add_cart{
 flex: 0.5;
 text-align: right
}
.goods_right .price_info .btn_add_cart image{
  width: 60rpx;
}
.main_footers{
  height: 100rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 4;
}
.main_footers>view{
  height: 98rpx;
  display: flex;
  justify-content: center;
  flex-direction: column
}
.foot_left{
  float:left;
  width: 300rpx;
  padding-left: 30rpx;
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: flex-start;
  background: #fff;
}
.foot_left>view{
  width: 100%;
  text-align: left
}
.fl_top{
  font-size: 24rpx;
  color: #666;
}
.fl_top text{
  font-size: 30rpx;
  color: #f66;
  font-weight: bold;
}
.fl_bottom{
  font-size: 22rpx;
  color: #666;
}
.foot_center{
  float: left;
  width: 210rpx;
  background: #fee6e6;
  color:#f66 ;
  border: none;
  border-top: 2rpx solid #fee6e6;
  font-size: 28rpx;
  align-items: center;
  border-radius: 0;
  padding: 0;
  height: 100rpx;
  line-height: 100rpx;
}
.foot_center::after{
  border-radius: 0;
  padding: 0;
  border: none;
}
.foot_right{
  float: left;
  width: 210rpx;
  background: #f66;
  color:#fff ;
  font-size: 28rpx;
  border-top: 2rpx solid #f66;
  align-items: center
}
.promotion{
  color: #666;
  font-size: 24rpx;
  width:100%;
  background:#fff;
  position:fixed;
  bottom:0;
  left:0;
  z-index:111;

}
.pro_close{
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  color: #333;
  top: 20rpx;
}
.pro_title{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 26rpx;
  color:#353535;
}
.pro_content{
  height: 700rpx;
  overflow-y: scroll;
}

/* 换购商品的弹框 */
.pro_content .each_change{
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}
.pro_content .each_change .radio_button{
  width: 70rpx;
  height: 180rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center
}
.pro_content .each_change .radio_button image{
  width: 40rpx;
  height: 40rpx;
}
.pro_content .each_change .every_goods{
  float: left;
  width: 650rpx;
  height: 180rpx;
}
.every_goods .eg_lefts{
  width: 180rpx;
  height: 180rpx;
  float: left;
  overflow: hidden;
  position: relative;
}
.every_goods .eg_lefts image{
  width: 180rpx;
  height: 180rpx;
}
.every_goods .eg_lefts .no_click_tips{
  position: absolute;
  bottom: 0;
  width: 180rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  padding: 5rpx 0;
}
.eg_right{
  float: right;
  width: 450rpx;
  height: 180rpx;
  position: relative;
}
.eg_right .goods_name{
  width: 100%;
  text-overflow:ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  position: absolute;
  top: 10rpx;
  margin-bottom: 16rpx;
}
.eg_right .goods_desc{
  color: #999;
  position: absolute;
  top: 80rpx;
}
.eg_right .price_info{
  position: absolute;
  bottom: 5rpx;
  font-size: 24rpx;
  display: flex;
  align-items: flex-end;
}

.eg_right .price_info .sale_price{
  color: #f66;
  margin-right: 10rpx;
}
.eg_right .price_info .sale_price text{
  font-size: 36rpx;
  font-weight: bold;
}
.eg_right .price_info .original_price{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  position:relative;
  top:-4rpx;
}
.change_gooter{
  height: 98rpx;
  border-top: 2rpx solid #eee;
  font-size: 28rpx;
  overflow: hidden
}
.cf_left{
  width: 540rpx;
  float: left;
  color: #666;
  border-top: 2rpx solid #eee;
  line-height: 98rpx;
  overflow: hidden;
  text-align: center
}
.cf_right{
  border-top: 2rpx solid #f66;
  width:210rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  background: #f66;
  float: left;
  overflow: hidden
}

.modal_back{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  overflow: hidden;
}
.modal_spec_nouse{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6); 
}
.modal_spec,.drawer_box{
  width:100%;
  height: 70%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 111;
}
.modal_spec_top{
  padding: 0 0rpx 20rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.modal_top_img{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  float: left;
  z-index: 12;
  margin-left: 30rpx;
}
.modal_top_img::-webkit-scrollbar{
	display:none;
}
.modal_top_img image{
  width: 100%;
  position: relative;
  z-index: 22;
}
.modal_top_center{
  float: left;
  padding-top: 100rpx;
  color: #353535;
  font-size: 26rpx;
  margin-left: 20rpx;
} 
.modal_top_center text{
  color: #f66;
  font-size: 36rpx;
  display: inline-block;
  margin-bottom: 19rpx;
}
.moadl_close{
  float: right;
  width: 40rpx;
  margin-top: 100rpx;
  margin-right: 30rpx;
}
.modal_spec_list,.modal_spec_sum{
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
  color: #353535;
}
.modal_spec_other text{
  display: inline-block;
  padding: 0 10rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 25rpx 30rpx 0 0;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.modal_spec_other .spec_active{
  border: 1px solid #f66;
  color: #f66;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.comment_list_top .fr image{
  width: 200rpx;
  border-radius: 0;
}
.modal_spec_sum .fl{
  line-height: 60rpx;
}
.modal_footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  z-index: 99;
}
.modal_footer button{
  border: none;
  border-radius: 0;
  width: 100%;
  height: 100rpx;
  background: #f66;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.modal_footer button::after{
  border: none;
  border-radius: 0
}
.goods_fr{
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  box-sizing: border-box;
}
.goods_fr text{
  box-sizing: border-box;
  position: absolute;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  text-align:center;
  line-height:60rpx;
  background:#fff;
  color:#666;
  font-size:36rpx;
  border: 1rpx solid #f5f5f5;
}
.goods_fr .btn_minus{
  left: 0;
}
.goods_fr .btn_plus{
  right: 0
}
.goods_fr input{
  box-sizing: border-box;
  height: 60rpx;
  width: 90rpx;
  border:2rpx solid #f5f5f5;
  text-align:center;
  display:block;
  min-height: 60rpx;
  margin-left: 55rpx;
}
 .member_icon{
  padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(to left,#e0c787,#d9ae69);
  border-radius: 5rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}
.reduce{
   padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(left,#fe4848 ,#fe7248);
  background: -webkit-linear-gradient(left,#fe4848,#fe7248);
  background: -moz-linear-gradient(left,#fe4848,#fe7248);
  border-bottom-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}
.pro_content_no{
  height: 700rpx;
  overflow-y: scroll;
  width: 750rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.pro_content_no image{
  width: 180rpx;
}
.pro_content_no view{
  font-size: 26rpx;
  color: #999;
  margin-top: 30rpx;
}
.sell_out {
  position: absolute !important;
  width: 130rpx !important;
  height: 130rpx !important;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  float: none;
  z-index: 3;
}
.amount_num {
  color: #492e37;
  position: absolute;
  bottom: 66rpx;
  font-size: 24rpx;
}
.member_label {
  position: absolute;
  bottom: 66rpx;

  padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(to left, #e0c787, #d9ae69);
  border-radius: 5rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}
.reduce_price {
  background-color: #f9dbdb;
  color: #f66;
  position: absolute;
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  bottom: 0;
  font-size: 20rpx;
  z-index: 3;
}