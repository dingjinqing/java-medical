.main-container{
  overflow: hidden;
}
.card_list_item{
  box-sizing: border-box;
  width: 720rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
  border-radius: 16rpx;
  background-color: skyblue;
  padding: 46rpx 0;
  position: relative;
}
.card_type{
  position: absolute;
  line-height: 46rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;
  right: 0;
  padding: 0 24rpx;
  border-bottom-left-radius: 16rpx;
}
.card_item_info{
  display: flex;
  padding: 0 20rpx;
}
.card_item_info > .shop_img{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}
.card_item_info > .info_item{
  display: flex;
  flex-direction: column;
  color: #fff;
  padding-left: 14rpx;
}
.info_item > .card_name{
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.card_list_item > .card_status{
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 1;
}
.card_list_item > .card_status > image{
  width: 100%;
  height: 100%;
}
.card_list_item > .card_exp{
  position: absolute;
  bottom: 0;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
}