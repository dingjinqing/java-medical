page {
  overflow: hidden;
  font-family: Arial, Helvetica, sans-serif;
  height: 100%;
  background: #f5f5f5;
}

.all {
  border-top: 2rpx solid #eee;
  overflow: hidden;
  height: 100%;
}

.clearfix {
  display: block;
  clear: both;
  content: "";
}

.input_waimian {
  background: #fff;
  padding: 20rpx 0;
}

.common-footer .footer-text {
  display: none;
  padding-bottom: 0;
}

.search_input {
  width: 700rpx;
  margin: 0rpx auto;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  border: 1px solid #eee;
  border-radius: 14rpx;
  background: #f5f5f5;
}

.search_input icon {
  margin: auto 0 auto 20rpx;
}

.search_input text {
  width: 85%;
  margin: 0 auto;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  padding-left: 12rpx;
  color: #666;
}

.sort_content {
  border-top: 2rpx solid #eee;
  background: #fff;
}

.sort_content .left_item {
  float: left;
  width: 180rpx;
  overflow: auto;
  background: #f6f6f6;
  font-size: 26rpx;
}

.sort_content .left_item view {
  text-align: center;
  padding: 30rpx 0;
  color: #333;
}

.sort_content  .right_item {
  float: right;
  width: 540rpx;
  overflow-y: auto;
}

.sort_content .left_item .avtive {
  border-left: 6rpx solid #f66;
  color: #f66;
}

.sort_tit_img {
  width: 510rpx;
  height: 200rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}

.sor_item {
  width: 540rpx;
}

.each_sort {
  font-size: 26rpx;
  float: left;
  margin-right: 30rpx;
  width: 150rpx;
  margin-top: 50rpx;
  height: 214rpx;
  text-align: center;
}

.sort_img {
  width: 150rpx;
  height: 140rpx;
}

.right_itme_area .each_sort {
  margin-top: 20rpx;
}

.right_itme_area .sor_item {
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.right_itme_area .sor_item:last-of-type {
  border-bottom: none;
}

.right_itme_area .sor_item .each_title {
  width: 540rpx;
  font-size: 26rpx;
  color: #353535;
  font-weight: bold;
}

.main-container {
  min-height: 900rpx;
}

.common-footer .footer-text {
  background: #fff;
}

.footer-text {
  padding-bottom: 0;
}

.no_state {
  margin: 0 24rpx;
  color: #666;
  font-size: 26rpx;
  height: 575rpx;
  text-align: center;
}

.no_state image {
  width: 200rpx;
  margin: 460rpx 0 20rpx 0;
}

.common-footer .footer-text {
  display: none;
}

.common-footer .bottom-blank {
  display: none;
}

.two_row {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: center;
}

/* 一级分类 */

.left_module_title {
  height: 10%;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  color: #333;
}

.group_container {
  height: 260rpx;
  overflow: hidden;
  padding: 10rpx;
  margin: 10rpx;
}

.module_img {
  float: left;
  position: relative;
}

.module_img image {
  height: 240rpx;
  width: 240rpx;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  float: left;
}

.module_text {
  padding-left: 8rpx;
  overflow: hidden;
}

.module_text .module_goods_name {
  max-height: 80rpx;
  font-size: 26rpx;
  padding-left: 0rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  white-space: normal;
  margin-bottom: 70rpx;
}

.module_text .module_goods_price {
  font-weight: bold;
  padding: 8rpx 10rpx;
  height: 50rpx;
  overflow: hidden;
}
.title_label{
  min-height: 40rpx;
}

.module_text .module_goods_price .sale_price {
  font-size: 30rpx;
  margin-top: -3rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
}

.module_text .module_goods_price .market_price {
  float: right;
  color: #999;
  text-decoration: line-through;
  font-weight: normal;
}

.line-through-none {
  text-decoration: none !important;
}

.cart_btn {
  float: right;
}

.right_buy_btn {
  width: 90rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.cart_buy_btn {
  width: 80rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: rebeccapurple;
  font-size: 20rpx;
  border-radius: 20rpx;
  background: white;
}

.grade, .reduce_price {
  bottom: 0rpx;
  position: absolute;
  font-size: 22rpx;
  z-index: 3;
  width: 100%;
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
}

.save_money {
  bottom: 0rpx !important;
  width: 200rpx;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  border-radius: 0 80rpx 80rpx 0;
  position: absolute;
  left: 0;
  z-index: 4;
  height: 45rpx;
  line-height: 45rpx;
}

.exclusive {
  position: absolute;
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color: #56381b;
  background: linear-gradient(left, #eed9ad, #e7c38a);
  background: -webkit-linear-gradient(left, #eed9ad, #e7c38a);
  background: -moz-linear-gradient(left, #eed9ad, #e7c38a);
  bottom: 0rpx;
  font-size: 20rpx;
  z-index: 3;
}
