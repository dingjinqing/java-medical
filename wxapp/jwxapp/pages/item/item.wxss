@import "../../css/iconfont.wxss";
.swiper {
  height: 100vw;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.goods-info{
  padding: 30rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.goods-info_top{
  display: flex;
}
.goods_name{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.goods_operate{
  display: flex;
  margin-left: -6rpx;
}
.goods_operate > view{
  margin-left: 6rpx;
}
.goods_operate text{
  font-size: 36rpx;
}
.goods_price_info{
  margin-top: 26rpx;
  color: #ff6666;
}
.goods_price > text:first-child{
  font-size: 26rpx;
}
.goods_price > text:last-child{
  font-size: 46rpx;
}
.label-content{
  display: flex;
  flex-wrap: wrap;
  margin-left: -16rpx;
  margin-bottom:-12rpx;
}
.label-content_style{
  line-height: 56rpx;
  padding: 0 20rpx;
  color: #f66;
  background-color: #fcf0f0;
  width: auto;
  border-radius: 40rpx;
  margin-left: 16rpx;
  margin-bottom: 12rpx
}
.flex-wrap{
  display: flex;
  margin-top: 20rpx;
}
.flex-wrap .flex-item {
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.flex-wrap .flex-item:nth-of-type(2){
  text-align: center;
}
.flex-wrap .flex-item:last-of-type{
  text-align: right;
}
.flex_outside_box{
  margin-top: 10px;
  background: #fff;
}
.flex_box{
  padding: 10px 15px;
  color: #353535;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item_left{
  color: #888;
  margin-right: 5px;
  width: auto;
}
.item_middle{
  flex: 1;
}
.item_right{
  width: auto;
}
.goods_coupon_list{
  display: flex;
}
.goods_coupon_list .goods_coupon_item{
  width: auto;
  line-height: 62rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255,102,102,0.4);
  background: rgba(255,102,102,0.2);
  color: #ff6666;
  border-radius: 8rpx;
  padding: 0 16rpx;
}
.item_line{
  height: 2rpx;
  background-color: #eee;
  width: 700rpx;
  margin: 0 auto;
}
.body{
  height: 100vh;
}
.comment_box{
  padding: 12rpx 20rpx;
  margin-bottom:0;
}
.comment_box .label-content_style{
  flex: 1;
  padding: 0;
  text-align: center;
}
.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #fff;
  z-index: 1;
  overflow-y: hidden;
  height: 100rpx;
  display: flex;
}
.small_view{
  width: 112rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  padding: 12rpx 0;
  color: #888;
  align-items: center;
  position: relative;
}
.small_view .cart_goods_num{
  position: absolute;
  line-height: 26rpx;
  text-align: center;
  padding: 0 6rpx;
  border: 1px solid;
  background-color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
  right: 20rpx;
  top: 2rpx;
}
.small_view image{
  width: 44rpx;
}
.footer_flex_view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}