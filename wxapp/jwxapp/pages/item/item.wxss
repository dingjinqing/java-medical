@import "/css/iconfont.wxss";
@import "/css/item.wxss";
.body {
  padding-bottom: 200rpx;
}
.pledge-content {
  display: flex;
}
.pledge-content .pledge-item {
  margin-right: 16rpx;
}
.pledge-content .pledge-item > image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.pledge-content .pledge-item > text {
  vertical-align: middle;
}
.join-group > image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.join-group > .user-name{
  flex: 1;
}
.join-group > .join{
  border-radius: 8rpx;
  color: #fff;
  padding: 8rpx 20rpx;
}
.join-group > .join-item-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}
.join-group > .join-item-info > text{
  white-space: nowrap;
}
.join-group > .join-item-info > text:last-of-type{
  color: #666;
}
.group,.group-draw{
  background-color: #fff;
  color: #666;
}
.group > view{
  display: flex;
  align-items: center;
  word-break: break-all;
}
.group > view > text{
  flex: 1;
}
.group > view > view{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #666;
  text-align: center;
  border-radius: 50%;
  margin-right: 10rpx;
}
.group-draw{
  display: flex;
  align-items: center;
  color: #000;
}
.group-draw > .rule-line{
  flex: 0.2;
  height: 2rpx;
  background-color:#eee;
}
.group-draw > view.rule-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.group-draw > view.rule-item > image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.group-draw-bottom{
  flex-direction: column;
  align-items: flex-start;
  background-color: #fff;
  color: #666;
  font-size: 24rpx;
  padding-top: 0;
}
.group-draw-bottom > view+view{
  margin-top: 10rpx;
}

.goods-info {
  padding: 30rpx 0;
  background-color: #fff;
  font-size: 26rpx;
}
.goods-info > view {
  padding: 0 30rpx;
}
.goods-info_top {
  display: flex;
}
.goods_name {
  flex: 1;
  display: flex;
  align-items: center;
}
.goods_name .name{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.goods-tag{
  display: inline-block;
  border: 1rpx solid;
  line-height: 1;
  padding: 6rpx 4rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
  white-space: nowrap;
}
.goods-price-tag{
  display: inline-block;
  padding: 6rpx 8rpx;
  margin-right: 10rpx;
  border-bottom-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  color: #fff;
  vertical-align: text-bottom;
}
.goods_operate {
  display: flex;
  margin-left: -6rpx;
}
.goods_operate > view {
  margin-left: 6rpx;
}
.goods_operate text {
  font-size: 36rpx;
}
.goods_ad {
  color: #888;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.goods_price_info {
  color: #ff6666;
}
.goods_price > text {
  font-size: 26rpx;
}
.goods_price > text.price {
  font-size: 46rpx;
}
.marking_price {
  color: #999;
}
.marking_price > text {
  text-decoration: line-through;
}
.flex-wrap {
  display: flex;
  margin-top: 20rpx;
}
.flex-wrap .flex-item {
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.flex-wrap .flex-item {
  display: flex;
  align-items: center;
}
.flex-wrap > .flex-item:nth-of-type(2) {
  justify-content: center;
}
.flex-wrap > .flex-item:last-of-type {
  justify-content: flex-end;
}
.flex-wrap > .flex-item:first-of-type {
  justify-content: flex-start;
}
.flex-wrap .flex-item > image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
}
.goods-info > .label-content {
  margin-top: 20rpx;
}
.reduce-price-act-bar{
  box-sizing: border-box;
  display: flex;
  padding: 10rpx 30rpx;
  height: 90rpx;
}
.reduce-price-left-info,.reduce-price-right-info{
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}
.reduce-price-right-info{
  align-items: flex-end;
}
.reduce-end-info{
  align-self: center;
}
.pre-sale-content{
  flex-direction: column;
  color: #999;
  overflow:hidden;
}
.pre-sale-content > view{
  margin-top: 15rpx;
}
.pre-sale-content > view:last-of-type{
  margin-bottom: 15rpx;
}
.scoreRedeem{
  padding: 0 30rpx;
  line-height: 80rpx;
  background: #fff6e6;
  color: #ffb93c;
}
.goods-image{
  position: relative;
}
.live-tips{
  display: flex;
  height: 90rpx;
  width: 750rpx;
  background-color: rgb(255,247,210);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  justify-content: center;
  align-items: center;
}
.live-avatar-content{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255,126,0,0.4);
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.live-avatar-content > .live-avatar{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border:2px solid rgba(255,126,0,1);
}
.live-desc{
  color:rgba(255,126,0,1);
}
.live-close{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -18rpx;
}
.subscribe-button{
  height: 50rpx;
  width: 140rpx;
  border: 2rpx solid;
  text-align: center;
  margin-left: 18rpx;
  line-height: 46rpx;
  border-radius: 25rpx;
  box-sizing: border-box;
}