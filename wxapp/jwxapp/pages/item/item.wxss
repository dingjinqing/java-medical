@import "/css/iconfont.wxss";
@import "/css/item.wxss";
.body {
  padding-bottom: 200rpx;
}
.pledge-content {
  display: flex;
}
.pledge-content .pledge-item {
  margin-right: 16rpx;
}
.pledge-content .pledge-item > image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.pledge-content .pledge-item > text {
  vertical-align: middle;
}
.join-group > image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.join-group > .user-name{
  flex: 1;
}
.join-group > .join{
  border-radius: 8rpx;
  color: #fff;
  padding: 8rpx 20rpx;
}
.join-group > .join-item-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}
.join-group > .join-item-info > text:last-of-type{
  color: #666;
}
.group{
  background-color: #fff;
  color: #666;
}
.group > view{
  display: flex;
  align-items: center;
  word-break: break-all;
}
.group > view > text{
  flex: 1;
}
.group > view > view{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #666;
  text-align: center;
  border-radius: 50%;
  margin-right: 10rpx;
}


.goods-info {
  padding: 30rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.goods-info_top {
  display: flex;
}
.goods_name {
  flex: 1;
  display: flex;
  align-items: center;
}
.goods_name .name{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.goods-tag{
  display: inline-block;
  border: 1rpx solid;
  line-height: 1;
  padding: 6rpx 4rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
}
.first-special-tag{
  display: inline-block;
  padding: 6rpx 8rpx;
  margin-right: 10rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #fff;
  vertical-align: text-bottom;
}
.goods_operate {
  display: flex;
  margin-left: -6rpx;
}
.goods_operate > view {
  margin-left: 6rpx;
}
.goods_operate text {
  font-size: 36rpx;
}
.goods_ad {
  color: #888;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.goods_price_info {
  color: #ff6666;
}
.goods_price > text:first-child {
  font-size: 26rpx;
}
.goods_price > text:last-child {
  font-size: 46rpx;
}
.marking_price {
  color: #999;
}
.marking_price > text {
  text-decoration: line-through;
}
.flex-wrap {
  display: flex;
  margin-top: 20rpx;
}
.flex-wrap .flex-item {
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.flex-wrap .flex-item {
  display: flex;
  align-items: center;
}
.flex-wrap > .flex-item:nth-of-type(2) {
  justify-content: center;
}
.flex-wrap > .flex-item:last-of-type {
  justify-content: flex-end;
}
.flex-wrap .flex-item > image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
}
.goods-info > .label-content {
  margin-top: 20rpx;
}
.reduce-price-act-bar{
  height: 80rpx;
  display: flex;
}
.reduce-price-left-info,.reduce-price-right-info{
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}
