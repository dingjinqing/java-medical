<view class="body">
  <include src="../common/header.wxml" /> 
  <view class="main-container">
    <view class="goods-image">
      <swiper class="swiper" autoplay="true" circular="true" indicator-dots='true' indicator-active-color="#fff">
      <block wx:for="{{imgUrls}}" wx:key="key" wx:for-index="index">
        <swiper-item>
          <image src="{{item}}" class="slide-image" mode="aspectFit" bindtap="preview" data-src='{{item}}'></image>
          <view>
            {{index+1}}
          </view>
        </swiper-item>
      </block>
    </swiper>
    </view>
    <view class="goods-info">
      <view class="goods-info_top">
        <view class="goods_name">
        卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣卫衣
        </view>
        <view class="goods_operate">
          <view class="goods_share">
            <text class="iconfont iconfenxiang"></text>
          </view>
          <view class="goods_collect">
            <text class="iconfont iconshoucang1"></text>
          </view>
        </view>
      </view>
      <view class="goods_price_info">
        <view class="goods_price" style='color:{{commonColor}}'>
          <text>￥</text><text>100~800</text>
        </view>
      </view>
      <view class="label-content" >
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人气爆款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人爆款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人气爆款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人爆款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人气爆款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人款</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>人气爆款</text>
      </view>
      <view class="flex-wrap">
        <view class="flex-item">库存：100个</view>
        <view class="flex-item">销量：100</view>
        <view class="flex-item">运费：3</view>
      </view>
    </view>
    
    <!-- 发货地 -->
    <view class="flex_outside_box">
      <view class="flex_box">
        <view class="item_left">发货地</view>
        <view class="item_middle">北京</view>
      </view>
    </view>
    <!-- 优惠券 -->
    <view class="flex_outside_box" bindtap="showCouponDialog">
      <view class="flex_box">
        <view class="item_left">优惠券</view>
        <view class="item_middle goods_coupon_list">
          <view class="goods_coupon_item" style='background:{{somColor}};color:{{comColor}};border-color:{{borColor}}'>满￥600减50</view>
          <view class="goods_coupon_item" style='background:{{somColor}};color:{{comColor}};border-color:{{borColor}}'>领券减￥10</view>
        </view>
        <view class="item_right">></view>
      </view>
    </view>
    <!-- 需提取组件  服务|选择规格-->
    <view class="flex_outside_box">
      <!-- 服务 -->
      <view class="flex_box">
        <view class="item_left">
          服务
        </view>
        <view class="item_middle"></view>
        <view class="item_right"></view>
      </view>
      <view class="item_line"></view>
      <!-- 选择规格 -->
      <view class="flex_box">
        <view class="item_left">
          选择
        </view>
        <view class="item_middle"></view>
        <view class="item_right"></view>
      </view>
    </view>
    <!-- 用户评价 -->
    <view class="flex_outside_box">
      <view class="flex_box">
        <view class="item_left">
          用户评价(123)
        </view>
        <view class="item_right">查看全部></view>
      </view>
      <view class="label-content comment_box">
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>好评</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>中评</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>差评</text>
        <text class="label-content_style" style='background:{{somColor}};color:{{comColor}}'>有图</text>
      </view>
      <view class="item_line"></view>
      <view class="flex_box">
        <view class="item_left">卡卡</view>
        <view class="item_right">******</view>
      </view>
      <view class="flex_box">
        XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
      </view>
    </view>
  </view>
  <view class="footer">
    <view class="small_view" bindtap="backHome">
      <image mode="widthFix" src="{{imageUrl}}image/wxapp/back_index_item.png"></image>
      <text>首页</text>
    </view>
    <view class="small_view">
      <image mode="widthFix" src="{{imageUrl}}image/wxapp/cart_icon.png"></image>
      <text>购物车</text>
      <view class="cart_goods_num" style="color:{{comColor}};border-color:{{comColor}}">0</view>
    </view>
    <view class="footer_flex_view" style='color:{{(comColor != "#ff6666" || !comColor)?"#fff":"#f66"}};background:{{commonColor}}'>
      <text>加入购物车</text>
    </view>
    <view class="footer_flex_view" style='color:{{(comColor != "#ff6666" || !comColor)?"#fff":"#f66"}};background:{{comColor}};' >
      <text>立即购买</text>
    </view>
  </view>
  <include src="../common/footer.wxml" />
  <!-- 优惠券选择弹窗 -->
  <v-popup-coupon show="{{show_recommend_coupons}}" coupon_list="{{goodsInfo.recommend_coupons}}" />
</view>
