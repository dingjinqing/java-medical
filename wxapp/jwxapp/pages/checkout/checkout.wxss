@import '/css/iconfont.wxss';
@import '/components/decorate/prescription/index.wxss';
.body
{
  padding-bottom: 120rpx;
}
.pay_notice{
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #353535;
  padding: 20rpx 0;
  align-items: center;
}
.pay_notice > image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.address_info{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 0 0 16rpx 16rpx;
  box-sizing: border-box;
  width: 702rpx;
  position: relative;
  z-index: 2;
}
.address_info > view{
  margin-bottom: 20rpx;
}
.address_info > view:last-of-type{
  margin-bottom: 0;
}
.address-user_info,.address-address_info{
  display: flex;
}
.address-user_info{
  padding-left: 54rpx;
}
.address-user_info > .user_mobile{
  flex: 1;
  text-align: right;
}
.address-address_info{
  align-items: flex-start
}
.address-address_info > image{
 width: 34rpx;
 height: 34rpx;
 margin-right: 20rpx;
}
.address-address_info > .address{
 flex: 1
}
.address-address_info > .right_arrow{
  width: 15rpx;
  height: 25rpx;
  margin: 6rpx 0 0 20rpx;
}
.goods-list-content{
  width: 702rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto 0;
  box-sizing: border-box;
  padding: 0 14rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: relative;
  z-index: 2;
}
.goods_item{
  padding: 14rpx 0;
  display: flex;
  color: #353535;
}
.goods_item + .goods_item{
  border-top: 2rpx solid #eee;
}
.goods_item > image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 14rpx;
}
.goods_item > .goods_info{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}
.goods_item > .goods_info > .goods_name{
  display: flex;
  flex-direction: column;
}
.goods_item > .goods_info > .goods_name > .name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  box-sizing: border-box;
  line-height: 42rpx;
}
.goods_item > .goods_info > .goods_name > .spec{
  color: #888;
  font-size: 24rpx;
}
.goods_item > .goods_info > .goods_price{
  display: flex;
}
.goods_item > .goods_info > .goods_price > text{
  word-break: keep-all;
  word-wrap: break-word;
}
.goods_item > .goods_info > .goods_price > .num{
  flex: 1;
  text-align: right;
  color: #888;
}
.pay_type{
  background-color: #fff;
  padding:0 20rpx;
  margin: 20rpx auto 0;
  width: 702rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  z-index: 2;
}
.pay_title{
  line-height: 60rpx;
  border-bottom: 2rpx solid #eee;
}
.pay_type_content{
  display: flex;
}
.pay_type_item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.pay_type_item:last-of-type{
  justify-content: flex-end;
}
.pay_type_item:first-of-type{
  justify-content: flex-start;
}
.pay_type_item > .iconfont{
  font-size: 40rpx;
  margin-right: 12rpx;
  color: #888;
}
.pay-type-tips{
  padding: 10rpx;
  background-color: #f5f5f5;
  color: #999;
  margin-bottom: 20rpx;
}
.pay_content{
  margin: 20rpx auto 0;
  width: 702rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  background-color: #fff;
  padding: 0 20rpx;
  position: relative;
  z-index: 2;
}
.pay_content > .pay_list_item{
  display: flex;
  height: 80rpx;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
}
.pay_list_item > .pay_list_content{
  flex: 1;
  text-align: right;
}
.pay_list_item > .pay_list_right{
  width: 40rpx;
  text-align: right;
}
.pay_list_item > .pay_list_right > .right_arrow{
  width: 15rpx;
  height: 25rpx;
  vertical-align: middle;
}
.pay_list_item > .pay_list_right > .iconfont{
  font-size: 38rpx;
  color: #888;
}
.pay_content > .pay_list_item + .pay_list_item{
  border-top: 2rpx solid #eee;
}
.checkout_detail{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 0 20rpx;
  margin: 20rpx auto 0;
  width: 702rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  position: relative;
  z-index: 2;
}
.checkout_detail > .detail_item{
  display: flex;
  height: 60rpx;
  align-items: center;
}
.detail_item > .detail_content{
  flex: 1;
  text-align: right;
}
.checkout_footer{
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  z-index: 1;
  align-items: center;
  height: 100rpx;
  z-index: 2;
}
.checkout_footer > .footer_content{
  flex: 1;
  text-align: right;
}
.checkout_footer > .footer_button{
  padding: 0 30rpx;
  margin-left: 20rpx;
  color:#fff;
  text-align: center;
  min-width: 180rpx;
  margin-right: 24rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.picker{
  height: 34rpx;
}
.shipping_method_content{
  display: flex;
  line-height: 80rpx;
  height: 82rpx;
  background-color: #fff;
  margin: 0 auto;
  width: 702rpx;
  border-radius: 16rpx 16rpx 0 0;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}
.shipping_method{
  flex: 1;
  text-align: center;
  border-bottom: 2rpx solid transparent;
}
.goods-tag{
  border: 1rpx solid;
  margin-right: 10rpx;
  padding: 0 4rpx;
  display: inline-block;
}
.goods-price-tag{
  padding: 0 8rpx;
  margin-right: 10rpx;
  border-bottom-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  color: #fff;
  font-size: 24rpx;
}
.invoice .pay_list_item .pay_list_right image{
  vertical-align: unset;
}
.invoice .pay_list_content{
  color: #888;
}
.msg .pay_list_content{
  text-align: left;
}
.must{
  color: #f66;
}
.pay_content.term  .iconfont{
  font-size: 40rpx;
  margin-right: 12rpx;
}
.pay_content.term  .pay_list_right > text{
  margin-right: 25rpx;
  color: #888;
}
.purchase-tips{
  height: 60rpx;
  padding: 0 14rpx;
  display: flex;
  align-items: center;
  color: #f60;
  background: #fcf9cc;
}
.purchase-tips-content{
  padding: 14rpx 14rpx 0;
  margin:20rpx 0 -20rpx;
  background-color: #fff;
}
.purchase-tips > image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}
.presale-info .dotted{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #ccc;
}
.presale-info > .detail_item{
  position: relative;
}
.presale-info > .detail_item+.detail_item{
  margin-top: 14rpx;
}
.presale-info > .detail_item+.detail_item::before{
  content: '';
  height: 25rpx;
  width: 2rpx;
  background: #ccc;
  position: absolute;
  top: -19rpx;
  left: 13rpx;
}
.presale-info .rule{
  border-top: 2rpx solid #eee;
}
.presale-info > .detail_item:last-of-type::before{
  content: none;
}
.presale-info .rule .detail_title{
  color: #999;
}
.presale_tips {
  position: fixed;
  width: 100%;
  bottom: 100rpx;
  background: #fcf9dd;
  color: #ff6660;
  font-size: 24rpx;
  padding-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}	
.top-bg-style{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 540rpx;
  background:linear-gradient(0deg,rgba(245,245,245,1),rgba(38,196,188,1),rgba(38,196,188,1)) ;
  z-index: 1;
}
.prescription-item{
  width: 702rpx;
  margin: 20rpx auto 0;
  margin-bottom: 34rpx;
}
.prescription-item > .item-title{
  background: #DBEFEE url(http://medicaldevimg.weipubao.cn/upload/224462/image/20200702/cHqjI9maXz2wGvOzjoHJ.png) no-repeat left top/100% 80rpx;
  color: #26C4BC;
}