<view class='footer'>
	<block wx:if="{{distribution == 1}}">
		<button style='background:{{comColor}};' wx:if="{{examine == 0}}" bindtap="toSave">提交审核申请</button>
	</block>
	<block wx:else>
		<button style='background:{{comColor}};' wx:if="{{examine == 0}}" bindtap="toSave">激活会员卡</button>
