/* pages/storeInfo/storeinfo.wxss */
/* STOREINFO.CSS 2018.03.05  */
@import "../../css/iconfont.wxss";
page {
  background: #f5f5f5;
}

.container {
  position: relative;

  overflow-x: hidden;
}

.store-name, .swiper-top swiper, 
.slide-image, .store-introduction, 
.store-appointment, .store-service,
 .title, .list-center-name {
  width: 100%;
}

/*轮播图*/
.swiper-top {
  width: 95%; 
   
  margin: 3% auto;
}
/*门店名称*/
.store-name {
  background: #fff;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 20rpx;
}
.store-name-top {
  padding:30rpx 30rpx 24rpx 30rpx;
}
.store-name-top::after{
  content: "";
  display: block;
  clear: both;
}

.store-name-top>view {
  font-size:17px;
  float: left;
}
.store-phone {
  width: 32rpx;
  float: right;
}
.nowappoint {
  width:160rpx;
  height:50rpx;
  border:2rpx solid #ccc;
  text-align:center;
  line-height:50rpx;
  font-size:26rpx;
  margin-left: 30rpx;
  color: #777;
}
/*门店地址营业时间*/
.store-other-info-all{
  padding-top: 20rpx;
  background: #fff;
}
 .store-other-info-all .info_top_detail{
  padding: 0 30rpx;
  
} 
.store-info-top{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.store-other-info-all .info_top_detail::after{
  content: "";
  display: block;
  clear: both;
}
.store-text1{
  margin-left: 86rpx;
  margin-top: 10rpx;
}
.store-other-info::after{
  content: "";
  display: block;
  clear: both;
}
.store-other-info>view{
  float: left;
}
.store-info-img {
  width: 41rpx;
  float: left; 
  margin-right: 15rpx;
}

.store-info-img-rt {
  width:16rpx;
  float:right;
}
.store-other-info{
  padding: 30rpx 30rpx 20rpx 30rpx;
}
.bus-time {
  width: 88%;
}

.text-btm {
  margin-top: 10rpx;
}

.text-btm, .store-text2  {
  color:#888;
  font-size:13px;  
}

.text-top {
  width: 82%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
/*门店服务*/
.store-service {
  background: #fff;

  margin-top: 20rpx;
}
.store-service-btn{
  padding: 10rpx 0;
  padding-left: 1%;
}
.store-service-btn::after {
  content: "";
  display: block;
  clear: both;
}

.store-service button {
  height: 60rpx;
  float: left;
  margin:10rpx 10rpx;
  font-size: 26rpx;
  border-radius: 0rpx !important;
  background: #F7F7F7;
}

.store-service button::after {
  border-radius: 0rpx !important;
  border:0 !important;
}

.title {
  height: 90rpx;

  line-height: 90rpx;
  padding-left: 30rpx;   
  border-bottom: 2rpx solid #eee; 
}

.title-text {
  font-size: 26rpx;
  color: #353535; 
}
.detail_content{
  padding: 30rpx 30rpx;
  /* text-align: center; */
}
.detail_content image{
  max-width: 100%
}
/*门店介绍*/
.store-introduction {
   height:auto; 
  background: #fff;

  margin-top: 20rpx;
}

.store-introduction-tx {
  padding: 3% 3%;
}
/*门店预约*/
.store-appointment {
  background: #fff;

  margin-top: 20rpx;
}

.store-nav {
  width: 750rpx;
  margin: 0 auto;
  height: 90rpx;
  border-bottom: 2rpx solid #eee;
  position: relative;
  overflow: hidden;
}
.scroll-view_H{
  white-space: nowrap;
  height: 90rpx;
  width: 720rpx;
  margin: 0 auto;
}
.store-nav ul {
  list-style: none;
}

.store-nav ul li {
  width: 27%;
  height: 90rpx;

  margin:0 3%;
 
  float: left;

  line-height: 90rpx;  
  font-size: 26rpx;
  color: #353535;
  text-align: center;
}
.store-nav-list::after{
  content: "";
  display: block;
  clear: both;
}
.store-nav-list {
  border-bottom: 2rpx solid #eee;
  background:#fff;
}

.list-left {
  float: left;
  width: 180rpx;
}

.list-left-img {
  width: 152rpx;
  height:152rpx;
  border-radius: 6rpx;
}
.list-right {
  float: left;
  width: 500rpx;
}

.list-right-btn {
  width: 160rpx;
  height:60rpx;
  background: #f66;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  float: right;
  border-radius: 3px;
}

.list-rt-top::after {
  content: "";
  display: block;
  clear: both;
}
.leftlisyt{
  color: #f66;
  float: left;
  margin-top: 10rpx;
}
.list-rt-text{
  width: 60rpx;
  font-size:24rpx;
  color: #E89B47;
  text-align:center;
  border: 2rpx solid #F4C39B;
  border-radius:5rpx;
  height: 35rpx;
  line-height: 35rpx;
  position: relative;
  top: -2px;
}

.list-center {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #353535;
}
.list-time{
  color: #888;
  font-size: 12px;
  margin-bottom: 15rpx;
}
.tabs-item.selected {
  color:#f66;
  border-bottom:2px solid #f66;
}

.tabs-item {
  height:86rpx;
  line-height: 90rpx;
  text-align: center;
  color:#353535;
  font-size:26rpx;
  display: inline-block;
  flex-direction: row;
  z-index: 90;
  margin-right: 90rpx;
}
.tabs-item:last-of-type{
  margin-right: 0;
}
.store-nav-list{
  padding: 30rpx 30rpx;
}
.detail_content{
  color:#888;
  padding:5% 30rpx;
  font-size:13px
}
.text-top{
  width: 610rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.store_pay{
  background: #fff;
  margin-top: 20rpx;
  padding: 23rpx 30rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}
.to_store_check{
  float: right;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border-radius: 3px;
  background: linear-gradient(to right, #f14144 , #ff8a72);
  box-shadow: 0 0 5px #ff8a72;
  text-align: center;
}

/* 扫码购 */
.scancode{
  position: fixed;
  z-index: 10;
  right: 30rpx;
  bottom:450rpx;
  width: 140rpx;
  height: 140rpx;
  box-sizing: border-box;
  background: linear-gradient(top,#ff9292,#ff6666);
  background: -webkit-linear-gradient(top,#ff9292,#ff6666);
  background: -moz-linear-gradient(top,#ff9292,#ff6666);
  border-radius: 50%;
  border: 6rpx solid #ffe6e6;
}
.scancode image{
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top:13%;
  left: 50%;
  transform: translateX(-50%)
}
.scancode .scancode_text{
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  bottom: 14%;
  width: 100%;
  text-align: center;
}