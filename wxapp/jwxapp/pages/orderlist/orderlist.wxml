<view class="body">
  <include src="../common/header.wxml" />
  <view class="main-container">
    <view class="top_pixed" style="top:{{margin_top_nav + 8}}px;">
      <view class="top_search">
        <view class="search">
          <input type="text" bindinput="handleSearchInput" bindconfirm="handleSearch" value="{{searchInput}}" placeholder="请输入订单号或商品名称"></input>
          <view class="cls_search" bindtap="clearSearchInput">
            <image src='{{imageUrl}}/image/wxapp/search_clear.png' mode='widthFix'></image>
          </view>
        </view>
        <view class="btn_search" bindtap="handleSearch">搜索</view>
      </view>
      <scroll-view class="top_nav"  scroll-into-view="{{scrollIntoId}}" enable-flex scroll-x>
        <view id="ALL" bindtap="handleChangeNav" style="{{scrollIntoId === 'ALL' ? 'color:' + comColor + ';border-bottom-color:' + comColor : ''}}">
          全部订单
        </view>
        <view id="WAIT_PAY" bindtap="handleChangeNav"  style="{{scrollIntoId === 'WAIT_PAY' ? 'color:' + comColor + ';border-bottom-color:' + comColor : ''}}">待付款</view>
        <view id="WAIT_DELIVERY" bindtap="handleChangeNav" style="{{scrollIntoId === 'WAIT_DELIVERY' ? 'color:' + comColor + ';border-bottom-color:' + comColor : ''}}">待发货</view>
        <view id="SHIPPED" bindtap="handleChangeNav" style="{{scrollIntoId === 'SHIPPED' ? 'color:' + comColor + ';border-bottom-color:' + comColor : ''}}">待收货</view>
        <view id="RETURNING" bindtap="handleChangeNav" style="{{scrollIntoId === 'RETURNING' ? 'color:' + comColor + ';border-bottom-color:' + comColor : ''}}">退款中</view>
      </scroll-view>
    </view>
    <view class="order_list">
    <block wx:for="{{dataList}}" wx:for-item="pageItem" wx:key="{{pageIndex}}" wx:for-index="pageIndex">
      <block wx:for="{{pageItem}}" wx:key="{{item.orderSn}}" >
        <view class="order_item">
          <view class="order_sn_status {{item.partShipFlag === 1 ? 'partial_delivery' : ''}}">
            <view class="partial_delivery_top">
              <view class="order_mark"></view>
              <view class="order_sn">订单编号：<text selectable>{{item.orderSn}}</text></view>
            </view>
            <view class="partial_delivery_bottom">
              <view class="delivery_type" wx:if="{{item.partShipFlag === 1}}">
                发货类型：
                <text>部分发货</text>
              </view>
              <view class="order_status" style="color:{{comColor}}">订单完成</view>
            </view>
          </view>
          <view wx:for="{{item.goods}}" wx:for-item="goodsItem" wx:for-index="goodsIndex" wx:key="{{goodsItem.recId}}" class="goods_item">
            <image mode="widthFix" src="{{imageUrl}}{{goodsItem.goodsImg}}"></image>
            <view class="goods_info">
              <view class="goods_name">
                {{goodsItem.goodsName}}
              </view>
              <view class="goods_spec">{{goodsItem.goodsAttr}}</view>
              <view class="goods_price_num">
                <view class="goods_price" style="color:{{comColor}}">￥<text>{{goodsItem.goodsPrice}}</text></view>
                <view class="goods_num">x{{goodsItem.goodsNumber}}</view>
              </view>
            </view>
          </view>
          <view class="order_pay_info">
            <view class="pay_info">
              <view class="pay_type">
                支付类型：
                <text>微信支付</text>
              </view>
              <view class="pay_money">
                实付款：
                <text>￥{{item.moneyPaid}}</text>
              </view>
            </view>
            <view class="presale_info" wx:if="{{item.bkOrderPaid === 1}}">
              <view class="money">
                待付尾款：
                <text>￥100.00</text>
              </view>
              <view class="time">尾款支付时间：2019-04-03 10:23 - 2019-04-04 10:23</view>
            </view>
          </view>
          <view class="order_button_box">
            <block wx:for="{{item.operate}}" wx:for-item="operateItem" wx:key="*this" wx:for-index="operateKey">
              <view wx:if="{{operateItem > 0}}" bindtap="handleOperate" data-operate_info="{{operateKey}}" data-order_sn="{{item.orderSn}}">{{operateList[operateKey]}}</view>
            </block>
            <view bindtap="handleOperate" data-operate_info="orderInfo" data-order_sn="{{item.orderSn}}">查看详情</view>
          </view>
        </view>
      </block>
    </block>
    </view>
  </view>
  <include src="../common/footer.wxml" />
</view>