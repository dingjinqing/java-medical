/* 切换活动的弹框 */
.promotion{
  color: #666;
  font-size: 24rpx;
  padding-bottom: 100rpx;
}
.pro_close{
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  color: #333;
  top: 20rpx;
}
.pro_title{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 26rpx;
  color:#353535;
}
.pro_content{
  height: 660rpx;
  overflow-y: scroll;
}
.pro_con_list{
  border-bottom: 1px solid #eee;
  padding: 25rpx 30rpx;
  padding-left: 0;
  margin-left: 30rpx;
}
.btn_check{
  width: 40rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  margin-right: 11rpx
}
.btn_check image{
  width: 40rpx;
  height: 40rpx;
}
.pro_con_list .btn_check{
  width: 80rpx;
  text-align: left;
}
.pro_con_list .btn_check {
  height: auto;
  width: 65rpx;
  justify-content: flex-start
}
.for_style{
  display: flex;
  align-items: top
}
.for_style>view:first-of-type{
  flex: 0.4
}
.for_style>view:last-of-type{
  flex: 1.6
}
.pro_con_list>view:first-of-type{
  flex: 0.2
}
.pro_con_list>view:nth-of-type(2){
  width: 580rpx;
}
.pro_con_list .go_img{
  float: right;
  width: 15rpx;
  margin-top: 7rpx;
}
.pro_con_list .jiajiagou_icon{
  margin-right: 20rpx;
  width: 110rpx;
}
.pro_tips{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fdf9dd;
  color: #ff6600;
  font-size: 24rpx;
}
.pro_tips image{
  width: 30rpx;
  margin-right: 15rpx;
}
.pro_list_span{
  padding: 0 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  border: 1px solid #f66;
  color: #f66;
  text-align: center;
  margin-right: 26rpx;
  overflow-y: hidden;
  border-radius: 4rpx;
}
