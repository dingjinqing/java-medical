/* 促销活动 */
.change_fullact{
  margin-top: 20rpx;
  margin-left: 60rpx;
  width: 610rpx;
  background-color: #f5f5f5;
  padding: 0 20rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cf_left{
  flex: 1.5;
  display: flex;
  align-items: center;
  justify-content: flex-start
}
.cf_left view:last-of-type{
  color: #666;
  margin-left: 10rpx;
  width: 370rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.cf_right{
  flex: 0.5;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #666;
}
.cf_right image{
  width: 15rpx;
  margin-left: 10rpx;
}
/* 促销活动 */

/* 限时降价 */
.ng_goods_jiang {
  font-size:22rpx;
  margin-top: 25rpx;
}
.reduce_icon{
   padding: 0rpx 12rpx;
  color: #fff;
  background: linear-gradient(left,#fe4848 ,#fe7248);
  background: -webkit-linear-gradient(left,#fe4848,#fe7248);
  background: -moz-linear-gradient(left,#fe4848,#fe7248);
  border-bottom-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}
