@import '../../css/iconfont.wxss';
.body{
  padding-bottom: 160rpx;
}
.flex_goods {
  display: flex;
  align-items: center;
  background-color: #fff;
}
.flex_goods .goods_item {
  display: flex;
  flex: 1;
  height: 186rpx;
}
.flex_goods .checkbox_box {
  margin-right: 20rpx;
}
.flex_goods .checkbox_box text {
  font-size: 40rpx;
}
.goods_item > .goods_img {
  position: relative;
  margin-right: 20rpx;
}
.goods_item > .goods_img > .invalid {
  position: absolute;
  bottom: 0;
  width: 100%;
  line-height: 40rpx;
  background-color:rgba(0,0,0,0.5);
  color: #fff;
  text-align: center
}
.goods_item > .goods_img image {
  width: 180rpx;
  height: 180rpx;
}
.goods_item .goods_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_info .goods_name {
  color: #353535;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  overflow-wrap: break-word;
  word-break: break-all;
}

.goods_info .goods_spec {
  color: #888;
  font-size: 24rpx;
  margin-top: 10rpx;
  /* overflow: hidden; */
  /* white-space: nowrap; */
  /* text-overflow: ellipsis; */
}
.goods_info .goods_price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_info .goods_price .num_cfg{
  width: 144rpx;
  display: flex;
  border: 2rpx solid #eee;
  box-sizing: border-box;
}
.goods_price .num_cfg input{
  flex: 1;
  text-align: center;
}
.goods_price .num_cfg .num_minus,.goods_price .num_cfg .num_plus{
  line-height: 40rpx;
  text-align: center;
  width: 40rpx;
  box-sizing: border-box;
}
.goods_price .num_cfg .num_minus{
  border-right: 2rpx solid #eee;
}
.goods_price .num_cfg .num_plus{
  border-left: 2rpx solid #eee;
}
.cart-goods_item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}
/* 活动类型 */
.cart-goods_item .act_info {
  margin-left: 20rpx;
  padding: 20rpx 0 0;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
}
.cart-goods_item .clearfix {
  _height: auto;
}
.cart-goods_item .act_info>view {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.cart-goods_item .act_info .ai_left {
  flex: 1.7;
}
.full_member_icon{
  /* float: left; */
  background-color:#fff;
  padding:0rpx 10rpx;
  border-radius:4rpx;
  color:#c5a050;
  border: 2rpx solid #c5a050; 
  font-size:26rpx;
  margin-right: 10rpx;
}
.ai_left .full_icon {
  border: 2rpx solid #f66;
  color: #f66;
  padding: 0 10rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}
.act_content {
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.go_full {
  color: #f66;
  justify-content: flex-end;
  flex: 0.3;
}
.go_full image {
  width: 15rpx;
  margin-left: 10rpx;
}
/* 活动类型 */

/* 秒杀部分 */
.sec_kill_area{
  margin-left: 60rpx;
  width: 610rpx;
  background-color: #fff1f0;
  color: #666;
  padding: 0 20rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}
.sec_kill_area>view{
  flex: 1.25;
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.sec_left .sec_icon{
  padding: 0rpx 10rpx;
  background-color: #f66;
  border-radius: 2px;
  color: #fff;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.sec_kill_area .sec_right{
  justify-content: flex-end;
  color: #f66;
  flex: 0.75
}
.sec_right image{
  width: 15rpx;
  margin-left: 10rpx;
}
.enen{
  width:720rpx;
  overflow-x: hidden;
}
