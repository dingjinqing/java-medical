<view class="body">
    <include src="../common/header.wxml" />
    <view class="main-container">
        <view class="list_box">
            <view class="cart-goods_item" wx:for="{{canBuyGoodsList}}" wx:key="index">
              <view class="goods_content">
                <movable-area>
                  <movable-view damping="100" x="{{item.x}}" out-of-bounds="true" direction="horizontal" bindchange="handleTouchChange" bindtouchend="handleTouchEnd" data-index="{{index}}">
                    <view class="flex_goods">
                        <view class="checkbox_box">
                            <text class="iconfont {{item.isChecked === 0 ? 'icondanxuanbiankuang':'icondanxuan'}}" style="color:{{comColor}}"></text>
                        </view>
                        <view class="goods_item">
                            <view class="goods_img">
                                <image src="{{imageUrl}}{{item.goodsImg}}" mode="widthFix"/>
                                <view class="invalid" wx:if="{{item.tip}}">
                                    {{item.tip}}
                                </view>
                            </view>
                            <view class="goods_info">
                                <view>
                                    <view class="goods_name">
                                        {{item.goodsName}}
                                    </view>
                                    <view class="goods_spec">
                                        {{item.goodsSpecs}}
                                    </view>
                                </view>
                                <view class="goods_price">
                                    <view class="price" style="color:{{comColor}}">￥500.00</view>
                                    <view class="num_cfg">
                                      <view class="num_minus" bindtap="goodsNumMinus">-</view>
                                      <input type="number" value="{{item.prdNumber}}"></input>
                                      <view class="num_plus" bindtap="goodsNumPlus">+</view>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                  </movable-view>
                </movable-area>
                <view class="goods_del">
                  删除
                </view>
              </view> 
            </view>
        </view>

        <view></view>

        <view class="flex_footer" style="{{show_bottom ? 'bottom:110rpx;' :''}}">
            <view class="footer_left">
                <text class="iconfont icondanxuan" style="color:{{comColor}}"></text>
                <text>全选</text>
            </view>
            <view class="footer_center">  
                <text>合计</text>
                 <text class="total_price" style="color:{{comColor}}">￥500.00</text>
            </view>
            <view class="footer_right" >
                <view class="footer_btn" style="color:#fff;background-color:{{comColor}};">
                    去结算
                </view>
            </view>
        </view>
    </view>
    <include src="../common/footer.wxml" />
</view>