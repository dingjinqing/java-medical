.main-container{
  overflow: hidden;
}
.card_surface_details{
  width: 710rpx;
  margin: 20rpx auto;
  border-radius: 16rpx;
  background-color: skyblue;
  padding: 40rpx 0 20rpx 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.card_type{
  position: absolute;
  line-height: 40rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;
  right: 0;
  padding: 0 24rpx;
  border-bottom-left-radius: 16rpx;
}
.card_info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 20rpx;
  min-height: 280rpx;
}
.card_surface_top{
  display: flex;
  
}
.card_surface_top > .shop_img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.card_surface_top > .card_name_box{
  flex: 1;
  margin-left:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-weight: 600;
  color: #fff;
}
.get_status{
  border: 2rpx solid #fff;
  padding: 0 20rpx;
  border-radius: 34rpx;
}
.card_surface_bottom{
  display: flex;
  align-items:flex-end;
  font-weight: 600;
  color: #fff;
}
.surface_bottom_left{
  display: flex;
  flex: 1;
}
.surface_bottom_right{
  width: auto;
  font-size: 34rpx;
}
.surface_bottom_item{
  display: flex;
  flex-direction: column;
}
.qrcode{
  width: 42rpx;
  height: 42rpx;
}
.card_item_title{
  padding: 14rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #eee;
}
.card_item_title .item_title_left{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.card_item_title .item_title_left > image{
  width: 100%;
  height: 100%;
}
.card_item_title .item_title_content{
  flex: 1;
}
.card_item_title .item_title_right{
  color: #888;
}
.card_item_content{
  padding: 0 14rpx 0 70rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.card_item_content .content_item{
  line-height: 70rpx;
  border-radius: 10rpx;
}
.flex_footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_btn{
  line-height: 60rpx;
  height: 60rpx;
  padding: 0 60rpx;
  background-color: skyblue;
  border-radius: 10rpx;
  color: #fff;
}