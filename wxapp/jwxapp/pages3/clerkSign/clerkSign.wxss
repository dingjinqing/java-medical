/* pages/signature/signature.wxss */
page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}

.wrapper {
  overflow: hidden;
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 28rpx;
}


.handRight {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
}

.handCenter {
  overflow: hidden;
  box-sizing: border-box;
  flex: 1;
  max-width: 530rpx;
  position: relative;
}

.handTitle {
  transform: rotate(90deg);
  color: #666;
  white-space: nowrap;
}

.handBtn {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.handBtn .btn{
  width: 120rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: #26C4BC;
  font-size: 28rpx;
  text-align: center;
  transform: rotate(90deg);
}
.handBtn .btn + .btn{
  margin-top:90rpx;
}
.drawing-board{
  height: 1012rpx;
  width: 530rpx;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  box-sizing: border-box;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
}
.drawing-board-canvas{
  height: 100%;
  width: 100%;
}