@import '/css/iconfont.wxss';
.input-content{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.message-input{
  height: 110rpx;
  display: flex;
  align-items: center;
  line-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.message-input > input{
  background-color: #f5f5f5;
  flex: 1;
  margin-right: 40rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.message-input > .icontianjia{
  color: #333;
  font-size: 58rpx;
  font-weight: 600;
}