@import '/css/iconfont.wxss';
.input-content{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.message-input{
  height: 110rpx;
  display: flex;
  align-items: center;
  line-height: 80rpx;
  padding:0 40rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.message-input > input{
  background-color: #f5f5f5;
  flex: 1;
  margin-right: 40rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.message-input > .icontianjia{
  color: #333;
  font-size: 58rpx;
  font-weight: 600;
}
.message-input > .send{
  color: #fff;
  background-color:#26C4BC;
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
}
.custom-footer{
  border-top: 2rpx solid #eee;
  padding:0 40rpx 40rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.custom-content{
  display: flex;
  flex-wrap: wrap;
  margin-left: -20rpx;
}
.custom-content > .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 20rpx;
  width: 152rpx;
  height: 152rpx;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.custom-content > .item > .item-image{
  width: 70rpx;
}
.custom-content > .item > .item-image > image{
  width: 100%;
}
.custom-content > .item > .item-text{
  margin-top: 10rpx;
  color: #999;
}