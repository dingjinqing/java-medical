/* components/doctor/doctor_list/doctor_list.wxml.wxss */
.doctor_content {
  padding: 0 20rpx;
}

.doctor_item {
  background: #fff;
  padding: 30rpx 20rpx;
  display: flex;
  border-radius:16rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.doctor_item .d_left image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.doctor_item .d_right{
  margin-left: 20rpx;
  color: #333;
  width: 80%;
}
.doctor_item .d_right .d_r_top text:first-of-type{
 font-size: 32rpx;
 font-weight: bold;
 margin-right: 20rpx;
}
.doctor_item .d_right .d_r_m_t{
  font-weight:400;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.doctor_item .d_right .d_r_m_b view{
color: #999;
font-weight: 400;
}
.doctor_item .d_right .d_r_bot view{
  font-size: 30rpx;
  font-weight: bold;
  color: #FF9F15;
}
.doctor_item .d_right .d_r_bot text{
  font-weight: 400;
  font-size: 26rpx;
}
.d_r_m_t,.d_r_m_b{
  margin: 10rpx 0;
}
.consule {
  width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  color: #26C4BC;
  border: 2rpx solid #26C4BC;
  border-radius: 28rpx;
  position: absolute;
  right: 28rpx;
  top: 16rpx;
}
.no_consule {
  color: #999;
  border: 2rpx solid #ccc;
}