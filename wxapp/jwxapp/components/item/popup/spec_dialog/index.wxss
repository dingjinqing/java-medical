.dialog-box{
  width: 750rpx;
  background-color: #fff;
  padding-bottom: 140rpx;
}
.desc-box{
  padding: 0 30rpx 20rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
}
.desc-box > .prd-img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -40rpx;
}
.desc-info{
  min-height: 160rpx;
  display: flex;
  padding-left: 220rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.desc-info > .info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.desc-info > .info > .price{
  font-size: 36rpx;
}
.desc-info > .info > .marking-price{
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.desc-info > .close-img{
  width: 40rpx;
  height: 40rpx;
}
.all-spec{
  max-height: 300rpx;
  overflow-y: scroll;
}
.spec-info{
  padding: 0 30rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}
.spec-info > .spec-title{
  line-height: 60rpx;
}
.spec-content{
  display: flex;
  flex-wrap: wrap;
  margin: -20rpx 0 0 -20rpx;
}
.spec-content > .spec-item{
  padding: 6rpx 12rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin: 20rpx 0 0 20rpx;
}