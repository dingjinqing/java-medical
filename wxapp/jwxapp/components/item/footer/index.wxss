.footer {
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #fff;
  z-index: 1;
  overflow-y: hidden;
  height: 100rpx;
  display: flex;
}
.small_view {
  width: 112rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  padding: 12rpx 0;
  color: #888;
  align-items: center;
  position: relative;
}
.small_view .cart_goods_num {
  position: absolute;
  line-height: 26rpx;
  text-align: center;
  padding: 0 6rpx;
  border: 1px solid;
  background-color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
  right: 20rpx;
  top: 2rpx;
}
.small_view .image {
  width: 44rpx;
}
.footer_flex_view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
