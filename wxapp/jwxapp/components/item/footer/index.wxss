.ship-tips{
  position: fixed;
  bottom: 100rpx;
  line-height: 80rpx;
  width: 100%;
  background-color: rgba(255, 253, 180, 0.9);
  text-align: center;
  font-size: 26rpx;
  color: #f60;
}
.footer {
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #fff;
  z-index: 2;
  overflow-y: hidden;
  height: 100rpx;
  display: flex;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.small_view {
  width: 112rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  padding: 12rpx 0;
  color: #888;
  align-items: center;
  position: relative;
}
.small_view .cart_goods_num {
  position: absolute;
  width:30rpx;
  text-align: center;
  line-height: 30rpx;
  border: 1px solid;
  background-color: #fff;
  font-size: 20rpx;
  left: 60rpx;
  top: 2rpx;
}
.small_view .image {
  width: 44rpx;
  height: 40rpx;
}
button.small_view{
  background-color: #fff;
  line-height: unset;
}
.footer_flex_view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.button-content{
  flex: 1;
  box-sizing: border-box;
  padding:12rpx 30rpx;
  background-color: #fff;
  display: flex;
}
.raidus-content{
  display: flex;
  flex: 1;
  border-radius: 40rpx;
  overflow: hidden;
}