@import "/css/item.wxss";
.goods_coupon_list {
  display: flex;
}
.goods_coupon_list .goods_coupon_item {
  width: auto;
  line-height: 62rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 102, 102, 0.4);
  background: rgba(255, 102, 102, 0.2);
  color: #ff6666;
  border-radius: 8rpx;
  padding: 0 16rpx;
}
.align-top{
  align-self: flex-start;
}
.promotion-item{
  display: flex;
  align-items: center;
}
.promotion-item + .promotion-item{
  margin-top: 16rpx;
}
.promotion-tag{
  margin-right: 10rpx;
  border: 1rpx solid;
  padding: 4rpx 6rpx;
  line-height: 1;
}
.promotion-desc{
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.gift-desc{
  flex-direction: column;
}
.gift-goods-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.gift-goods-list .gift-gift-item{
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  padding: 8rpx;
  margin-top: 10rpx;
}
.gift-goods-list .gift-gift-item + .gift-gift-item{
  margin-left: 10rpx;
}
.gift-goods-list .gift-gift-item image{
  width: 100%;
  height: 100%;
}