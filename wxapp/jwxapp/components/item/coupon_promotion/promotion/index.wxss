.content{
  height: 600rpx;
  background-color: #fff;
  position: relative;
  width:750rpx;
}
.title{
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.promotion-content{
  padding:0 20rpx;
}
.promotion-item{
  display: flex;
  padding: 20rpx 0;
  border-bottom:1rpx solid #eee;
}
.promotion-tag{
  margin-right: 10rpx;
  border: 1rpx solid;
  padding: 4rpx 6rpx;
  line-height: 1;
  align-self: flex-start;
}
.promotion-desc{
  flex: 1;
  word-break: break-all;
  color: #666;
}