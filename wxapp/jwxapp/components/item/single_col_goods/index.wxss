@import "../../../css/iconfont.wxss";
.goods-item{
  padding: 20rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  -webkit-overflow-scrolling : touch;
}
.goods-item > .all-image{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 20rpx;
}
.goods-item > .all-image > .act-tags{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  color:#fff;
  font-size:18rpx;
  line-height: 45rpx;
}
.goods-item > .all-image > .goods-image{
  width: 100%;
  height: 100%;
}
.goods-item > .goods-info{
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item > .goods-info > .goods-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}
.goods-item > .goods-info > .goods-info-bottom{
  display: flex;
  align-items: center;
}
.goods-info-bottom > .goods-price{
  flex: 1;
}
.gray-text{
  font-size: 24rpx;
  color: #999;
}
.goods-price > .gray-text{
  margin-left: 20rpx;
}
.goods-price > .gray-text.line-through{
  text-decoration:line-through;
}
.goods-info-bottom > .iconfont{
  font-size: 60rpx;
}
.edit{
  line-height: 200rpx;
  margin-right: 20rpx;
}
.num-cfg{
  text-align: center;
  display: flex;
  border: 1rpx solid #eee;
}
.num-cfg > input{
  width: 60rpx;
}
.num-cfg > text{
  width: 40rpx;
  line-height: 45rpx;
}
.num-cfg > text.num-minus{
  border-right: 1rpx solid #eee;
}
.num-cfg > text.num-plus{
  border-left: 1rpx solid #eee;
}
.boder-button{
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  border: 1rpx solid;
}
.vipPriceTag{
  padding: 0rpx 10rpx;
  color: #fff !important;
  background: linear-gradient(to left,#e0c787,#d9ae69);
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  height: 34rpx;
}
.not-tap {
  background-color: #eee;
}
.status-tips{
  position: absolute;
  color: #fff;
  width: 100%;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 36rpx;
  background-color: rgba(0, 0, 0, 0.2);
}