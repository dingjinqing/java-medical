<view class="act_content" wx:if="{{activity}}" style='background:-webkit-linear-gradient(left,{{main_setting.linColor}},{{main_setting.comColor1}})'>
  <view class="act_left">
    <text class="label">{{actName}}</text>
    <text class="goods_price">￥<text class="price">500.00</text></text>
    <text class="marking_price">￥900.00</text>
  </view>
  <view class="act_right" wx:if="{{actStatusName}}">
    <text>{{actStatusName}}</text>
    <view class="countdown" wx:if="{{clock}}">
      <block wx:for="{{clock}}" wx:key="index">
        <!-- <text style='color:{{main_setting.comColor}}'>01</text>天<text style='color:{{main_setting.comColor}}'>02</text>:<text style='color:{{main_setting.comColor}}'>03</text>:<text style='color:{{main_setting.comColor}}'>00</text> -->
        <block wx:if="{{index === 0 && clock.length === 4}}">
          <text class="count" style='color:{{main_setting.comColor}}'>{{item}}</text><text>天</text>
        </block>
        <block wx:elif="{{index === clock.length - 1}}">
          <text class="count"  style='color:{{main_setting.comColor}}'>{{item}}</text>
        </block>
        <block wx:else>
          <text class="count" style='color:{{main_setting.comColor}}'>{{item}}</text><text>:</text>
        </block>
      </block>
    </view>
  </view>
</view>