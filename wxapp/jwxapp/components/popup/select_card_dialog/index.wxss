@import "/css/iconfont.wxss";
.choose_card_content {
  background-color: #f5f5f5;
  width: 750rpx;
  height: 800rpx;
}
.dialog_title {
  text-align: center;
  position: relative;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #fff;
}
.dialog_title > image {
  width: 37rpx;
  height: 37rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.dialog_bottom {
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 0;
}
.dialog_info {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.card_item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-shrink: 0;
  padding-right: 16rpx;
}
.card_item:first-of-type {
  margin-top: 20rpx;
}
.card_item:last-of-type {
  margin-bottom: 176rpx;
}
.radio_box {
  padding: 0 10rpx;
}
.radio_box > .iconfont {
  font-size: 40rpx;
  color: #888;
}
.card_info {
  display: flex;
  flex: 1;
  padding: 14rpx 20rpx;
  box-sizing: border-box;
  min-height: 200rpx;
  background-color: #ddd;
  min-width: 0;
  border-radius: 20rpx;
  align-items: center;
}
.card_info > image {
  border-radius: 50%;
  margin-right: 20rpx;
  width: 90rpx;
  height: 90rpx;
}
.card_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
}
.card_right > text {
  margin-bottom: 10rpx;
}
.card_right > text:last-of-type {
  margin-bottom: 0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
