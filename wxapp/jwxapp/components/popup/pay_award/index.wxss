.pay-award-content{
  position: relative;
}
.pay-award-bg{
  width: 546rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border-radius: 20rpx;
}
.no-coupon{
  width: 492rpx;
}
.act-title{
  line-height: 120rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #fff;
}
.coupon-content{
  width: 425rpx;
  min-height: 140rpx;
  max-height: 390rpx;
  overflow-y: auto; 
}
.coupon-item{
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.coupon-item+.coupon-item{
  margin-top: 20rpx;
}
.coupon-item > view{
  flex: 1;
  text-align: center;
}
.coupon-item > .coupon-l{
  font-size: 24rpx;
  color: #f66;
  font-weight: 600;
}
.coupon-item > .coupon-l > text{
  font-size: 40rpx;
}
.coupon-item > .coupon-r{
  border-left: 2rpx dashed #eee;
  min-height: 80rpx;
  display: flex;
}
.coupon-item > .coupon-r > text{
  margin: auto;
  color: #353535;
  font-size: 28rpx;
}
.coupon-tips{
  width: 425rpx;
  display: flex;
  height: 70rpx;
  box-sizing: border-box;
  border-bottom: 2rpx dashed #fff;
  color: #fff;
  align-items: center;
}
.coupon-tips > text:nth-child(1){
  flex: 1
}
.step-content{
  width: 236rpx;
  height: 82rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.step-item{
  width: 36rpx;
  box-sizing: border-box;
  text-align: center;
  border: 1rpx dashed #fff;
  font-size: 20rpx;
  color: #fff;
  line-height: 36rpx;
}
.step-item.active{
  border-style: solid;
  color: #f66;
  background-color: #fff;
}
.act-desc{
  width: 425rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: -10rpx;
}
.btn-ok{
  width: 180rpx;
  font-weight: 600;
  color: #fff;
  line-height: 70rpx;
  border-radius: 35rpx;
  border: 1rpx solid #fff;
  text-align: center;
  margin: 20rpx 0 30rpx 0;
}
.custom-item{
  width: 100%;
  height: 446rpx;
  background-color: #fff;
}
.custom-item > image{
  width: 100%;
  height: 100%;
}
.no_award{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no_award > image{
  width: 160rpx;
  height: 135rpx;
  margin-bottom: 20rpx;
}
.no_award > text{
  font-size: 30rpx;
  color: #ffe251;
}
.no-coupon-top-behind-bg{
  position: absolute;
  top: -300rpx;
  z-index: -1;
}
.no-coupon-top-bg{
  width: 570rpx;
  height: 250rpx;
  position: absolute;
  top: -210rpx;
  left: -40rpx;
  z-index: 3;
}
.no-coupon-title{
  position: absolute;
  color: #fff;
  font-size: 42rpx;
  font-weight: 600;
  z-index: 3;
  top: -65rpx;
}
.no-coupon-info{
  margin-top: 70rpx;
  width: 425rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #e97600;
}
.no-coupon-info > .info-title{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.no-coupon-info > .no-gift-info{
  font-weight: 600;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.no-gift-tips{
  display: flex;
  box-sizing: border-box;
  height: 78rpx;
  border-top: 1rpx dashed rgba(233, 118, 0, 0.3);
  border-bottom: 1rpx dashed rgba(233, 118, 0, 0.3);
  align-items: center;
  width: 100%;
}
.no-gift-tips > text{
  color: #EF943E;
}
.no-gift-tips > text:nth-child(1){
  flex: 1
}
.gift-name{
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.gift-image{
  width: 172rpx;
  height: 172rpx;
  border: 6rpx solid #fff;
  border-radius: 10rpx;
}
.gift-tips{
  width: 100%;
  text-align: center;
  color: #666;
  line-height: 70rpx;
  border-bottom: 1rpx dashed rgba(233, 118, 0, 0.3);
}
.no-coupon .step-item{
  border-color:#F7BE82;
  color: #EF943E;
}
.no-coupon .step-item.active{
  color: #fff;
  border-color:#E97600;
  background-color: #E97600;
}
.no-coupon .act-desc{
  color: #EF943E;
}
.no-coupon .btn-ok{
  color:  #EF943E;
  border-color: #EF943E;
}
.split-content{
  height: 295rpx;
  width: 100%;
  position: relative;
}
.split-content .split-coupon{
  font-size: 30rpx;
  font-weight: 600;
  color:#fb645e;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40rpx;
}
.split-content .split-tips{
  font-size: 34rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}
.split-content .line{
  position: absolute;
  bottom: 0;
  width: 425rpx;
  left: 50%;
  transform: translateX(-50%);
  border-top: 1rpx dashed #fff;
}
.lottery_content{
  height:540rpx;
}