.pay-award-bg{
  width: 546rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 3;
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
}
.act-title{
  line-height: 120rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #fff;
}
.coupon-content{
  width: 425rpx;
  min-height: 140rpx;
  max-height: 390rpx;
  overflow-y: auto; 
}
.coupon-item{
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.coupon-item+.coupon-item{
  margin-top: 20rpx;
}
.coupon-item > view{
  flex: 1;
  text-align: center;
}
.coupon-item > .coupon-l{
  font-size: 24rpx;
  color: #f66;
  font-weight: 600;
}
.coupon-item > .coupon-l > text{
  font-size: 40rpx;
}
.coupon-item > .coupon-r{
  border-left: 2rpx dashed #eee;
  min-height: 80rpx;
  display: flex;
}
.coupon-item > .coupon-r > text{
  margin: auto;
  color: #353535;
  font-size: 28rpx;
}
.coupon-tips{
  width: 425rpx;
  display: flex;
  height: 70rpx;
  box-sizing: border-box;
  border-bottom: 2rpx dashed #fff;
  color: #fff;
  align-items: center;
}
.coupon-tips > text:nth-child(1){
  flex: 1
}
.step-content{
  width: 236rpx;
  height: 82rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.step-item{
  width: 36rpx;
  box-sizing: border-box;
  text-align: center;
  border: 1rpx dashed #fff;
  font-size: 20rpx;
  color: #fff;
  line-height: 36rpx;
}
.act-desc{
  width: 425rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: -10rpx;
}
.btn-ok{
  width: 180rpx;
  font-weight: 600;
  color: #fff;
  line-height: 70rpx;
  border-radius: 35rpx;
  border: 1rpx solid #fff;
  text-align: center;
  margin: 20rpx 0 30rpx 0;
}
.custom-item{
  width: 100%;
  height: 446rpx;
  background-color: #fff;
}
.custom-item > image{
  width: 100%;
  height: 100%;
}
.no_award{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no_award > image{
  width: 160rpx;
  height: 135rpx;
  margin-bottom: 20rpx;
}
.no_award > text{
  font-size: 30rpx;
  color: #ffe251;
}