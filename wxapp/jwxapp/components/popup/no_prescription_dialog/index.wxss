@import "/css/iconfont.wxss";
.dialog-content{
  width: 638rpx;
  height: 612rpx;
  border-radius: 16rpx;
  background:linear-gradient(0deg,rgba(255,255,255,1),rgba(208,237,235,1));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dialog-content > image{
  width: 381rpx;
  height: 256rpx;
}
.tips-content{
  display: flex;
  flex-direction: column;
  line-height: 72rpx;
  align-items: center;
  margin-top: 10rpx;
}
.tips-content > text{
  font-size: 26rpx;
  color: #333;
}
.tips-content > text:first-child{
  font-size: 36rpx;
  font-weight: 600;
}
.button{
  width: 240rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background-color: #26C4BC;
  text-align: center;
  color: #fff;
  margin-top: 20rpx;
}
.button > text{
  vertical-align: middle;
}
.button > text.iconfont{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.small-text{
  font-size: 26rpx;
  width: 70%;
  font-weight: 200;
  text-align: center;
  line-height: 36rpx;
}