.payment_content {
  background-color: #f5f5f5;
  width: 750rpx;
  height: 600rpx;
}
.content_top {
  text-align: center;
  position: relative;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #fff;
}
.content_top > image {
  width: 37rpx;
  height: 37rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.content_info {
  display: flex;
  flex-direction: column;
}
.info_tips {
  padding: 16rpx 20rpx;
  background-color: #fdf9dd;
  color: #f60;
  font-size: 24rpx;
  display: flex;
}
.info_tips > image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  margin-top: 2rpx;
}
.info_tips > text {
  flex: 1;
}
.input_box {
  padding: 30rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.input_box > .warn {
  flex: 1;
  color: red;
  margin-left: 20rpx;
}
.input_box > input {
  width: 200rpx;
  text-align: right;
}
.content_bottom {
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 0;
}
.info_total {
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  line-height: 40rpx;
  padding: 20rpx 20rpx 0;
}
