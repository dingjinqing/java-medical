.toast_container{
  max-width: 450rpx;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.7);
  box-sizing: border-box;
  padding: 40rpx;
  color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-wrap:wrap;
  flex-direction:column;
  align-items: center;
}
.toast_container > image{
  width: 99rpx;
  height: 99rpx;
}
.toast_container > .flex-item{
  margin-bottom: 35rpx;
}
.toast_container > .flex-item:last-child{
  margin-bottom: 0;
}
.toast_container > .line{
  border: 1rpx dashed #fff;
  width: 100%;
}