.advimg-container {
  width: 750rpx;
  margin: 0 auto;
  overflow: hidden;
}

.advimg-container .once_title {
  width: 100%;
  position: absolute;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  bottom: 0;
  left: 0;
}

/* 单列图 */

.once_img {
  width: 100%;
  overflow: hidden;
}

.each_once {
  width: 750rpx;
  position: relative;
  overflow: hidden;
}

.each_once .image {
  width: 750rpx;
  vertical-align: top;
  height: 750rpx!important;
}

/* 双列图 */

.two_img {
  width: 750rpx;
}

.two_img .each_two {
  overflow: hidden;
}

.two_img .each_two:nth-of-type(odd) {
  width: 375rpx;
  float: left;
  position: relative;
}

.two_img .each_two:nth-of-type(even) {
  width: 375rpx;
  float: right;
  position: relative;
}

.two_img .each_two .image {
  width: 100%;
  vertical-align: top;
  height: 100%!important;
}

/* 滑动（大） */

.slide_big {
  white-space: nowrap;
  height: 250rpx;
}

.slide_big .each_big {
  width: 300rpx;
  height: 250rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}

.slide_big .each_big .image {
  width: 300rpx;
  height: 250rpx;
  vertical-align: top;
}

/*滑动（小） */

.slide_small {
  white-space: nowrap;
  height: 200rpx;
}

.slide_small .each_small {
  width: 250rpx;
  height: 200rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}

.slide_small .each_small .image {
  width: 250rpx;
  height: 200rpx;
  vertical-align: top;
}

/* 滑动（导航） */

.slide_nav {
  white-space: nowrap;
  height: 150rpx;
}

.slide_nav .each_nav {
  width: 200rpx;
  height: 150rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}

.slide_nav .each_nav .image {
  width: 200rpx;
  height: 150rpx;
  vertical-align: top;
}

.nav_title {
  padding: 10rpx 0;
  background: #fff;
  font-size: 26rpx;
  text-align: left;
  padding-left: 20rpx;
  color: #333;
}


.each_big>.view {
  max-height: 100%;
}
