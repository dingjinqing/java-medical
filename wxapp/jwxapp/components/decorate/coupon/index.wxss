.coupon_view {
  width: 720rpx;
  margin: 0 auto;
  box-sizing: border-box;
  overflow:hidden;
}

.button::after {
  border-radius: none;
  border: none;
}

.coupon_scorll {
  width: 100%;
  white-space: nowrap;
}

/* .coupon_scorll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */

.coupon_list {
  width: 31%;
  border-radius: 10rpx;
  text-align: center;
  overflow: hidden;
  display: inline-block;
  margin-right: 2%;
  margin-bottom: 20rpx;
  background: #fff;
  border: 2rpx solid #f66;
}

.coupon_list:last-child {
  margin-right: none
}

.lingguode {
  border: 2rpx solid #fee6e6;
}

.coupon_list_top {
  margin-top: 20rpx;
  color: #f66;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon_list_top .text {
  font-size: 40rpx;
  font-weight: bold;
  display: inline-block;
}

.coupon_list_center {
  height: 66rpx;
  color: #f66;
  font-size: 24rpx;
}

.coupon_center_limit{
  padding-top: 2rpx;
}

.coupon_center_number {
  color: #fbb;
}

.coupon_list_bottom {
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
}

.coupon_list1 {
  width: 100%;
  /* height: 200rpx; */
}

.coupon_list1 .coupon_list_bottom {
  float: right;
  width: 30%;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 28rpx;
  text-align: center;
}

.coupon_list1 .coupon_list_top {
  float: left;
  width: 35%;
  line-height: 200rpx;
  margin-top: 0;
}

.coupon_list1 .coupon_list_center {
  float: left;
  width: 35%;
  text-align: left;
  font-size: 28rpx;
  margin-top: 70rpx;
  height: 80rpx;
}

.coupon_list1 .coupon_center_limit{
  padding-top: 15rpx;
}

.coupon_list1 .coupon_list_top .text {
  font-size: 60rpx;
}

