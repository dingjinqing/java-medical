.coupon_list_gray {
  border: 1px solid #d5d7d9;
}

.coupon_list_gray .coupon_list_center, .coupon_list_gray .coupon_center_number,
.coupon_list_gray .coupon_list_top {
  color: #d5d7d9;
}

.coupon_list_bottom .button {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 50rpx;
  border-radius: 0px;
  color: #fff;
  /* background-color: #f66; */
  border: 0px solid #fff;
  box-shadow: none;
  outline: none;
}

.coupon_list2 {
  width: 48%;
  /* display: block; */
  /* float: left; */
}

.coupon_list2:last-child {
  float: right;
  margin-right: 0;
}

.zhezhao_coupon {
  width: 750rpx;
  height: 1334rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 99;
}

.coupon_code {
  position: fixed;
  top: 30%;
  width: 100%;
  z-index: 999;
  padding: 0 80rpx;
  box-sizing: border-box;
}

.coupon_code>.view {
  background: white;
  border-radius: 5px;
}

.coupon_code>.view .code_ipt {
  padding: 50rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.code_ipt .input {
  border: 1px solid #ddd;
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.code_btn {
  display: flex;
}

.code_btn .view {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  text-align: center;
}

.code_btn .view:last-child {
  color: #f66;
  border-left: 1px solid #eee;
}

.coupon_list3 {
  width: 32%;
  margin-right: 1%;
}

.coupon_scorll3 {
  overflow: hidden;
}
