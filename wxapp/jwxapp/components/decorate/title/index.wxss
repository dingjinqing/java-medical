.title-container{
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 0 15rpx;
  margin-bottom: 20rpx;
}
.main-titles{
  font-size: 30rpx;
  width: 100%;
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
}
.more-title .text{
  margin-right: 6rpx;
}
.more-title{
  font-size:26rpx;
position:absolute;
right:2rpx;
top: 0rpx;
color:#888;
height:80rpx;
line-height:82rpx;

}
.more-title .image{
  width: 15rpx;
  height: 22rpx;
}
.main-titles .image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.main-titles .text{
  margin-left: 10rpx;
  font-size: 28rpx;
}

.new-container{
  position: relative;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.head-title{
  font-size: 36rpx;
  color: #333;
}
.time,.author{
  color: #999;
  font-size: 24rpx;
}
.link_t{
  color:#607fa6;
  font-size: 24rpx;
}
.new_content .time,.author,.link_t{
  margin-right: 20rpx;
}