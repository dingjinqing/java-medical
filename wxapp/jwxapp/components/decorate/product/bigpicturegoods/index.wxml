<view class='product-item one_column' wx:if="{{m.col_type =='0'}}" style='{{m.goods_module_style == 1 ? "margin:none;padding:0 15rpx;" : ""}}background:{{m.goods_module_bg == 0 ? "": m.goods_bg_color}}'>
  <block wx:for="{{m.goodsListData}}" wx:key="key" wx:for-item="item" wx:for-index='index'>
    <view class='xunhuan_one' style='border-radius:{{m.if_radius == 1?"16rpx":"0"}};border:{{m.goods_module_style == 2 ? "1rpx solid #ddd":"none"}};box-shadow:{{m.goods_module_style == 1 ? "0 0 15rpx 6rpx #e5e5e5" : "none"}};' catchtap="{{item.goods_type == 10?'bindTopre':'bindJumpLink'}}" data-is_first_touch="{{m.is_first_touch}}" data-url="pages/item/item?goodsId={{item.goodsId}}" data-idx='{{m.cur_idx}}' data-presale_id='{{item.presale_id}}' data-goods_type='{{item.activityType}}' wx:if='{{ item.activityType !=3 && item.activityType !=1 && item.activityType !=5}}'>
      <view class='product-image' style='overflow-y:hidden;text-align:center;position:relative;height:{{m.goods_display == 2 ? "auto ":"300rpx"}}'>
        <include src="../goodscommon/labelcommon.wxml" />
      </view>
      <view class='product-name' wx:if="{{m.hide_name != '0'}}">
            <view class='top_title'>
              <view class='van-two-ellipsis'>{{item.goodsName}}</view>
            </view>
            <view class='title_label_container' style="bottom:54rpx">
              <view style="{{indexC!==0?'margin-left:10rpx':''}}" class='title_label' wx:key="indexC" wx:for="{{item.activityLabelData}}" wx:for-item="itemC" wx:for-index='indexC'>
            {{itemC.text}}
            </view>
            </view>
      </view>
      <view class='product-price'>
            <block wx:if="{{m.hide_price == 1}}">
              <view class='sale_price' wx:if="{{item.activityType != '10'}}" style='color:{{comColor}};'>￥{{item.realPrice===null?"0.00":item.realPrice}}</view>
              <view class='sale_price' wx:if="{{item.activityType == '10'}}" style='color:{{comColor}};'>￥{{item.shopPrice}}</view>
            </block>
            <block wx:if='{{ m.otherMessage===1}}'>
                <view class='market_price' wx:if="{{item.linePrice && item.linePrice != '0.00'}}">￥{{item.linePrice}}</view>
            </block>
      </view>
    </view>
  </block>
</view>