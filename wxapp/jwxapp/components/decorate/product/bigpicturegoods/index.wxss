@import "../goodscommon/goodslabel.wxss";
@import "/css/iconfont.wxss";
.one_column {
    margin: 0 auto;
    margin-bottom: 20rpx;
    padding: 10rpx 16rpx;
    overflow: hidden;
    padding-top: 20rpx;
  }
  
  .one_column .product-image {
    width: 720rpx;
    height: 300rpx;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }
  
  .one_column .xunhuan_one {
    margin-bottom: 20rpx;
    background: #fff;
    padding-bottom: 20rpx;
  }
  
  .one_column .product-image .image {
    width: 100%;
    height: 100%;
  }
  
  .one_column .product-name {
    /* width: 100%; */
    font-size: 26rpx;
    margin-bottom: 10rpx;
    height: 80rpx;
    padding: 0 10rpx;
    padding-top: 10rpx;
  }
  .one_column .product-price {
    font-size: 28rpx;
    color: #f66;
    font-weight: bold;
    padding: 0 10rpx;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .one_column .product-price .sale_price {
    font-size: 30rpx;
    font-weight: bold;
    margin-top: -4rpx;
    display: inline-block;
  }
  
  .one_column .product-price .market_price {
    font-weight: normal;
    margin-left: 10rpx;
    margin-top: 0;
    color: #999;
    text-decoration: line-through;
    float: right;
  }

  .one_column .xunhuan_one {
    position: relative;
    overflow: hidden;
  }
  .one_column .xunhuan_one .save_money {
    bottom: 8rpx;
  }
  .one_column .if_delete {
    position: absolute;
    bottom: 150rpx;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 24rpx;
    padding: 10rpx 0;
    width: 100%;
    text-align: center;
  }