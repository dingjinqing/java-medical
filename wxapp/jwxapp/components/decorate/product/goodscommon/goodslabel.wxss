.title_label_container{
  position: absolute;
  bottom: 0rpx;
  display: flex;
}
.title_label {
  padding: 1px 4px;
  border-radius: 2px;
  border: 1px solid #408080;
  color: #408080;
}
.right_buy_btn {
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: white;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.cart_buy_btn {
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: rebeccapurple;
  font-size: 24rpx;
  border-radius: 30rpx;
  background: white;
}

.market_price {
  font-weight: normal;
  margin-top: 0;
  color: #999;
  text-decoration: line-through;
  display: inline-block;
}