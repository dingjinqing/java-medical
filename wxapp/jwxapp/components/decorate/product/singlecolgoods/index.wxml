<wxs src="../../../../utils/i18n/i18n.wxs" module="i18n"></wxs>
<view class='product-item single_column' wx:if="{{m.col_type =='4'}}" style='{{m.goods_module_style == 1 ? "margin:none;padding:0 15rpx;" : ""}}background:{{m.goods_module_bg == 0 ? "": m.goods_bg_color}}'>
    <block wx:for="{{m.goodsListData}}" wx:key="key" wx:for-item="item" wx:for-index='index'>
      <view class='xunhuan_one' style='border-radius:{{m.if_radius == 1?"16rpx":"0"}};border:{{m.goods_module_style == 2 ? "1rpx solid #ddd":"none"}};box-shadow:{{m.goods_module_style == 1 ? "0 0 15rpx 6rpx #e5e5e5" : "none"}};' catchtap="{{item.activityType == 10?'bindTopre':'bindJumpLink'}}"
        data-is_first_touch="{{m.is_first_touch}}" data-url="pages/item/item?goodsId={{item.goodsId}}" data-idx='{{m.cur_idx}}' data-presale_id='{{item.presale_id}}' data-goods_type='{{item.activityType}}' >
        <view class='product-image'>
          <include src="../goodscommon/labelcommon.wxml" />
        </view>
        <view class='module_text'>
          <view class='product-name' wx:if="{{m.hide_name != '0'}}">
            <view class='top_title'>
              <view class='van-two-ellipsis'>{{item.goodsName}}</view>
            </view>
            <view class='title_label_container'>
              <view style="{{indexC!==0?('margin-left:10rpx;color:'+main_setting.comColor+';border-color:'+main_setting.comColor):('color:'+main_setting.comColor+';border-color:'+main_setting.comColor)}}" class='title_label' wx:key="indexC" wx:for="{{item.activityLabelData}}" wx:for-item="itemC" wx:for-index='indexC'>
            {{itemC.text}}
            </view>
            </view>
          </view>
          <view class='product-price' style="{{(m.other_message==1)?'flex-direction: column;align-items: flex-start':''}}">
            <block wx:if="{{m.hide_price == 1}}">
              <view class='sale_price' wx:if="{{item.activityType != '10'}}" style='color:{{main_setting.comColor}};'>￥{{item.realPrice===null?"0.00":item.realPrice}}</view>
              <view class='sale_price' wx:if="{{item.activityType == '10'}}" style='color:{{main_setting.comColor}};'>￥{{item.shopPrice}}</view>
            </block>
            <block wx:if='{{ m.other_message==1}}'>
                <view class='market_price' wx:if="{{item.linePrice && item.linePrice != '0.00'}}">￥{{item.linePrice}}</view>
            </block>
            <block wx:if="{{m.cart_btn == 1 && item.activityType != 10}}">
              <text class='cart_btn iconfont icontianjia' style='font-size:46rpx;color:{{main_setting.comColor}}' wx:if="{{m.cart_btn_choose == 0}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'></text>
              <text class='cart_btn iconfont icongouwuche1' style='font-size:46rpx;color:{{main_setting.comColor}}' wx:if="{{m.cart_btn_choose == 1}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'></text>
              <text class='cart_btn right_buy_btn' style='background:{{main_setting.comColor}};bottom:30rpx' wx:if="{{m.cart_btn_choose == 2}}" catchtap='bindAddCart' data-goods_id='{{item.goods_id}}'>{{i18n.$t(localePack,'components.decorate.grabAtOnce')}}</text>
              <text class='cart_btn cart_buy_btn' style='color:{{main_setting.comColor}};border:1px solid {{main_setting.comColor}};bottom:24rpx' wx:if="{{m.cart_btn_choose ==3}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'>{{i18n.$t(localePack,'components.decorate.purchase')}}</text>
            </block>
          </view>
        </view>
      </view>
    </block>
  </view>