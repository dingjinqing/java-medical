<view class="product-container person_reconmmend" style='{{m.goods_module_style == 1 ? "width:750rpx;margin-top:18rpx;" : ""}}'>
  <!-- 单列商品 -->
  <v-single-colGoods wx:if="{{m.col_type =='4'}}" module="{{module}}" />
  <!-- 双列商品 -->
  <v-double-colGoods wx:if="{{m.col_type =='1'}}" module="{{module}}" />
  <!-- 三列商品 -->
  <v-three-commodities wx:if="{{m.col_type =='2'}}" module="{{module}}" />
