@import "../../goodscommon/goodslabel.wxss";

.three_column {
    padding: 0 12rpx 0 16rpx;
      margin: 0 auto;
    }
.three_column::after {
    content: "";
    display: block;
    clear: both;
  }
  
  .three_column .every_module {
    float: left;
    width: 232rpx;
    margin: 0 5rpx 20rpx;
    background: #fff;
    box-sizing: border-box;
  }
  
  .three_column .every_module .product-image {
    width: 232rpx;
    height: 232rpx;
    margin: 0 auto;
    overflow-y: hidden;
    position: relative;
  }
  
  .three_column .every_module .product-image image {
    width: 100%;
    height: 100%;
  }
  
  .three_column .every_module .product-name {
    font-size: 26rpx;
    margin: 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 10rpx;
    height: 80rpx;
    width: 205rpx;
  }
  
  .three_column .every_module .product-price::after {
    content: "";
    display: block;
    clear: both;
  }
  
  .three_column .every_module .product-price {
    font-size: 11px;
    color: #f66;
    font-weight: bold;
    padding: 0 10rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
    height: 40rpx;
  }
  
  .three_column .every_module .product-price .sale_price {
    display: inline-block;
    margin-top: 3rpx;
  }
  
  .three_column .every_module .product-price .market_price {
    margin-top: 5rpx;
    font-weight: normal;
    float: right;
    text-decoration: line-through;
    color: #999;
    font-size: 23rpx;
  }
  .three_column .every_module {
    position: relative;
    overflow: hidden;
  }
  .three_column .every_module .save_money {
    top: 176rpx;
    width: 200rpx;
    font-size: 23rpx;
  }

  .three_column .every_module .orig_price {
    width: 20%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }
  
  .three_column .every_module  .pin_flag {
    height: 30rpx;
    margin-right: 5rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    margin-top: -8rpx;
  }
  .three_column .if_delete {
    position: absolute;
    bottom: 100rpx;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 24rpx;
    padding: 10rpx 0;
    width: 100%;
    text-align: center;
  }