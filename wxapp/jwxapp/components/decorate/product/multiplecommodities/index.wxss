@import "../goodscommon/goodslabel.wxss";
@import "/css/iconfont.wxss";
.mul_column {
    white-space: nowrap;
    height: 444rpx;
    margin-bottom: 20rpx;
    padding: 0 10rpx;
    padding-bottom: 15rpx;
  }
  
  .mul_column .every_module {
    width: 280rpx;
    height: 422rpx;
    margin-left: 0;
    margin-right: 15rpx;
    display: inline-block;
    float: none;
    vertical-align: top;
    margin-top:20rpx;
    margin-bottom: 20rpx; 
    background-color: #fff;
  }
  
  .mul_column .every_module .product-image {
    width: 280rpx;
    height: 280rpx;
    overflow: hidden;
    position: relative;
  }
  
  .mul_column .every_module .save_money {
    top: 227rpx;
  }
  
  .mul_column .every_module .product-name {
    width: 280rpx;
    height: 80rpx;
    position: relative;
  }
  .mul_column .product-price{
    display: flex;
    justify-content: space-between;
  }
  .mul_column .sale_price{
    padding-top: 12rpx;
  }
  .van-two-ellipsis{
    width: 200rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }