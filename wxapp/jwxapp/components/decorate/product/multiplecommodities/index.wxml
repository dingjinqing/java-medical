<scroll-view class='three_column mul_column' scroll-x="true" wx:if="{{m.col_type =='3' && m.goodsListData != ''}}" style="{{m.goods_module_style == 1 ? 'margin-bottom:0;height:470rpx;' : ''}}background:{{m.goods_module_bg == 0 ? '': m.goods_bg_color}}">
    <block wx:for="{{m.goodsListData}}" wx:key="index" wx:for-item="item" wx:for-index='idex'>
      <view class='every_module' style='border-radius:{{m.if_radius == 1?"12rpx":"0"}};border:{{m.goods_module_style == 2 ? "1rpx solid #ddd":"none"}};box-shadow:{{m.goods_module_style == 1 ? "0 0 15rpx 6rpx #e5e5e5" : "none"}};' catchtap="{{item.activityType == 10?'bindTopre':'bindJumpLink'}}"
        data-is_first_touch="{{m.is_first_touch}}" data-idx='{{m.cur_idx}}' data-url="pages/item/item?goodsId={{item.goodsId}}" data-presale_id='{{item.presale_id}}' data-goods_type='{{item.goodsType}}' wx:if='{{item.activityType !=3 && item.activityType !=1 && item.activityType !=5}}'>
        <view class="see_more" wx:if='{{idex == 6}}' catchtap='bindMenuClick'>
          <view>查看更多</view>
          <view class="see_line"></view>
          <view style="line-height:20rpx;">see more</view>
        </view>
        <view class='product-image' style='white-space:normal;'>
          <include src="../goodscommon/labelcommon.wxml" />
        </view>
        <view class='product-name' wx:if="{{m.hide_name != '0'}}">
            <view class='top_title'>
              <view class='van-two-ellipsis'>{{item.goodsName}}</view>
            </view>
            <view class='title_label_container' style="bottom:104rpx">
              <view style="{{indexC!==0?'margin-left:10rpx':''}}" class="{{indexC==0?'title_label':''}}" wx:key="indexC" wx:for="{{item.activityLabelData}}" wx:for-item="itemC" wx:for-index='indexC'>
            {{indexC===0?itemC.text:''}}
            </view>
            </view>
          </view>
        <view class='product-price'>
            <block wx:if="{{m.hide_price == 1}}">
              <view class='sale_price' wx:if="{{item.activityType != '10'}}" style='color:{{comColor}};'>￥{{item.realPrice===null?"0.00":item.realPrice}}</view>
              <view class='sale_price' wx:if="{{item.activityType == '10'}}" style='color:{{comColor}};'>￥{{item.shopPrice}}</view>
            </block>
            <block wx:if='{{ m.otherMessage===1}}'>
                <view class='market_price' wx:if="{{item.linePrice && item.linePrice != '0.00'}}">￥{{item.linePrice}}</view>
            </block>
            <block wx:if="{{m.cart_btn == 1 && item.activityType != 10}}">
              <text class='cart_btn iconfont icontianjia' style='font-size:46rpx;color:{{comColor}}' wx:if="{{m.cart_btn_choose == 0}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'></text>
              <text class='cart_btn iconfont icongouwuche1' style='font-size:46rpx;color:{{comColor}}' wx:if="{{m.cart_btn_choose == 1}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'></text>
              <text class='cart_btn right_buy_btn' style='background:{{comColor}};bottom:30rpx;' wx:if="{{m.cart_btn_choose == 2}}" catchtap='bindAddCart' data-goods_id='{{item.goods_id}}'>马上抢</text>
              <text class='cart_btn cart_buy_btn' style='color:{{comColor}};border:1px solid {{comColor}};bottom:24rpx;width:88rpx;height:40rpx;line-height:40rpx' wx:if="{{m.cart_btn_choose ==3}}" catchtap='bindAddCart' data-goods_id='{{item.goodsId}}'>购买</text>
            </block>
          </view>
      </view>
    </block>
  </scroll-view>
