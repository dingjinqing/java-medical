.card {
  width: 720rpx;
  margin: 0 auto;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.card>.view {
  width: 100%;
  border-radius: 16rpx;
  background: #ecc98f;
  color: #fff;
  padding: 0 40rpx;
  position: relative;
  overflow: hidden;
  font-size: 28rpx;
  box-sizing: border-box;
}

.card_type {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.1);
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-bottom-left-radius: 16rpx;
  font-size: 24rpx;
}

.card_content {
  padding: 40rpx 0;
  box-sizing: border-box;
  position: relative;
}

.card_shop_icon {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.card_shop_icon .image {
  width: 100%;
  height: 100%;
}

.card_content_right {
  float: left;
  margin-left: 20rpx;
  box-sizing: border-box;
}

.card_content_right .text {
  font-size: 24rpx;
  margin: 10rpx 0 0 0;
  box-sizing: border-box;
}

.card_bottom {
  text-align: right;
  line-height: 40rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  box-sizing: border-box;
  border-top: 1px solid rgba(255, 255, 255, 0.4);
}

.card_bottom .text {
  display: inline-block;
  border: 1px solid #fff;
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  margin-left: 15rpx;
  box-sizing: border-box;
}

.card_out {
  position: absolute;
  bottom: 0;
  right: 0;
  overflow: hidden;
}

.card_out .image {
  width: 130rpx;
}

.card_price {
  position: absolute;
  right: 0;
  bottom: 0;
}

.clearfix {
  overflow: auto;
  _height: 1%;
}
