.textimg_container{
  background-color: #fff;
  padding: 20rpx;
  width: 730rpx;
  margin: 10rpx auto;
  box-sizing: border-box;
  border-radius: 16rpx;
}
.textimg_container .small_image{
    width: 180rpx;
    height: 180rpx;
}
.textimg_container .big_image{
    width: 300rpx;
    height: 300rpx;
}
.textimg_container .small_text{
    overflow: hidden;
    word-break: break-all;
    height: 180rpx;
}
