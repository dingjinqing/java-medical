.textimg_container .big_text{
    overflow: hidden;
    word-break: break-word;
    height: 300rpx;
}
.textimg_container .s_i_l{
    float: left;
    margin-right: 20rpx;
}
.textimg_container .s_i_r{
    float: right;
}
.textimg_container .b_i_l{
    float: left;
    margin-right: 20rpx;
}
.textimg_container .b_i_r{
    float: right;
}
.textimg_container .s_t_r{
    margin-right: 200rpx;
}
.textimg_container .b_t_r{
    margin-right: 320rpx;
}
