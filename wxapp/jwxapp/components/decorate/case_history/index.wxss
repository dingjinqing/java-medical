@import '/css/iconfont.wxss';
.case-history-content{
  padding: 32rpx 15rpx 0;
  display: flex;
  flex-direction: column;
}
.case-history-list{
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.case-history-list + .case-history-list{
  margin-top: 20rpx;
}
.list-item{
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: column;
  line-height: 60rpx;
}
.list-item:nth-child(2){
  padding-top: 0;
}
.list-item+.list-item{
  border-bottom: 2rpx solid #eee;
}
.list-item:last-of-type{
  border-bottom: none;
}
.list-item.title{
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  line-height: 100rpx;
  padding-bottom: 0;
  padding-top: 0;
}
.list-item.title > text{
  align-self: center;
}
.list-item > .item-line{
  display: flex;
  align-items: center;
}
.list-item > .item-line > text{
  color: #333;
}
.list-item > .item-line > .item-dot{
  border: 4rpx solid skyblue;
  border-radius: 50%;
  height: 10rpx;
  width: 10rpx;
  margin-right: 20rpx;
}
.list-item > .item-info{
  display: flex;
  flex-direction: column;
}
.list-item > .item-line > .item-title{
  font-weight: 600;
  color: #333;
}
.prescription-module-title{
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.prescription-module-title > image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 24rpx;
}
.prescription-module-title > text{
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.prescription-module-title > text:first-of-type{
  margin-right: auto;
}
.prescription-module-title > text.more{
  font-size: 26rpx;
  color: #656565;
  font-weight: 400;
}
.item-info {
  padding-left: 36rpx;
}
.item-info > text{
  color: #333;
}
.doctor-info{
  display: flex;
}
.doctor-info > text{
  color: #999;
}
.doctor-info > text:first-of-type{
  margin-right: auto;
}
.no-content{
  height: 512rpx;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-content > image{
  width: 380rpx;
  height: 256rpx;
}
.no-content > .no-content-tips{
  margin-top: 20rpx;
  color: #333;
}
.no-content > .update-case{
  width: 240rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #26C4BC;
  text-align: center;
  margin-top: 30rpx;
  vertical-align: middle;
}
.no-content > .update-case > text{
  color: #fff;
}
.no-content > .update-case > .iconjiantou{
  font-size: 30rpx;
}
.top-has-radius{
  padding-top: 50rpx;
  border-radius: 16rpx 16rpx 0 0;
  
}
.top-is-adver{
  margin-top:-20rpx;
  
}