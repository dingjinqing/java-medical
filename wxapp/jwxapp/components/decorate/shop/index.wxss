.shop-container{
  width: 100%;
  height: 338rpx;
  margin-bottom: 20rpx;
  background-size: 100%;
  overflow-x: hidden;
  position: relative;
}
.back_img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.shop-container .score_logo{
  position: absolute;
  width:110rpx;
  height:110rpx;
  top:110rpx;
  left:25rpx;
  z-index: 999;
  background: #fff;
  border-radius: 10rpx;
}
.shop-container .score_logo .image {
  position: absolute;
  left: 15%;
  top: 15%;
  width: 70%;
  height: 70%;
}
.shop-container .store_name{
  position: absolute;
  top: 100rpx;
  left: 160rpx;
  font-size: 32rpx;
  z-index: 1;
  color: #fff;
  font-weight: bold;
}
.shop-container .store_content {
  position: absolute;
  top: 180rpx;
  left: 160rpx;
  font-size: 22rpx;
  z-index: 1;
  color: #fff;
}





















