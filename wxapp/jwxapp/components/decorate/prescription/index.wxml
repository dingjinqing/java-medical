<view class="prescription-content">
	<view class="prescription-module-title">
		<image src="{{imageUrl}}image/wxapp/prescription-icon1.png"></image>
		<text>我的处方</text>
		<text class="more">更多</text>
	</view>
	<view class="prescription-item" bindtap="handleShowDialog" wx:if="{{m.prescriptionListData.length}}">
		<view class="item-title" style="background:#26c4bc url({{imageUrl}}image/wxapp/inedx-prescription-bg.png) no-repeat left top/100% 80rpx; ">电子处方1</view>
		<view class="item-list-content">
			<view class="item-list">
				<view class="list-item">
					<text class="list-item-dot"></text>
					<view class="list-item-content">
						诊断：原发性高血压
					</view>
				</view>
				<view class="list-item">
					<text class="list-item-dot"></text>
					<view class="list-item-content">
						科室：神经科
					</view>
				</view>
			</view>
		</view>
    <view class="doctor-info">
      <text class="doctor-name">医师：张三</text>
      <text class="item-date">日期：2020.06.30</text>
    </view>
	</view>
	<view class="no-content" wx:else>
		暂无内容
	</view>
</view>

<v-prescription-dialog show="{{showPrescription}}" />