<view class='product-item one_column' wx:if="{{m.col_type =='0'}}" style='{{m.goods_module_style == 1 ? "margin:none;padding:0 15rpx;" : ""}}background:{{m.goods_module_bg == 0 ? "": m.goods_bg_color}}'>
  <block wx:for="{{m.goodsListData}}" wx:key="key" wx:for-item="item" wx:for-index='index'>
    <view class='xunhuan_one' style='border-radius:{{m.if_radius == 1?"16rpx":"0"}};border:{{m.goods_module_style == 2 ? "1rpx solid #ddd":"none"}};box-shadow:{{m.goods_module_style == 1 ? "0 0 15rpx 6rpx #e5e5e5" : "none"}};' catchtap="{{item.goods_type == 10?'bindTopre':'bindJumpLink'}}" data-is_first_touch="{{m.is_first_touch}}" data-url="pages/item/item?good_id={{item.goodsId}}" data-idx='{{m.cur_idx}}' data-presale_id='{{item.presale_id}}' data-goods_type='{{item.goodsType}}' wx:if='{{ item.goods_type !=3 && item.goods_type !=1 && item.goods_type !=5}}'>
      <view class='product-image' style='overflow-y:hidden;text-align:center;position:relative;height:{{m.goods_display == 2 ? "auto ":"300rpx"}}'>
        <image class="sell_out" wx:if='{{item.goods_number == 0}}' src="{{m.imgUrl}}image/wxapp/goods_sell_out.png"></image>
        <include src="../goodscommon/labelcommon.wxml" />
        <image src='{{item.goodsImg}}' mode='widthFix' lazy-load="{{true}}" wx:if="{{m.goods_display==1}}" style="width:300rpx;" class="item_img"></image>
        <image src='{{item.goodsImg}}' mode='widthFix' lazy-load="{{true}}" wx:else class="item_img"></image>
      </view>
      <view class='product-name' wx:if='{{m.hide_name == 1}}'></view>
      <view class='product-name' wx:if='{{m.hide_name != 0}}'>
        <block wx:if='{{item.goodsType == 10 || item.goodsTags != ""}}'>
          <view class='van-ellipsis'>{{item.goodsName}}</view>
          <view class='title_label'>
            <view class='pin_flag' wx:if='{{item.goodsType == 10}}' style='color:{{comColor}};border-color:{{comColor}}'>
              预售
            </view>
            <view class='pin_flag' wx:if='{{item.goodsTags != ""}}' style='color:{{comColor}};border-color:{{comColor}}'>
              领券减￥{{item.goodsTags[0]}}
            </view>
            <view class='pin_flag' wx:if='{{item.goodsTags[1] != undefined && item.goodsType != 10}}' style='color:{{comColor}};border-color:{{comColor}}'>
              {{item.goodsTags[1]}}
            </view>
          </view>
        </block>
        <block wx:else>
          <view class='van-two-ellipsis'>{{item.goodsName}}</view>
        </block>
      </view>
      <view class='product-price'>
        <block wx:if="{{m.hide_price != 1}}">
          <view class='sale_price' wx:if='{{item.goodsType != 10}}' style='color:{{comColor}};'>
            ￥{{item.realPrice}}
          </view>
          <view class='sale_price' wx:if='{{item.goodsType == 10}}' style='color:{{comColor}};'>
            ￥{{item.shopPrice}}
          </view>
        </block>
        <block wx:if='{{m.other_message == 0  && m.cart_btn != 0}}'>
          <block wx:if="{{m.show_market == 1}}">
            <view class='market_price' wx:if="{{item.linePrice != undefined && item.linePrice != '0.00'}}">
              ￥{{item.linePrice}}
            </view>
          </block>
        </block>
      </view>
    </view>
  </block>
</view>